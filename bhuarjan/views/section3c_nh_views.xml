<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 3C (NH) List View -->
    <record id="view_section3c_nh_list" model="ir.ui.view">
        <field name="name">bhu.section3c.nh.list</field>
        <field name="model">bhu.section3c.nh</field>
        <field name="arch" type="xml">
            <list string="Section 3C (NH)" delete="1">
                <field name="name" string="Reference"/>
                <field name="department_id" string="Department"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="objection_date" string="Objection Date"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'" 
                       decoration-info="state == 'submitted'" 
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Section 3C (NH) Form View -->
    <record id="view_section3c_nh_form" model="ir.ui.view">
        <field name="name">bhu.section3c.nh.form</field>
        <field name="model">bhu.section3c.nh</field>
        <field name="arch" type="xml">
            <form string="Section 3C (NH) / धारा 3सी (राष्ट्रीय राजमार्ग)">
                <header>
                    <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                            icon="fa-paper-plane"
                            groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                            invisible="not sdm_signed_file or state != 'draft'"
                            confirm="Are you sure want to submit this record."/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                            icon="fa-check"
                            groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'submitted' or not collector_signed_file"
                            confirm="Are you sure want to approve this record."/>
                    <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                            icon="fa-arrow-left"
                            groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'submitted'"
                            confirm="Are you sure want to send back this record."/>
                    <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                            icon="fa-refresh"
                            groups="bhuarjan.group_bhuarjan_sdm"
                            invisible="state != 'send_back'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" 
                           options="{'clickable': True}" class="oe_right"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-exclamation-triangle" style="margin-right: 10px;"></i>Section 3C (Objection) (NH) / धारा 3सी (आपत्ति) (राष्ट्रीय राजमार्ग)
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="village_domain" invisible="1"/>
                            <field name="project_domain" invisible="1"/>
                            <div class="mt-2 mb-3 p-2 rounded w-100" style="background-color: #e9ecef; border-left: 4px solid #8B4513; color: #495057; clear: both;">
                                 <i class="fa fa-info-circle me-1"></i>
                                 Creating Section 3C (Objection) (NH) for Department <strong><field name="department_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong>, 
                                 Project <strong><field name="project_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong> and 
                                 Village <strong><field name="village_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong>
                            </div>
                            <group invisible="1">
                                <field name="department_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                                <field name="project_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                                <field name="village_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </group>
                    <group string="Objection Details / आपत्ति विवरण">
                        <field name="objection_date"/>
                        <field name="objection_number"/>
                        <field name="objection_details" widget="text"/>
                    </group>
                    <group string="Resolution Details / समाधान विवरण">
                        <field name="resolution_date"/>
                        <field name="resolution_details" widget="text"/>
                    </group>
                    <group string="Files / फ़ाइलें">
                        <field name="objection_file" filename="objection_filename"/>
                        <field name="objection_filename" invisible="1"/>
                        <field name="resolution_file" filename="resolution_filename"/>
                        <field name="resolution_filename" invisible="1"/>
                        <field name="sdm_signed_file" filename="sdm_signed_filename"/>
                        <field name="sdm_signed_filename" invisible="1"/>
                        <field name="collector_signed_file" filename="collector_signed_filename"/>
                        <field name="collector_signed_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Enter any additional notes..."/>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Section 3C (NH) Search View -->
    <record id="view_section3c_nh_search" model="ir.ui.view">
        <field name="name">bhu.section3c.nh.search</field>
        <field name="model">bhu.section3c.nh</field>
        <field name="arch" type="xml">
            <search string="Section 3C (NH)">
                <field name="name"/>
                <field name="department_id"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Sent Back" name="send_back" domain="[('state', '=', 'send_back')]"/>
            </search>
        </field>
    </record>

    <!-- Section 3C (NH) Action -->
    <record id="action_section3c_nh" model="ir.actions.act_window">
        <field name="name">Section 3C (NH)</field>
        <field name="res_model">bhu.section3c.nh</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section3c_nh_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 3C (NH) record!
            </p>
        </field>
    </record>
</odoo>

