<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Views -->
    <record id="view_bhu_project_list" model="ir.ui.view">
        <field name="name">bhu.project.list</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <list string="Projects">
                <field name="name"/>
                <field name="code"/>
                <field name="budget"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_bhu_project_form" model="ir.ui.view">
        <field name="name">bhu.project.form</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <form string="Project">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_uuid" readonly="1" placeholder="UUID will be generated automatically"/>
                            <button name="action_regenerate_uuid" type="object" string="Regenerate UUID / UUID पुनर्जीवित करें" class="oe_link"/>
                            <field name="code"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="budget"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="village_ids" widget="many2many" 
                               options="{'no_create_edit': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bhu_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">bhu.project</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Department Views -->
    <record id="view_bhu_department_list" model="ir.ui.view">
        <field name="name">bhu.department.list</field>
        <field name="model">bhu.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
                <field name="code"/>
                <field name="head_of_department"/>
                <field name="contact_number"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_bhu_department_form" model="ir.ui.view">
        <field name="name">bhu.department.form</field>
        <field name="model">bhu.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="head_of_department"/>
                        </group>
                        <group>
                            <field name="contact_number"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="address"/>
                    </group>
                    <group>
                        <field name="project_ids" widget="many2many" 
                               options="{'no_create_edit': True}"
                               string="Projects / परियोजनाएं"/>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>

            </form>
        </field>
    </record>

    <record id="action_bhu_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">bhu.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Village Line Views -->
    <record id="view_bhu_village_line_form" model="ir.ui.view">
        <field name="name">bhu.village.line.form</field>
        <field name="model">bhu.village.line</field>
        <field name="arch" type="xml">
            <form string="Village">
                <sheet>
                    <group>
                        <group>
                            <field name="district_id" options="{'no_create':True,'no_create_edit':True}"/>
                            <field name="village_id" options="{'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bhu_village_line_list" model="ir.ui.view">
        <field name="name">bhu.village.line.list</field>
        <field name="model">bhu.village.line</field>
        <field name="arch" type="xml">
            <list string="Villages">
                <field name="village_id"/>
                <field name="district_id"/>
            </list>
        </field>
    </record>

</odoo>
