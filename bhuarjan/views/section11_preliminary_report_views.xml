<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 11 Preliminary Report List View -->
    <record id="view_section11_preliminary_report_list" model="ir.ui.view">
        <field name="name">bhu.section11.preliminary.report.list</field>
        <field name="model">bhu.section11.preliminary.report</field>
        <field name="arch" type="xml">
            <list string="Section 11 Notifications" delete="1" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <header>
                    <button name="action_open_wizard" string="Generate" type="object" icon="fa-plus" 
                            class="oe_highlight" title="Generate new Section 11 Preliminary Report"/>
                </header>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="notification_number" string="Notification Number"/>
                <field name="state" widget="badge" string="Status" decoration-success="state == 'signed'" decoration-info="state == 'generated'" decoration-muted="state == 'draft'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="signed_date" string="Signed Date"/>
            </list>
        </field>
    </record>

    <!-- Section 11 Preliminary Report Form View -->
    <record id="view_section11_preliminary_report_form" model="ir.ui.view">
        <field name="name">bhu.section11.preliminary.report.form</field>
        <field name="model">bhu.section11.preliminary.report</field>
        <field name="arch" type="xml">
            <form string="Section 11 Preliminary Report" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                <header>
                    <group>
                        <!-- Submit Button for SDM (in draft state) -->
                        <button name="action_submit" string="Submit to Collector" type="object" class="btn-success" 
                                icon="fa-paper-plane"
                                groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                invisible="not sdm_signed_file or state != 'draft'"
                                confirm="Are you sure want to submit this record."/>
                        
                        <!-- Action Buttons: Approve, Send Back -->
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                icon="fa-check"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted' or not collector_signed_file"/>
                        <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                icon="fa-arrow-left"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted'"/>
                        
                        <!-- Resubmit button (for sent back records) -->
                        <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                icon="fa-refresh"
                                groups="bhuarjan.group_bhuarjan_sdm"
                                invisible="state != 'send_back'"/>
                    </group>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-file-text" style="margin-right: 10px;"></i>Section 11 Preliminary Report / धारा 11 प्रारंभिक रिपोर्ट
                        </h1>
                    </div>
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="1"/>
                    </group>
                    <group col="2">
                        <group>
                            <field name="project_id" required="1" 
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   options="{'no_create_edit': True}"/>
                            <field name="village_id" required="1"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   options="{'no_create_edit': True, 'no_quick_create': True}"
                                   context="{'default_project_id': project_id}"
                                   placeholder="Select one village..."
                                   domain="village_domain"/>
                            <field name="notification_number" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_area_acquired" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Section 11 Documents / धारा 11 दस्तावेज़">
                            <!-- SDM Section -->
                            <group string="SDM Section / SDM अनुभाग" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 11 Documents" style="margin-right: 50px; padding-right: 20px;">
                                        <!-- Download Unsigned Section 11 -->
                                        <button name="action_download_unsigned_file" string="Download Section 11 (Unsigned)" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Section 11 Report (Unsigned)"
                                                style="width: 100%; margin-bottom: 10px;"/>
                                        
                                        <!-- Download SDM Signed Section 11 -->
                                        <button name="action_download_sdm_signed_file" string="Download SDM Signed" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download SDM Signed Section 11"
                                                invisible="not sdm_signed_file"
                                                style="width: 100%;"/>
                                    </group>
                                    <group string="Upload SDM Signed Section 11" style="margin-left: 50px; padding-left: 20px;">
                                        <!-- Upload SDM Signed File (editable only in draft state) -->
                                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                               string="Upload SDM Signed Section 11"
                                               widget="binary"
                                               readonly="state != 'draft'"
                                               placeholder="Upload Signed Section 11 Report"
                                               help="Upload the signed Section 11 document from SDM"
                                               invisible="sdm_signed_file"/>
                                        <field name="sdm_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file -->
                                        <group invisible="not sdm_signed_file or state != 'draft'">
                                            <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                                   widget="binary"
                                                   readonly="1"
                                                   nolabel="1"/>
                                        </group>
                                    </group>
                                </group>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin" style="margin-top: 40px;">
                                <group col="2">
                                    <group string="Download Section 11 Documents" style="margin-right: 50px; padding-right: 20px;">
                                        <!-- Download Collector Signed Section 11 -->
                                        <button name="action_download_collector_signed_file" string="Download Collector Signed" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Collector Signed Section 11"
                                                invisible="not collector_signed_file"
                                                style="width: 100%; margin-bottom: 10px;"/>
                                        
                                        <!-- Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned) -->
                                        <button name="action_download_latest_pdf" string="Download Latest PDF Report" type="object" 
                                                class="btn-info" icon="fa-download"
                                                title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"
                                                invisible="not sdm_signed_file and not collector_signed_file"
                                                style="width: 100%;"/>
                                    </group>
                                    <group string="Upload Collector Signed Section 11" style="margin-left: 50px; padding-left: 20px;">
                                        <!-- Upload Collector Signed File (editable only in submitted state) -->
                                        <field name="collector_signed_file" filename="collector_signed_filename" 
                                               string="Upload Collector Signed Section 11"
                                               widget="binary"
                                               readonly="state != 'submitted'"
                                               placeholder="Upload Section 11 Approval Letter"
                                               help="Upload the signed Section 11 approval document from Collector"
                                               invisible="collector_signed_file"/>
                                        <field name="collector_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file -->
                                        <group invisible="not collector_signed_file or state != 'submitted'">
                                            <field name="collector_signed_file" filename="collector_signed_filename" 
                                                   widget="binary"
                                                   readonly="1"
                                                   nolabel="1"/>
                                        </group>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Questions / प्रश्न">
                            <group>
                                <group string="Paragraph 2: Land Map Inspection / धारा 2: भूमि मानचित्र निरीक्षण (From Project Master)">
                                    <field name="map_inspection_location" nolabel="1" readonly="1"/>
                                </group>
                                <group string="(छः) धारा 12 द्वारा प्राधिकृत अधिकारी / Officer authorized by Section 12 (From Project Master)">
                                    <field name="authorized_officer" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(दस) पुनर्वास प्रशासक / Rehabilitation Administrator (From Project Master)">
                                    <field name="rehab_admin_name" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(आठ) कितने परिवारों का विस्थापन निहित है। / How many families are displaced? (From Project Master)">
                                    <field name="is_displacement" nolabel="1" readonly="1"/>
                                    <field name="affected_families_count" 
                                           invisible="not is_displacement"
                                           readonly="1"
                                           string="Number of Families / परिवारों की संख्या"/>
                                </group>
                            </group>
                            <group string="(नौ) क्या प्रस्तावित परियोजना के लिए अधिनियम 2013 के अध्याय &quot;दो&quot; एवं &quot;तीन&quot; के प्रावधानों से छूट प्रदान की गई है। / Has exemption been granted from the provisions of Chapters &quot;Two&quot; and &quot;Three&quot; of the Act 2013 for the proposed project? (From Project Master)">
                                <field name="is_exemption" nolabel="1" readonly="1"/>
                                <group string="Exemption Details / छूट विवरण" 
                                       invisible="section5_text_type != 'exemption'">
                                    <field name="exemption_details" widget="text" nolabel="1" readonly="1"/>
                                </group>
                                <group string="SIA Justification / SIA औचित्य" 
                                       invisible="section5_text_type != 'sia_justification'">
                                    <field name="sia_justification" widget="text" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Villages / ग्राम">
                            <field name="land_parcel_ids" nolabel="1">
                                <list string="Villages">
                                    <field name="khasra_number" string="Khasra Number / खसरा नंबर"/>
                                    <field name="area_in_hectares" string="Area (Hectares) / क्षेत्रफल (हेक्टेयर)"/>
                                    <field name="survey_number" string="Survey Number / सर्वे नंबर"/>
                                    <field name="survey_date" string="Survey Date / सर्वे दिनांक"/>
                                    <field name="district_id" string="District / जिला"/>
                                    <field name="village_id" string="Village / ग्राम"/>
                                    <field name="project_id" string="Project / परियोजना"/>
                                    <field name="survey_state" string="Status / स्थिति" widget="badge"
                                           decoration-success="survey_state == 'approved'"
                                           decoration-info="survey_state == 'submitted'"
                                           decoration-warning="survey_state == 'draft'"
                                           decoration-danger="survey_state == 'rejected'"
                                           decoration-muted="survey_state == 'locked'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 11 Preliminary Report Search View -->
    <record id="view_section11_preliminary_report_search" model="ir.ui.view">
        <field name="name">bhu.section11.preliminary.report.search</field>
        <field name="model">bhu.section11.preliminary.report</field>
        <field name="arch" type="xml">
            <search string="Section 11 Preliminary Reports">
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="notification_number"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Has Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Reports" name="my_reports" domain="[('create_uid', '=', uid)]"/>
                <filter string="All Reports" name="all" domain="[]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Village" name="group_by_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Section 11 Preliminary Report Action -->
    <record id="action_section11_preliminary_report" model="ir.actions.act_window">
        <field name="name">Section 11 Notifications</field>
        <field name="res_model">bhu.section11.preliminary.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section 11 Preliminary Report!
            </p>
            <p>
                Create and manage Section 11 preliminary reports for land acquisition. You can generate PDFs and upload signed documents.
            </p>
            <p>
                Use the "Generate" button to create a new report via the wizard.
            </p>
        </field>
    </record>
    
    <!-- Action to generate new report via wizard -->
    <record id="action_generate_section11_preliminary" model="ir.actions.act_window">
        <field name="name">Generate Section 11 Preliminary Report</field>
        <field name="res_model">bhu.section11.preliminary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

