<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Land Type List View -->
    <record id="view_bhu_land_type_list" model="ir.ui.view">
        <field name="name">bhu.land.type.list</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <list string="Land Types" decoration-muted="not active">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Land Type Form View -->
    <record id="view_bhu_land_type_form" model="ir.ui.view">
        <field name="name">bhu.land.type.form</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <form string="Land Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter land type name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="🏷️ Basic Information" class="oe_group_col_2">
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group string="📝 Description" class="oe_group_col_2">
                            <field name="description" widget="text" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Land Type Search View -->
    <record id="view_bhu_land_type_search" model="ir.ui.view">
        <field name="name">bhu.land.type.search</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <search string="Search Land Types">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Land Type Action -->
    <record id="action_bhu_land_type" model="ir.actions.act_window">
        <field name="name">Land Types</field>
        <field name="res_model">bhu.land.type</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_land_type_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Land Type!
            </p>
            <p>
                Define different types of land for rate calculation purposes.
            </p>
        </field>
    </record>

    <!-- Rate Master List View -->
    <record id="view_bhu_rate_master_list" model="ir.ui.view">
        <field name="name">bhu.rate.master.list</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <list string="Rate Master" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='inactive'">
                <field name="name"/>
                <field name="district_id"/>
                <field name="village_id"/>
                <field name="land_type_id"/>
                <field name="irrigation_status"/>
                <field name="road_proximity"/>
                <field name="rate_per_hectare"/>
                <field name="effective_from"/>
                <field name="effective_to"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Rate Master Form View -->
    <record id="view_bhu_rate_master_form" model="ir.ui.view">
        <field name="name">bhu.rate.master.form</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <form string="Rate Master - Land Valuation Rates">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_deactivate" string="Deactivate" type="object" class="btn-secondary" invisible="state != 'active'"/>
                    <button name="action_reset" string="Reset to Draft" type="object" class="btn-warning" invisible="state != 'inactive'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_activate" invisible="state != 'draft'">
                            <field name="state" widget="statinfo" string="Status"/>
                        </button>
                    </div>
                    
                    <div class="oe_clear"/>
                    
                    <group>
                        <group string="📍 Location Information" class="oe_group_col_2">
                            <field name="district_id" widget="many2one_tags"/>
                            <field name="village_id" widget="many2one_tags"/>
                        </group>
                        <group string="🏞️ Land Classification" class="oe_group_col_2">
                            <field name="land_type_id" widget="many2one_tags"/>
                            <field name="irrigation_status" widget="radio" options="{'horizontal': true}"/>
                            <field name="road_proximity" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="💰 Rate Information" class="oe_group_col_2">
                            <field name="rate_per_hectare" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="🌱 Additional Factors" class="oe_group_col_2">
                            <field name="soil_quality" widget="radio" options="{'horizontal': true}"/>
                            <field name="market_demand" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="📅 Effective Dates" class="oe_group_col_2">
                            <field name="effective_from" widget="date"/>
                            <field name="effective_to" widget="date"/>
                        </group>
                        <group string="🏢 Company Information" class="oe_group_col_2">
                            <field name="company_id" widget="many2one_tags"/>
                            <field name="company_name"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="📝 Additional Information" class="oe_group_col_2">
                            <field name="remarks" widget="text" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Rate Master Search View -->
    <record id="view_bhu_rate_master_search" model="ir.ui.view">
        <field name="name">bhu.rate.master.search</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <search string="Search Rate Master">
                <field name="name"/>
                <field name="district_id"/>
                <field name="village_id"/>
                <field name="land_type_id"/>
                <field name="irrigation_status"/>
                <field name="road_proximity"/>
                <field name="rate_per_hectare"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]"/>
                <filter string="Current Rates" name="current" domain="[('effective_from', '&lt;=', context_today()), '|', ('effective_to', '=', False), ('effective_to', '&gt;=', context_today())]"/>
                <filter string="This Month" name="this_month" domain="[('effective_from', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Land Type" name="group_land_type" context="{'group_by': 'land_type_id'}"/>
                    <filter string="Irrigation Status" name="group_irrigation" context="{'group_by': 'irrigation_status'}"/>
                    <filter string="Road Proximity" name="group_road" context="{'group_by': 'road_proximity'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Rate Master Action -->
    <record id="action_bhu_rate_master" model="ir.actions.act_window">
        <field name="name">Rate Master</field>
        <field name="res_model">bhu.rate.master</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_rate_master_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Rate Master record!
            </p>
            <p>
                Set land valuation rates for villages based on land type, irrigation status, and road proximity.
            </p>
        </field>
    </record>
</odoo>
