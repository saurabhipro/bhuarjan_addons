<odoo>
    <data>
                <!-- Circle Views -->
        <record id="bhu_circle_view_list" model="ir.ui.view">
            <field name="name">bhu.circle.view.list</field>
            <field name="model">bhu.circle</field>
            <field name="arch" type="xml">
                <list string="circles / तहसील">
                    <field name="name"/>
                    <field name="state_id"/>
                    <field name="district_id"/>
                    <field name="sub_division_id"/>
                    <field name="tehsil_id"/>
                </list>
            </field>
        </record>

        <record id="bhu_circle_view_form" model="ir.ui.view">
            <field name="name">bhu.circle.view.form</field>
            <field name="model">bhu.circle</field>
            <field name="arch" type="xml">
                <form string="circle / तहसील">
                    <sheet>
                        <group>
                            <group>
                                <field name="state_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="district_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="sub_division_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="tehsil_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
                </form>
            </field>
        </record>

        <record id="bhu_circle_view_search" model="ir.ui.view">
            <field name="name">bhu.circle.view.search</field>
            <field name="model">bhu.circle</field>
            <field name="arch" type="xml">
                <search string="Search Circles / Circle खोजें">
                        <field name="state_id"/>
                        <field name="district_id"/>
                        <field name="sub_division_id"/>
                        <field name="tehsil_id"/>
                        <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_bhu_circle" model="ir.actions.act_window">
            <field name="name">circles / तहसील</field>
            <field name="res_model">bhu.circle</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="bhu_circle_view_search"/>
        </record>
    </data>
</odoo>