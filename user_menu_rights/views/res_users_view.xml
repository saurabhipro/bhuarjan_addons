<odoo>
    <record id="inherit_res_users_form_menu_rights" model="ir.ui.view">
        <field name="name">inherit.res.users.form.menu.rights</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Show Menus">
                    <field name="user_menu_access_ids" options="{'no_create':1,'no_create_edit':1}"/>
                    <field name="parent_show_menu_access_ids" invisible="1" domain="[('parent_id','=',False)]" options="{'no_create':1,'no_create_edit':1}"/>
                    <field name="show_menu_access_ids" invisible="1" options="{'no_create':1,'no_create_edit':1}"/>
                </page>
            </xpath>
        </field>
    </record>

    <!-- res.users.menu.access tree view -->
    <record id="res_users_menu_access_tree_view_in2it" model="ir.ui.view">
        <field name="name">res.users.menu.access.tree.view.in2it</field>
        <field name="model">res.users.menu.access</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- res.users.menu.access form view -->
    <record id="res_users_menu_access_form_view_in2it" model="ir.ui.view">
        <field name="name">res.users.menu.access.form.view.in2it</field>
        <field name="model">res.users.menu.access</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Menus">
                            <field name="menu_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action res.users.menu.access -->
    <record id="action_res_users_menu_access" model="ir.actions.act_window">
        <field name="name">User Menu Access</field>
        <field name="res_model">res.users.menu.access</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_user_access"
              name="Menu Accessibility"
              action="user_menu_rights.action_res_users_menu_access"
              sequence="10"
              parent="base.menu_users"/>
</odoo>