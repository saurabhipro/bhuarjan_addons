<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Group Dashboard Action -->
        <record id="action_group_dashboard" model="ir.actions.client">
            <field name="name">Group Dashboard</field>
            <field name="tag">bhuarjan.group_dashboard</field>
            <field name="target">current</field>
        </record>

        <!-- Hidden Group Dashboard Menu -->
        <menuitem
            id="menu_group_dashboard"
            name="Group Dashboard (Hidden)"
            parent="menu_bhu_root"
            action="action_group_dashboard"
            sequence="0"
            active="False"
            groups="base.group_system"/>

        <!-- Visible Group Dashboard Menu for Administrator -->
        <menuitem
            id="menu_group_dashboard_admin"
            name="Group Dashboard"
            parent="menu_bhu_root"
            action="action_group_dashboard"
            sequence="99"
            groups="base.group_system"/>
    </data>
</odoo>
