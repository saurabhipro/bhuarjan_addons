<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 19 Notification List View -->
    <record id="view_section19_notification_list" model="ir.ui.view">
        <field name="name">bhu.section19.notification.list</field>
        <field name="model">bhu.section19.notification</field>
        <field name="arch" type="xml">
            <list string="Section 19 Notifications" delete="1" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="name" string="Notification Name"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="khasra_numbers" string="Khasra Numbers"/>
                <field name="khasra_count" string="Khasra Count"/>
                <field name="state" widget="badge" string="Status" decoration-success="state == 'signed'" decoration-info="state == 'generated'" decoration-muted="state == 'draft'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="signed_date" string="Signed Date"/>
            </list>
        </field>
    </record>

    <!-- Section 19 Notification Form View -->
    <record id="view_section19_notification_form" model="ir.ui.view">
        <field name="name">bhu.section19.notification.form</field>
        <field name="model">bhu.section19.notification</field>
        <field name="arch" type="xml">
            <form string="Section 19 Notification" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                <header>
                    <group>
                        <!-- Submit Button for SDM (in draft state) -->
                        <button name="action_submit" string="Submit to Collector" type="object" class="btn-success" 
                                icon="fa-paper-plane"
                                groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                invisible="not sdm_signed_file or state != 'draft'"
                                confirm="Are you sure want to submit this record."/>
                        
                        <!-- Action Buttons: Approve, Send Back -->
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                icon="fa-check"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted' or not collector_signed_file"/>
                        <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                icon="fa-arrow-left"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted'"/>
                        
                        <!-- Resubmit button (for sent back records) -->
                        <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                icon="fa-refresh"
                                groups="bhuarjan.group_bhuarjan_sdm"
                                invisible="state != 'send_back'"/>
                    </group>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-bullhorn" style="margin-right: 10px;"></i>Section 19 Notification / धारा 19 अधिसूचना
                        </h1>
                    </div>
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="project_id" required="1" 
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="village_id" required="1" 
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   options="{'no_create_edit': True, 'no_open':True, 'no_create':True}"
                                   placeholder="Select village from project..."/>
                        </group>
                        <group>
                            <field name="district_id" readonly="1"/>
                            <field name="tehsil_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Public Purpose / लोक प्रयोजन">
                        <field name="public_purpose" placeholder="Enter description of public purpose for land acquisition..." 
                               readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                               widget="text" nolabel="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Section 19 Documents / धारा 19 दस्तावेज़">
                            <!-- SDM Section -->
                            <group string="SDM Section / SDM अनुभाग" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 19 Documents" style="margin-right: 50px; padding-right: 20px;">
                                        <!-- Download Unsigned Section 19 -->
                                        <button name="action_download_unsigned_file" string="Download Section 19 (Unsigned)" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Section 19 Notification (Unsigned)"
                                                style="width: 100%; margin-bottom: 10px;"/>
                                        
                                        <!-- Download SDM Signed Section 19 -->
                                        <button name="action_download_sdm_signed_file" string="Download SDM Signed" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download SDM Signed Section 19"
                                                invisible="not sdm_signed_file"
                                                style="width: 100%;"/>
                                    </group>
                                    <group string="Upload SDM Signed Section 19" style="margin-left: 50px; padding-left: 20px;">
                                        <!-- Upload SDM Signed File (editable only in draft state) -->
                                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                               string="Upload SDM Signed Section 19"
                                               widget="binary"
                                               readonly="state != 'draft'"
                                               placeholder="Upload Signed Section 19 Notification"
                                               help="Upload the signed Section 19 document from SDM"
                                               invisible="sdm_signed_file"/>
                                        <field name="sdm_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file -->
                                        <group invisible="not sdm_signed_file or state != 'draft'">
                                            <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                                   widget="binary"
                                                   readonly="1"
                                                   nolabel="1"/>
                                        </group>
                                    </group>
                                </group>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin" style="margin-top: 40px;">
                                <group col="2">
                                    <group string="Download Section 19 Documents" style="margin-right: 50px; padding-right: 20px;">
                                        <!-- Download Collector Signed Section 19 -->
                                        <button name="action_download_collector_signed_file" string="Download Collector Signed" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Collector Signed Section 19"
                                                invisible="not collector_signed_file"
                                                style="width: 100%; margin-bottom: 10px;"/>
                                        
                                        <!-- Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned) -->
                                        <button name="action_download_latest_pdf" string="Download Latest PDF Report" type="object" 
                                                class="btn-info" icon="fa-download"
                                                title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"
                                                invisible="not sdm_signed_file and not collector_signed_file"
                                                style="width: 100%;"/>
                                    </group>
                                    <group string="Upload Collector Signed Section 19" style="margin-left: 50px; padding-left: 20px;">
                                        <!-- Upload Collector Signed File (editable only in submitted state) -->
                                        <field name="collector_signed_file" filename="collector_signed_filename" 
                                               string="Upload Collector Signed Section 19"
                                               widget="binary"
                                               readonly="state != 'submitted'"
                                               placeholder="Upload Section 19 Approval Letter"
                                               help="Upload the signed Section 19 approval document from Collector"
                                               invisible="collector_signed_file"/>
                                        <field name="collector_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file -->
                                        <group invisible="not collector_signed_file or state != 'submitted'">
                                            <field name="collector_signed_file" filename="collector_signed_filename" 
                                                   widget="binary"
                                                   readonly="1"
                                                   nolabel="1"/>
                                        </group>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Additional Information / अतिरिक्त जानकारी">
                            <group string="Map Inspection / नक्शा निरीक्षण">
                                <field name="sdo_revenue_name"/>
                                <field name="sdo_office_location"/>
                            </group>
                            <group string="Displacement &amp; Rehabilitation / विस्थापन और पुनर्वास">
                                <field name="is_displacement_involved"/>
                                <field name="affected_persons_count" invisible="not is_displacement_involved"/>
                                <field name="rehab_village_id" invisible="not is_displacement_involved"/>
                                <field name="rehab_tehsil_id" invisible="not is_displacement_involved"/>
                                <field name="rehab_district_id" invisible="not is_displacement_involved"/>
                                <field name="rehab_khasra_number" invisible="not is_displacement_involved"/>
                                <field name="rehab_area_hectares" invisible="not is_displacement_involved"/>
                                <field name="rehab_officer_name" invisible="not is_displacement_involved"/>
                                <field name="rehab_officer_office_location" invisible="not is_displacement_involved"/>
                            </group>
                        </page>
                        <page string="Signed Document / हस्ताक्षरित दस्तावेज़">
                            <group>
                                <field name="has_signed_document" readonly="1"/>
                                <field name="signed_document_file" filename="signed_document_filename"/>
                                <field name="signed_document_filename" invisible="1"/>
                                <field name="signed_date"/>
                                <field name="collector_signature" filename="collector_signature_filename"/>
                                <field name="collector_signature_filename" invisible="1"/>
                                <field name="collector_name"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 19 Notification Search View -->
    <record id="view_section19_notification_search" model="ir.ui.view">
        <field name="name">bhu.section19.notification.search</field>
        <field name="model">bhu.section19.notification</field>
        <field name="arch" type="xml">
            <search string="Section 19 Notifications">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <separator/>
                <filter string="With Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Section 19 Notification Wizard Form View -->
    <record id="view_section19_notification_wizard_form" model="ir.ui.view">
        <field name="name">bhu.section19.notification.wizard.form</field>
        <field name="model">bhu.section19.notification.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Section 19 Notification">
                <group>
                    <field name="project_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                    <field name="village_id" required="1" 
                           options="{'no_create_edit': True, 'no_open':True, 'no_create':True}"
                           placeholder="Select village from project..."/>
                </group>
                <footer>
                    <button string="Generate Notification" name="action_generate_notification" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Section 19 Notification Action -->
    <record id="action_section19_notification" model="ir.actions.act_window">
        <field name="name">Section 19 Notifications</field>
        <field name="res_model">bhu.section19.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 19 Notification
            </p>
            <p>
                Section 19 Notification is issued by the Collector declaring that the land is required for public purpose.
            </p>
        </field>
    </record>

    <!-- Section 19 Notification Wizard Action -->
    <record id="action_section19_notification_wizard" model="ir.actions.act_window">
        <field name="name">Generate Section 19 Notification / धारा 19 अधिसूचना जेनरेट करें</field>
        <field name="res_model">bhu.section19.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

