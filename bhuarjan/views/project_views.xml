<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_bhu_project_list" model="ir.ui.view">
        <field name="name">bhu.project.list</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <list>
                <field name="department_id" string="Department / विभाग"/>
                <field name="name"/>
                <field name="code" string="Project Code"/>
                <field name="sdm_ids" widget="many2many_tags" string="SDM / उप-विभागीय मजिस्ट्रेट" options="{'no_create_edit': True}"/>
                <field name="tehsildar_ids" widget="many2many_tags" string="Tehsildar / तहसीलदार" options="{'no_create_edit': True}"/>
                <field name="state" string="Status / स्थिति" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'completed'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="budget"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bhu_project_form" model="ir.ui.view">
        <field name="name">bhu.project.form</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed,cancelled"/>
                    <button name="action_set_active" string="Set to Active" type="object" 
                            class="oe_highlight" invisible="state == 'active'"/>
                    <button name="action_set_completed" string="Set to Completed" type="object" 
                            class="oe_highlight" invisible="state == 'completed'"/>
                    <button name="action_set_cancelled" string="Set to Cancelled" type="object" 
                            invisible="state == 'cancelled'"/>
                    <button name="action_set_draft" string="Set to Draft" type="object" 
                            invisible="state == 'draft'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="department_id"/>
                            <field name="law_master_id" options="{'no_create': False}"/>
                            <field name="project_uuid" invisible="1"/>
                            <button name="action_regenerate_uuid" type="object" string="Regenerate UUID / UUID पुनर्जीवित करें" class="oe_link" invisible="1"/>
                        </group>
                        <group>
                            <field name="budget"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="is_sia_exempt"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Villages / ग्राम">
                            <field name="village_ids" nolabel="1"
                                   options="{'no_create_edit': True}"/>
                        </page>
                        <page string="SDM / उप-विभागीय मजिस्ट्रेट">
                            <field name="sdm_ids" nolabel="1"
                                   options="{'no_create_edit': True}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                </list>
                            </field>
                        </page>
                        <page string="Tehsildar / तहसीलदार">
                            <field name="tehsildar_ids" nolabel="1"
                                   options="{'no_create_edit': True}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                </list>
                            </field>
                        </page>
                        <page string="Patwaris / पटवारी">
                            <field name="patwari_ids" nolabel="1"
                                   options="{'no_create_edit': True}"
                                   context="{'default_project_id': id, 'active_model': 'bhu.project', 'active_id': id}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                    <field name="village_ids" widget="many2many_tags" string="Assigned Villages / नियुक्त ग्राम"/>
                                    <button name="action_view_surveys_in_project" 
                                            type="object"
                                            string="Surveys"
                                            icon="fa-list-alt"
                                            class="oe_stat_button"
                                            context="{'default_project_id': parent.id, 'active_id': parent.id, 'active_model': 'bhu.project'}">
                                        <field name="survey_count_in_project" widget="statinfo" string="Surveys"/>
                                    </button>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">bhu.project</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
