<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Issue Menu and Action for Administrators -->
    <record id="action_bhuarjan_issue" model="ir.actions.act_window">
        <field name="name">Support Issues</field>
        <field name="res_model">bhuarjan.issue</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No issues reported yet!
            </p>
        </field>
    </record>

    <menuitem id="menu_bhuarjan_issue"
              name="Support Issues"
              parent="menu_bhu_master"
              action="action_bhuarjan_issue"
              sequence="100"
              groups="bhuarjan.group_bhuarjan_admin"/>

    <!-- Issue Form View -->
    <record id="view_bhuarjan_issue_form" model="ir.ui.view">
        <field name="name">bhuarjan.issue.form</field>
        <field name="model">bhuarjan.issue</field>
        <field name="arch" type="xml">
            <form string="Issue">
                <header>
                    <field name="state" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="section"/>
                            <field name="user_id"/>
                            <field name="create_date"/>
                        </group>
                        <group>
                            <field name="screenshot" widget="image" class="oe_avatar"/>
                            <field name="screenshot_filename" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Issue List View -->
    <record id="view_bhuarjan_issue_tree" model="ir.ui.view">
        <field name="name">bhuarjan.issue.list</field>
        <field name="model">bhuarjan.issue</field>
        <field name="arch" type="xml">
            <list string="Issues" decoration-info="state == 'new'" decoration-success="state == 'resolved'" decoration-muted="state == 'closed'">
                <field name="create_date"/>
                <field name="name"/>
                <field name="section"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-info="state == 'new'" decoration-warning="state == 'in_progress'" decoration-success="state == 'resolved'"/>
            </list>
        </field>
    </record>

    <!-- My Issues Action -->
    <record id="action_bhuarjan_my_issues" model="ir.actions.act_window">
        <field name="name">My Support Tickets</field>
        <field name="res_model">bhuarjan.issue</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                You haven't reported any issues yet.
            </p>
        </field>
    </record>

    <!-- My Issues Menu -->
    <menuitem id="menu_bhuarjan_my_issues"
              name="My Support Tickets"
              parent="menu_bhu_root"
              action="action_bhuarjan_my_issues"
              sequence="90"
              groups="base.group_user"/>
              
    <!-- Wizard View -->
    <record id="view_bhuarjan_issue_wizard_form" model="ir.ui.view">
        <field name="name">bhuarjan.issue.wizard.form</field>
        <field name="model">bhuarjan.issue.wizard</field>
        <field name="arch" type="xml">
            <form string="Report an Issue">
                <group>
                    <field name="section"/>
                    <field name="name" placeholder="Brief subject of the issue..."/>
                    <field name="description" placeholder="Describe the issue in detail..." widget="text" style="height: 100px;"/>
                    <field name="screenshot" filename="screenshot_filename"/>
                    <field name="screenshot_filename" invisible="1"/>
                </group>
                <footer>
                    <button name="action_submit_issue" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bhuarjan_issue_wizard" model="ir.actions.act_window">
        <field name="name">Report an Issue</field>
        <field name="res_model">bhuarjan.issue.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
