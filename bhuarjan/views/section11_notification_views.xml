<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 11 Notification List View -->
    <record id="view_section11_notification_list" model="ir.ui.view">
        <field name="name">bhu.section11.notification.list</field>
        <field name="model">bhu.section11.notification</field>
        <field name="arch" type="xml">
            <list string="Section 11 Notifications" decoration-info="state == 'draft'" decoration-success="state == 'published'" decoration-warning="state == 'acknowledged'" decoration-muted="state == 'completed'">
                <field name="name"/>
                <field name="company_id"/>
                <field name="notification_date"/>
                <field name="notification_type"/>
                <field name="survey_id"/>
                <field name="state"/>
                <field name="total_responses"/>
                <field name="objection_count"/>
            </list>
        </field>
    </record>

    <!-- Section 11 Notification Form View -->
    <record id="view_section11_notification_form" model="ir.ui.view">
        <field name="name">bhu.section11.notification.form</field>
        <field name="model">bhu.section11.notification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_publish" string="Publish" type="object" class="btn-primary" 
                            invisible="state != 'draft'" icon="fa-paper-plane"/>
                    <button name="action_acknowledge" string="Acknowledge" type="object" class="btn-info" 
                            invisible="state != 'published'" icon="fa-check"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" 
                            invisible="state != 'acknowledged'" icon="fa-check-circle"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,published,acknowledged,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Notification Number"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="notification_date"/>
                            <field name="notification_type"/>
                            <field name="state"/>
                        </group>
                        <group string="Company Information">
                            <field name="company_id"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Survey Information">
                            <field name="survey_id"/>
                            <field name="landowner_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Publication Details">
                            <field name="publication_date"/>
                            <field name="newspaper_name"/>
                            <field name="radio_station"/>
                            <field name="tv_channel"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Response Details">
                            <field name="response_deadline"/>
                            <field name="total_responses"/>
                            <field name="objection_count"/>
                        </group>
                    </group>
                    
                    <group string="Notification Content">
                        <field name="notification_content" nolabel="1"/>
                        <field name="hindi_content" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Section 11 Notification Search View -->
    <record id="view_section11_notification_search" model="ir.ui.view">
        <field name="name">bhu.section11.notification.search</field>
        <field name="model">bhu.section11.notification</field>
        <field name="arch" type="xml">
            <search string="Search Section 11 Notifications">
                <field name="name"/>
                <field name="survey_id"/>
                <field name="landowner_ids"/>
                <field name="notification_type"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('state', '=', 'published')]"/>
                <filter string="Acknowledged" name="acknowledged" domain="[('state', '=', 'acknowledged')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="This Month" name="this_month" domain="[('notification_date', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Notification Type" name="group_type" context="{'group_by': 'notification_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'notification_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Section 11 Notification Action -->
    <record id="action_section11_notification" model="ir.actions.act_window">
        <field name="name">Section 11 Notifications</field>
        <field name="res_model">bhu.section11.notification</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section11_notification_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 11 Notification
            </p>
            <p>
                Section 11 Notifications are used to inform landowners about land acquisition proceedings.
            </p>
        </field>
    </record>
</odoo>
