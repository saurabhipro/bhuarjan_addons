<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Sequences for processes NOT managed by Settings Master -->
        <!-- Processes managed by Settings Master (Survey, Section 4, Section 11, Section 19, Section 15, Draft Award, Payment File, Payment Reconciliation) -->
        <!-- are created dynamically by the get_sequence_number method and don't need to be defined here -->
        
        <!-- Sequence for Rate Master Numbers -->
        <record id="seq_bhu_rate_master" model="ir.sequence">
            <field name="name">Rate Master Number</field>
            <field name="code">bhu.rate.master</field>
            <field name="prefix">RM_</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Sequence for SIA Team Numbers -->
        <record id="seq_bhu_sia_team" model="ir.sequence">
            <field name="name">SIA Team Number</field>
            <field name="code">bhu.sia.team</field>
            <field name="prefix">SIA_</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Sequence for Expert Committee Report Numbers -->
        <record id="seq_bhu_expert_committee_report" model="ir.sequence">
            <field name="name">Expert Committee Report Number</field>
            <field name="code">bhu.expert.committee.report</field>
            <field name="prefix">ECR_</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Sequence for Payment Reconciliation Bank Numbers -->
        <record id="seq_bhu_payment_reconciliation_bank" model="ir.sequence">
            <field name="name">Payment Reconciliation Bank Number</field>
            <field name="code">bhu.payment.reconciliation.bank</field>
            <field name="prefix">RECON_</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Note: Sequences for processes managed by Settings Master are created dynamically -->
        <!-- and don't need to be defined here. These include: -->
        <!-- - Survey (managed via bhuarjan.sequence.settings) -->
        <!-- - Section 4 Notification (managed via bhuarjan.sequence.settings) -->
        <!-- - Section 11 Notification (managed via bhuarjan.sequence.settings) -->
        <!-- - Section 19 Notification (managed via bhuarjan.sequence.settings) -->
        <!-- - Section 15 Objection (managed via bhuarjan.sequence.settings) -->
        <!-- - Draft Award (managed via bhuarjan.sequence.settings) -->
        <!-- - Payment File (managed via bhuarjan.sequence.settings) -->
        <!-- - Payment Reconciliation (managed via bhuarjan.sequence.settings) -->
    </data>
</odoo>
