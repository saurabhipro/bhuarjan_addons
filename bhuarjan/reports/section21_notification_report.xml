<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 21 Notification Report -->
    <record id="action_report_section21_notification" model="ir.actions.report">
        <field name="name">Section 21 Notification / धारा 21 अधिसूचना</field>
        <field name="model">bhu.section21.notification</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bhuarjan.section21_notification_report</field>
        <field name="report_file">bhuarjan.section21_notification_report</field>
        <field name="paperformat_id" ref="bhuarjan.bhuarjan_sia_paper_format"/>
        <field name="print_report_name">'Section21_' + ((object and object.village_id and object.village_id.name.replace(' ', '_') if object.village_id.name else '') or (docs and docs[0] and docs[0].village_id and docs[0].village_id.name.replace(' ', '_') if docs[0].village_id.name else '') or '') + '_' + ((object and object.notice_date and object.notice_date.strftime('%Y%m%d') if object.notice_date else '') or (docs and docs[0] and docs[0].notice_date and docs[0].notice_date.strftime('%Y%m%d') if docs[0].notice_date else '') or (object and object.create_date and object.create_date.strftime('%Y%m%d') if object.create_date else '') or (docs and docs[0] and docs[0].create_date and docs[0].create_date.strftime('%Y%m%d') if docs[0].create_date else '') or '')</field>
    </record>

    <!-- Section 21 Notification Report Template -->
    <template id="section21_notification_report">
    <t t-call="web.html_container">
        <meta charset="utf-8"/>
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">
                <!-- Include centralized CSS styles -->
                <t t-call="bhuarjan.report_common_styles"/>
                <!-- Report-specific overrides for Section 21 -->
                <style>
                    .normal-text {
                        font-size: 16px !important;
                    }
                    .normal-text p, .normal-text span, .normal-text strong {
                        font-size: 16px !important;
                    }
                    .schedule-table {
                        margin: 15px 0;
                        font-size: 16px !important;
                    }
                    .schedule-table th, .schedule-table td {
                        padding: 8px;
                        font-size: 16px !important;
                    }
                    .schedule-table th {
                        background-color: #f0f0f0;
                    }
                    .watermark {
                        position: absolute;
                        top: 25%;
                        left: 25%;
                        width: 50%;
                        height: 50%;
                        opacity: 0.1;
                        z-index: 0;
                        pointer-events: none;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }
                    .watermark-circle {
                        position: absolute;
                        width: 100%;
                        height: 100%;
                        border-radius: 50%;
                        border: 3px solid rgba(0, 0, 0, 0.1);
                    }
                    .watermark img {
                        width: 100%;
                        height: 100%;
                        object-fit: contain;
                        opacity: 0.15;
                    }
                </style>
                <div class="page">
                    <div class="oe_structure"/>

                    <t t-if="o">
                        <!-- PUBLIC -->
                        <div class="container letter_space" style="border: 2px dotted #000; padding: 15px; margin: 10px; position: relative; min-height: calc(100vh - 20px); height: 100%;">
                            <!-- Watermark with Logo - Centered on Page -->
                            <div class="watermark">
                                <div class="watermark-circle"></div>
                                <t t-set="base_url" t-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                                <img t-att-src="base_url + '/bhuarjan/static/img/logo.png'" alt="Logo Watermark"/>
                            </div>
                            
                            <!-- Header: Collector's Court -->
                            <div style="text-align: center; margin-bottom: 8px;">
                                <h2 style="margin: 0; padding: 0; font-size: 25px; font-weight: bold; font-family: 'Noto Sans Devanagari', 'Mangal', 'Arial Unicode MS', 'DejaVu Sans', sans-serif !important;">
                                    <strong>न्यायालय कलेक्टर, जिला-<span t-if="o.district_id" t-esc="o.district_id.name"/><span t-if="not o or not o.district_id">रायगढ़</span> (छ.ग.)</strong>
                                </h2>
                            </div>

                            <!-- Public Notice Header with Date -->
                            <div style="display: flex; justify-content: flex-end; margin-bottom: 8px; font-size: 16px !important;">
                                <div>
                                    <strong>रायगढ़ दिनाँक</strong>
                                    <span t-if="o and o.notice_date" t-esc="o.notice_date.strftime('%d/%m/%Y')"/>
                                    <span t-if="not o or not o.notice_date" style="text-decoration: underline;">........................</span>
                                </div>
                            </div>

                            <!-- Main Body Text - Paragraph 1 -->
                            <div style="font-size: 16px !important; line-height: 1.5 !important; text-align: justify; margin-bottom: 8px;">
                                <p style="margin: 0; padding: 0; font-size: 16px !important; line-height: 1.5 !important;">
                                    भूमि अर्जन, पुनर्वासन और पुनर्व्यवस्थापन में उचित प्रतिकर और पारदर्शिता का अधिकार अधिनियम, 2013 के धारा-21 (1) के तहत अपेक्षक निकाय :-
                                    <span t-if="o and o.requisitioning_body" t-esc="o.requisitioning_body"/>
                                    <span t-if="not o or not o.requisitioning_body" style="text-decoration: underline;">........................</span>
                                    (छ.ग.) के
                                    <span t-if="o and o.project_id and o.project_id.name" t-esc="o.project_id.name"/>
                                    <span t-if="not o or not o.project_id or not o.project_id.name" style="text-decoration: underline;">........................</span>
                                    प्रयोजन हेतु।
                                </p>
                            </div>

                            <!-- Main Body Text - Paragraph 2 -->
                            <div style="font-size: 16px !important; line-height: 1.5 !important; text-align: justify; margin-bottom: 8px;">
                                <p style="margin: 0; padding: 0; font-size: 16px !important; line-height: 1.5 !important;">
                                    राज्य शासन को नीचे दी गयी अनुसूची में दर्शित भूमि की सार्वजनिक प्रयोजन (
                                    <span t-if="o and o.public_purpose" t-esc="o.public_purpose"/>
                                    <span t-if="not o or not o.public_purpose" style="text-decoration: underline;">........................</span>
                                    ) हेतु आवश्यकता है एवं राज्य शासन का आशय उवत भूमि का कब्जा लिये जाने का है। अतः भूमि अर्जन, पुनर्वासन और पुनर्व्यवस्थापन में उचित प्रतिकर और पारदर्शिता का अधिकार अधिनियम, 2013 की धारा-21 (1) के तहत सभी हितबद्ध व्यवित्तयों को सूचित किया जाता है कि भूमि में सभी हितों के लिये प्रतिकरों, पुनर्वास तथा प्रतिस्थापन के दावे, ऐसे हितों के लिये प्रतिकर के रकम संबंधित दावे, धारा 20 के अधीन किये गये मापमानों के दावे एवं आक्षेप आपत्ति/कथन यदि कोई हों, तो स्वंय अथवा अपने अधिकृत प्रतिनिधि या अधिववत्ता के माध्यम से कार्यालय कलेक्टर, जिला रायगढ़ के भू-अर्जन शाखा में उपस्थित होकर प्रस्तुत कर सकते हैं।
                                </p>
                            </div>

                            <!-- Schedule Separator -->
                            <div style="text-align: center; margin: 10px 0; font-size: 16px !important; font-weight: bold;">
                                <strong>// अनूसूची //</strong>
                            </div>

                            <!-- Land Details Section -->
                            <div style="margin: 10px 0;">
                                <div style="text-align: left; font-size: 16px; font-weight: bold; margin-bottom: 6px;">
                                    <strong>1) भूमि का विवरण :-</strong>
                                </div>
                                <div style="margin-bottom: 8px; font-size: 16px !important;">
                                    <div style="margin-bottom: 3px;">
                                        <strong>(क) जिला :-</strong>
                                        <span t-if="o and o.district_id" t-esc="o.district_id.name"/>
                                        <span t-if="not o or not o.district_id">रायगढ़</span>
                                    </div>
                                    <div style="margin-bottom: 3px;">
                                        <strong>(ख) तहसील :-</strong>
                                        <span t-if="o and o.tehsil_id" t-esc="o.tehsil_id.name"/>
                                        <span t-if="not o or not o.tehsil_id" style="text-decoration: underline;">........................</span>
                                    </div>
                                    <div style="margin-bottom: 3px;">
                                        <strong>(ग) ग्राम :-</strong>
                                        <span t-if="o and o.village_id" t-esc="o.village_id.name"/>
                                        <span t-if="not o or not o.village_id" style="text-decoration: underline;">........................</span>
                                    </div>
                                </div>

                                <!-- Land Parcels Table -->
                                <table class="schedule-table" style="width: 100%; border-collapse: collapse; margin: 15px 0; font-size: 16px !important;">
                                    <thead>
                                        <tr>
                                            <th style="width: 33.33%; border: 1px solid #000; padding: 8px; text-align: center; background-color: #f0f0f0; font-weight: bold;">खसरा क्रमांक</th>
                                            <th style="width: 33.33%; border: 1px solid #000; padding: 8px; text-align: center; background-color: #f0f0f0; font-weight: bold;">अर्जित रकबा</th>
                                            <th style="width: 33.33%; border: 1px solid #000; padding: 8px; text-align: center; background-color: #f0f0f0; font-weight: bold;">रिमार्क</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="surveys_data" t-value="o._get_approved_surveys_data() if o else []"/>
                                        <t t-if="surveys_data and len(surveys_data) > 0">
                                            <t t-foreach="surveys_data" t-as="item">
                                                <tr>
                                                    <td style="border: 1px solid #000; padding: 8px; font-size: 16px !important; text-align: center;">
                                                        <t t-esc="item['khasra_number']"/>
                                                    </td>
                                                    <td style="border: 1px solid #000; padding: 8px; font-size: 16px !important; text-align: center;">
                                                        <t t-if="item['area'] > 0" t-esc="'{:.4f}'.format(item['area'])"/>
                                                        <t t-if="item['area'] == 0">........................</t>
                                                    </td>
                                                    <td style="border: 1px solid #000; padding: 8px; font-size: 16px !important; text-align: center;">--</td>
                                                </tr>
                                            </t>
                                        </t>
                                        <t t-if="not surveys_data or len(surveys_data) == 0">
                                            <tr>
                                                <td style="border: 1px solid #000; text-align: center; padding: 8px; font-size: 16px !important;">........................</td>
                                                <td style="border: 1px solid #000; text-align: center; padding: 8px; font-size: 16px !important;">........................</td>
                                                <td style="border: 1px solid #000; text-align: center; padding: 8px; font-size: 16px !important;">--</td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>

                            <!-- Collector Signature -->
                            <div style="text-align: right; margin-top: 15px; margin-right: 0;">
                                <div style="margin: 5px 0; font-size: 16px !important;">
                                    <span t-if="o and o.collector_name" t-esc="o.collector_name"/>
                                    <span t-if="not o or not o.collector_name">कलेक्टर</span>
                                </div>
                                <div style="margin: 3px 0; font-size: 16px !important;">
                                    जिला-<span t-if="o and o.district_id" t-esc="o.district_id.name"/><span t-if="not o or not o.district_id">रायगढ़</span>
                                </div>
                            </div>

                            <!-- Letter Text After Table -->
                            <div style="margin-top: 20px; font-size: 16px !important; line-height: 1.6 !important;">
                                <!-- Reference and Copy Details -->
                                <div style="display: flex; justify-content: space-between; margin-bottom: 15px; align-items: center;">
                                    <div>
                                        <span>पु. क्रमांक/</span>
                                        <span t-if="o and o.kramank" t-esc="o.kramank"/>
                                        <span t-if="not o or not o.kramank" style="text-decoration: underline;">........................</span>
                                 
                                    </div>
                                    <div style="text-align: right;">                                                                            
                                        <span style="margin-left: 10px;">रायगढ़ दिनाँक</span>
                                        <span t-if="o and o.notice_date" t-esc="o.notice_date.strftime('%d/%m/%Y')"/>
                                        <span t-if="not o or not o.notice_date" style="text-decoration: underline;">........................</span>
                                    </div>
                                </div>

                                <!-- Point 1: To Sub-Divisional Officer -->
                                <div style="margin-bottom: 15px; text-align: justify;">
                                    <div style="margin-bottom: 5px;">
                                        <span> प्रतिलिपि :-</span>
                                        <br/>
                                        <strong>1.</strong>
                                        <span style="margin-left: 8px;">
                                            अनुविभागीय अधिकारी (राजस्व) सह भू-अर्जन अधिकारी,
                                            <t t-set="sub_division_name" t-value="o.village_id.sub_division_id.name if o and o.village_id and o.village_id.sub_division_id else (o.tehsil_id.sub_division_id.name if o and o.tehsil_id and o.tehsil_id.sub_division_id else '')"/>
                                            <span t-if="sub_division_name" t-esc="sub_division_name"/>
                                            <span t-if="not sub_division_name" style="text-decoration: underline;">........................</span>
                                            जिला
                                            <span t-if="o and o.district_id" t-esc="o.district_id.name"/>
                                            <span t-if="not o or not o.district_id">रायगढ़</span>
                                            की ओर सूचनार्थ एवं आवश्यक कार्यवाही हेतु। आप प्रभावित भू-स्वामियों को सूचना तामिली कराकर प्राप्ति अभिस्वीकृति इस कार्यालय को उपलब्ध कराना सुनिश्चित करें।
                                        </span>
                                    </div>
                                </div>

                                <!-- Point 2: To Landowner -->
                                <div style="margin-bottom: 15px; text-align: justify;">
                                    <div>
                                        <strong>2.</strong>
                                        <span style="margin-left: 8px;">
                                            भूमिस्वामी
                                            <t t-set="surveys_data" t-value="o._get_approved_surveys_data() if o else []"/>
                                            <t t-set="landowner_names" t-value="[item.get('landowner_name') for item in surveys_data if item.get('landowner_name')]"/>
                                            <t t-if="landowner_names and len(landowner_names) > 0">
                                                <t t-foreach="landowner_names" t-as="name" t-sep=", ">
                                                    <t t-esc="name"/>
                                                </t>
                                            </t>
                                            <t t-if="not landowner_names or len(landowner_names) == 0">
                                                <span style="text-decoration: underline;">........................</span>
                                            </t>
                                            की ओर सूचनार्थ एवं लेख है कि प्रतिकर, पुनर्वासन एवं पुनर्व्यवस्थापन में तय की गई रकम संबंधी जानकारी अनुविभागीय अधिकारी (राजस्व) सह भू-अर्जन अधिकारी,
                                            <span t-if="sub_division_name" t-esc="sub_division_name"/>
                                            <span t-if="not sub_division_name" style="text-decoration: underline;">........................</span>
                                            के कार्यालय में कार्यालयीन समय में उपस्थित होकर प्राप्त की जा सकती है।
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Additional Collector Signature -->
                            <div style="text-align: right; margin-top: 15px; margin-right: 0;">
                                <div style="margin: 5px 0; font-size: 16px !important;">
                                    <span t-if="o and o.additional_collector_name" t-esc="o.additional_collector_name"/>
                                    <span t-if="not o or not o.additional_collector_name">अपर कलेक्टर</span>
                                </div>
                                <div style="margin: 3px 0; font-size: 16px !important;">
                                    जिला-<span t-if="o and o.district_id" t-esc="o.district_id.name"/><span t-if="not o or not o.district_id">रायगढ़</span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Personal Notices -->
                        <t t-set="surveys_data" t-value="o._get_approved_surveys_data() if o else []"/>
                        <t t-if="surveys_data and len(surveys_data) > 0">
                            <t t-foreach="surveys_data" t-as="item">
                                <div style="page-break-before: always;"/>
                                <div class="container letter_space" style="border: 2px dotted #000; padding: 15px; margin: 10px; position: relative; min-height: calc(100vh - 20px); height: 100%;">
                                    <!-- Watermark with Logo - Centered on Page -->
                                    <div class="watermark">
                                        <div class="watermark-circle"></div>
                                        <t t-set="base_url" t-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                                        <img t-att-src="base_url + '/bhuarjan/static/img/logo.png'" alt="Logo Watermark"/>
                                    </div>
                                    
                                    <!-- Header: Collector's Court -->
                                    <div style="text-align: center; margin-bottom: 8px;">
                                        <h2 style="margin: 0; padding: 0; font-size: 25px; font-weight: bold; font-family: 'Noto Sans Devanagari', 'Mangal', 'Arial Unicode MS', 'DejaVu Sans', sans-serif !important;">
                                            <strong>न्यायालय कलेक्टर, जिला-<span t-if="o.district_id" t-esc="o.district_id.name"/><span t-if="not o or not o.district_id">रायगढ़</span> (छ.ग.)</strong>
                                        </h2>
                                    </div>

                                    <!-- Public Notice Header with Date -->
                                    <div style="display: flex; justify-content: flex-end; margin-bottom: 8px; font-size: 16px !important;">
                                        <div>
                                            <strong>रायगढ़ दिनाँक</strong>
                                            <span t-if="o and o.notice_date" t-esc="o.notice_date.strftime('%d/%m/%Y')"/>
                                            <span t-if="not o or not o.notice_date" style="text-decoration: underline;">........................</span>
                                        </div>
                                    </div>
                                    
                                    <p style="margin: 5px 0; text-align: justify;">
                                        <strong>प्रिय</strong>
                                        <span t-if="item.get('landowner_name')" t-esc="item.get('landowner_name')"/>
                                        <span t-if="not item.get('landowner_name')">श्री/श्रीमती ........................</span>,
                                    </p>
                                    <p style="margin: 5px 0; text-align: justify;">
                                        पिता/पति: <span t-if="item.get('landowner_father')" t-esc="item.get('landowner_father')"/><span t-if="not item.get('landowner_father')">........................</span>,
                                    </p>
                                    <p style="margin: 5px 0; text-align: justify;">
                                        पता: <span t-if="item.get('landowner_address')" t-esc="item.get('landowner_address')"/><span t-if="not item.get('landowner_address')">........................</span>
                                    </p>
                                    <p style="margin: 10px 0; text-align: justify;">
                                        <strong>विषय:</strong> भूमि अधिग्रहण अधिनियम, 2013 की धारा 21 (1) के अधीन सूचना।
                                    </p>

                                    <!-- Main Body Text - Paragraph 1 -->
                                    <div style="font-size: 16px !important; line-height: 1.5 !important; text-align: justify; margin-bottom: 8px;">
                                        <p style="margin: 0; padding: 0; font-size: 16px !important; line-height: 1.5 !important;">
                                            भूमि अर्जन, पुनर्वासन और पुनर्व्यवस्थापन में उचित प्रतिकर और पारदर्शिता का अधिकार अधिनियम, 2013 के धारा-21 (1) के तहत अपेक्षक निकाय :-
                                            <span t-if="o and o.requisitioning_body" t-esc="o.requisitioning_body"/>
                                            <span t-if="not o or not o.requisitioning_body" style="text-decoration: underline;">........................</span>
                                            (छ.ग.) के
                                            <span t-if="o and o.project_id and o.project_id.name" t-esc="o.project_id.name"/>
                                            <span t-if="not o or not o.project_id or not o.project_id.name" style="text-decoration: underline;">........................</span>
                                            प्रयोजन हेतु।
                                        </p>
                                    </div>

                                    <!-- Main Body Text - Paragraph 2 -->
                                    <div style="font-size: 16px !important; line-height: 1.5 !important; text-align: justify; margin-bottom: 8px;">
                                        <p style="margin: 0; padding: 0; font-size: 16px !important; line-height: 1.5 !important;">
                                            राज्य शासन को नीचे दी गयी अनुसूची में दर्शित भूमि की सार्वजनिक प्रयोजन (
                                            <span t-if="o and o.public_purpose" t-esc="o.public_purpose"/>
                                            <span t-if="not o or not o.public_purpose" style="text-decoration: underline;">........................</span>
                                            ) हेतु आवश्यकता है एवं राज्य शासन का आशय उवत भूमि का कब्जा लिये जाने का है। अतः भूमि अर्जन, पुनर्वासन और पुनर्व्यवस्थापन में उचित प्रतिकर और पारदर्शिता का अधिकार अधिनियम, 2013 की धारा-21 (1) के तहत सभी हितबद्ध व्यवित्तयों को सूचित किया जाता है कि भूमि में सभी हितों के लिये प्रतिकरों, पुनर्वास तथा प्रतिस्थापन के दावे, ऐसे हितों के लिये प्रतिकर के रकम संबंधित दावे, धारा 20 के अधीन किये गये मापमानों के दावे एवं आक्षेप आपत्ति/कथन यदि कोई हों, तो स्वंय अथवा अपने अधिकृत प्रतिनिधि या अधिववत्ता के माध्यम से कार्यालय कलेक्टर, जिला रायगढ़ के भू-अर्जन शाखा में उपस्थित होकर प्रस्तुत कर सकते हैं।
                                        </p>
