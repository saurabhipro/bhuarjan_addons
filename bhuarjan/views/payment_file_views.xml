<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Payment File List View -->
    <record id="view_payment_file_list" model="ir.ui.view">
        <field name="name">bhu.payment.file.list</field>
        <field name="model">bhu.payment.file</field>
        <field name="arch" type="xml">
            <list string="Payment Files / भुगतान फ़ाइलें" delete="1">
                <field name="name"/>
                <field name="award_id"/>
                <field name="village_id"/>
                <field name="project_id"/>
                <field name="total_net_payable" sum="Total Net Payable"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'generated'"
                       decoration-muted="state == 'draft'"/>
                <field name="generation_date"/>
            </list>
        </field>
    </record>

    <!-- Payment File Form View -->
    <record id="view_payment_file_form" model="ir.ui.view">
        <field name="name">bhu.payment.file.form</field>
        <field name="model">bhu.payment.file</field>
        <field name="arch" type="xml">
            <form string="Payment File / भुगतान फ़ाइल">
                <header>
                    <button name="action_generate_file" string="Generate Payment File" type="object" class="btn-primary" icon="fa-file-excel-o"
                            invisible="state == 'generated'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated"/>
                </header>
                <sheet>
                    <div class="alert alert-info py-2 mb-2" role="alert" invisible="not project_id or not village_id">
                        <i class="fa fa-info-circle mr-2"/>
                        Generating Payment File for Project: <strong><field name="project_id" readonly="1" options="{'no_open': True}"/></strong> 
                        and Village: <strong><field name="village_id" readonly="1" options="{'no_open': True}"/></strong>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id" required="1" readonly="state == 'generated'"/>
                            <field name="village_id" required="1" readonly="state == 'generated'"/>
                            <field name="district_id" invisible="1"/>
                            <field name="tehsil_id" invisible="1"/>
                            <field name="award_id" invisible="not village_id and not award_id" required="1" readonly="state == 'generated'"/>
                        </group>
                    </group>
                    
                    <group string="Totals" class="o_group_totals text-primary">
                        <field name="total_net_payable" readonly="1" options="{'currency_field': 'currency_id'}"/>
                        <field name="total_net_payable_text" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    
                    <group string="Payment Lines (Auto-populated from Award)">
                        <field name="payment_line_ids" nolabel="1">
                            <list string="Payment Lines" editable="bottom">
                                <field name="serial_number"/>
                                <field name="award_serial_number"/>
                                <field name="khasra_number"/>
                                <field name="landowner_id"/>
                                <field name="bank_name"/>
                                <field name="bank_branch"/>
                                <field name="account_number"/>
                                <field name="ifsc_code"/>
                                <field name="compensation_amount" sum="Total"/>
                                <field name="net_payable_amount" sum="Total"/>
                                <field name="remark"/>
                            </list>
                        </field>
                    </group>
                    
                    <group string="Generated File" invisible="state == 'draft'">
                         <field name="generated_file" filename="generated_file_filename" widget="binary"/>
                        <field name="generated_file_filename" invisible="1"/>
                        <field name="generation_date"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Payment File Search View -->
    <record id="view_payment_file_search" model="ir.ui.view">
        <field name="name">bhu.payment.file.search</field>
        <field name="model">bhu.payment.file</field>
        <field name="arch" type="xml">
            <search string="Payment Files">
                <field name="name"/>
                <field name="award_id"/>
                <field name="village_id"/>
                <field name="project_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment File Action -->
    <record id="action_payment_file" model="ir.actions.act_window">
        <field name="name">Payment Files / भुगतान फ़ाइलें</field>
        <field name="res_model">bhu.payment.file</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Payment File
            </p>
            <p>
                Payment Files are generated from Draft Awards for each village, containing payment details for all landowners.
            </p>
        </field>
    </record>

</odoo>

