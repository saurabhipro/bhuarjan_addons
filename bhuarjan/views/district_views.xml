<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="bhu_district_view_list" model="ir.ui.view">
        <field name="name">bhu.district.view.list</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <list string="Districts">
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="bhu_district_view_form" model="ir.ui.view">
        <field name="name">bhu.district.view.form</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code"/>
                            <field name="state_id" required="1" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        </group>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_district" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">bhu.district</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
