<odoo>
    <!-- Wizard Form -->
    <record id="view_report_wizard_form" model="ir.ui.view">
        <field name="name">report.wizard.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                <group>
                    <field name="form_10"/>
                </group>
                <footer>
                    <button name="action_print_report"
                            string="Print"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_cancel"
                            string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Report Wizard</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Optional: menu to open wizard -->
    <menuitem id="menu_report_wizard"
              name="Report Wizard"
              parent="menu_bhu_reporting"
              action="action_report_wizard"
              sequence="50"/>
</odoo>
