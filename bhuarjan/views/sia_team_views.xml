<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- SIA Team List View -->
    <record id="view_sia_team_list" model="ir.ui.view">
        <field name="name">bhu.sia.team.list</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <list string="SIA Teams / SIA टीमें">
                <field name="name"/>
                <field name="project_id"/>
                <field name="requiring_body_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-info="state == 'submitted'"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
            </list>
        </field>
    </record>

    <!-- SIA Team Form View -->
    <record id="view_sia_team_form" model="ir.ui.view">
        <field name="name">bhu.sia.team.form</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <form string="SIA Team / SIA टीम">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" 
                            invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                            invisible="state != 'submitted'"/>
                    <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                            invisible="state not in ('submitted', 'approved')"/>
                    <button name="action_draft" string="Reset to Draft" type="object" class="btn-secondary" 
                            invisible="state == 'draft'"/>
                    <button name="action_download_sia_file" string="Download SIA File" type="object" 
                            class="btn-primary" icon="fa-download"
                            invisible="state not in ('submitted', 'approved') or not sia_file"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back"/>
                </header>
                <sheet>
                    <group col="2">
                        <group>
                            <field name="project_id" required="1"/>
                            <field name="requiring_body_id" required="1"/>
                            <field name="village_ids" widget="many2many_tags" 
                                   placeholder="Select affected villages..."
                                   options="{'no_create_edit': True}"
                                   context="{'default_project_id': project_id}"/>
                        </group>
                        <group>
                            <field name="total_khasras_count" readonly="1"/>
                            <field name="total_area_acquired" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Team Members / टीम सदस्य">
                            <group col="2">
                                <group string="(क) Non-Government Social Scientist / गैर शासकीय सामाजिक वैज्ञानिक">
                                    <field name="non_govt_social_scientist_ids" widget="many2many_tags" nolabel="1"
                                           placeholder="Select non-government social scientist..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(ख) Representatives of Local Bodies / स्थानीय निकायों के प्रतिनिधि">
                                    <field name="local_bodies_representative_ids" widget="many2many_tags" nolabel="1"
                                           placeholder="Select representatives of local bodies..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(ग) Resettlement Expert / पुनर्व्यवस्थापन विशेषज्ञ">
                                    <field name="resettlement_expert_ids" widget="many2many_tags" nolabel="1"
                                           placeholder="Select resettlement expert..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(घ) Technical Expert / परियोजना से संबंधित विषय का तकनीकि विशेषज्ञ">
                                    <field name="technical_expert_ids" widget="many2many_tags" nolabel="1"
                                           placeholder="Select technical expert..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                            </group>
                            <group string="(ड.) Tehsildar (Convener) / प्रभावित क्षेत्र का तहसीलदार">
                                <field name="tehsildar_id" nolabel="1"
                                       placeholder="Select Tehsildar (Convener)..."
                                       options="{'no_quick_create': True}"/>
                            </group>
                            <group>
                                <field name="sia_file" filename="sia_filename" 
                                       string="Upload SIA File / SIA फ़ाइल अपलोड करें"/>
                            </group>
                        </page>
                        <page string="Project Villages / परियोजना ग्राम" invisible="not project_id">
                            <field name="project_village_ids" nolabel="1" readonly="1"
                                   options="{'no_create': True, 'no_create_edit': True, 'no_open': True}">
                                <list>
                                    <field name="village_code" string="Village Code / ग्राम कोड"/>
                                    <field name="name" string="Village Name / ग्राम का नाम"/>
                                    <field name="district_id" string="District / जिला"/>
                                    <field name="tehsil_id" string="Tehsil / तहसील"/>
                                    <field name="total_khasras_count" string="Total Khasras / कुल खसरा"/>
                                    <field name="total_captured_area" string="Total Captured Area (Hectares) / कुल कैप्चर क्षेत्रफल (हेक्टेयर)"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- SIA Team Search View -->
    <record id="view_sia_team_search" model="ir.ui.view">
        <field name="name">bhu.sia.team.search</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <search string="Search SIA Teams">
                <field name="name"/>
                <field name="project_id"/>
                <field name="team_member_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update SIA Team Action -->
    <record id="action_create_sia_team" model="ir.actions.act_window">
        <field name="name">Create SIA Team / SIA टीम बनाएं</field>
        <field name="res_model">bhu.sia.team</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sia_team_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SIA Team!
            </p>
            <p>
                Create SIA (Social Impact Assessment) teams by adding multiple users under selected projects.
            </p>
        </field>
    </record>
</odoo>

