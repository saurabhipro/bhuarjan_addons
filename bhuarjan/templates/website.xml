<odoo>
    <data>
        <template id="brand_promotion_custom" inherit_id="web.brand_promotion" name="Custom Brand Promotion">
            <xpath expr="//t[@t-call='web.brand_promotion_message']" position="replace">
            </xpath>
        </template>

        <template id="hide_auth_providers" inherit_id="auth_oauth.providers" name="Remove OAuth Providers and Separator">
            <xpath expr="//em[contains(text(), '- or -')]" position="replace"/>
            <xpath expr="//div[@class='o_auth_oauth_providers list-group mt-1 mb-1 text-start']" position="replace"/>
        </template>
    </data>
</odoo>