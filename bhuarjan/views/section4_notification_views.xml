<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 4 Notification List View -->
    <record id="view_section4_notification_list" model="ir.ui.view">
        <field name="name">bhu.section4.notification.list</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <list string="Section 4 Notifications" delete="1" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="notification_seq_number" string="Notification Sequence Number"/>
                <field name="project_id" string="Project"/>
                <field name="requiring_body_id" string="Requiring Body"/>
                <field name="tehsil_id" string="Tehsil"/>
                <field name="village_id" string="Village"/>
                <field name="public_hearing_datetime" string="Public Hearing Date &amp; Time"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'" 
                       decoration-info="state == 'submitted'" 
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="signed_date" string="Signed Date"/>
            </list>
        </field>
    </record>

    <!-- Section 4 Notification Form View -->
    <record id="view_section4_notification_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.form</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <form string="Section 4 Notification" edit="not id or not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                    <div class="row w-100">
                        <div class="col w-100">
                            <!-- Approve Button (Collector only) -->
                            <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                    icon="fa-check"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted' or not collector_signed_file"
                                    confirm="Are you sure want to approve this record."/>
                            
                            <!-- Send Back Button (Collector only) -->
                            <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                    icon="fa-arrow-left"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted'"
                                    confirm="Are you sure want to send back this record."/>

                            <!-- Reset to Draft button (for sent back records - allows SDM to resubmit) -->
                            <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                    icon="fa-refresh"
                                    groups="bhuarjan.group_bhuarjan_sdm"
                                    invisible="state != 'send_back'"/>
                        </div>
                        <div class="col text-right" style="text-align:right; width:100% ">
                            <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}" 
                            confirm="Are you sure want to submit this record." class="oe_right"/>
                        </div>
                    </div>
                <div class="alert alert-danger" role="alert" invisible="not has_pending_surveys or not project_id or not village_id or state != 'draft'" 
                     style="margin: 10px; padding: 12px; background-color: #f8d7da; border: 1px solid #dc3545; border-radius: 4px;">
                    <strong style="color: #dc3545; font-weight: bold;">⚠ Error:</strong> <span style="color: #dc3545; font-weight: bold;">Cannot create Notification 4 for this village as it has some pending surveys that are in (Draft or Submitted stage).</span>
                </div>
                <div class="alert alert-danger" role="alert" invisible="not has_no_surveys or not project_id or not village_id or state != 'draft'" 
                     style="margin: 10px; padding: 12px; background-color: #f8d7da; border: 1px solid #dc3545; border-radius: 4px;">
                    <strong style="color: #dc3545; font-weight: bold;">⚠ Error:</strong> <span style="color: #dc3545; font-weight: bold;">No surveys in this village, so no notification can be created.</span>
                </div>
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                
                <sheet readonly="id and (has_section11 or is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit) or (has_pending_surveys and state == 'draft' and project_id and village_id) or (has_no_surveys and state == 'draft' and project_id and village_id))">
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-bell" style="margin-right: 10px;"></i>Section 4 Notification / धारा 4 अधिसूचना
                        </h1>
                    </div>
                    <!-- Hidden Fields (Auto-populated from context) -->
                    <group invisible="1">
                        <field name="pending_with" string="Pending With / लंबित" readonly="1"/>
                        <field name="project_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="village_domain"/>
                        <field name="village_id" required="1" readonly="1" domain="village_domain" options="{'no_open': True}"/>
                        <field name="requiring_body_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="tehsil_id" readonly="1"/>
                        <field name="public_hearing_datetime"/>
                    </group>
                    
                    <!-- Public Hearing Details - Editable Section -->
                    <group col="2">
                        <group>
                            <field name="public_hearing_date" string="Public Hearing Date / सार्वजनिक सुनवाई दिनांक" 
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                            <field name="public_hearing_time" string="Public Hearing Time / सार्वजनिक सुनवाई समय" 
                                   widget="float_time"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                        </group>
                        <group>
                            <field name="public_hearing_place" string="Public Hearing Place / सार्वजनिक सुनवाई स्थान" 
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                        </group>
                    </group>
                    
                    <!-- Section 4 Documents -->
                    <group string="Section 4 Documents / धारा 4 दस्तावेज़" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin" invisible="is_collector">
                                <!-- Download Section 4 Button -->
                                <button name="action_download_unsigned_file" string="Section 4" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download Section 4 Notification (Unsigned)"
                                        style="margin: 5px 0;"/>
                                
                                <!-- Upload SDM Signed Section 4 -->
                                <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                       string="Upload SDM Signed Sec 4"
                                       widget="binary"
                                       readonly="state != 'draft'"
                                       placeholder="Upload Signed Section 4 Notification"
                                       help="Upload the signed Section 4 document from SDM"/>
                                <field name="sdm_signed_filename" invisible="1"/>
                                
                                <!-- Download SDM Signed Section 4 (appears after upload) -->
                                <button name="action_download_sdm_signed_file" type="object" 
                                        class="btn-primary"
                                        title="Download SDM Signed Section 4"
                                        invisible="not sdm_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    Section 4 SDM Signed
                                </button>
                                
                                <!-- Submit to Collector Button (appears after SDM Signed is uploaded) -->
                                <button name="action_submit" string="Submit to Collector" type="object" 
                                        class="btn-primary" 
                                        icon="fa-paper-plane"
                                        confirm="Are you sure you want to submit this to Collector?"
                                        invisible="not sdm_signed_file or state != 'draft'"
                                        style="margin: 5px 0;"/>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin">
                                <!-- Download Latest PDF -->
                                <button name="action_download_latest_pdf" 
                                        string="Section 4" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"
                                        invisible="not sdm_signed_file and not collector_signed_file"
                                        style="margin: 5px 0;"/>
                                
                                <!-- Download SDM Signed Section 4 -->
                                <button name="action_download_sdm_signed_file" 
                                        type="object" 
                                        class="btn-primary"
                                        title="Download SDM Signed Section 4"
                                        invisible="not sdm_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    Section 4 SDM Signed
                                </button>
                                
                                <!-- Download Collector Signed Section 4 -->
                                <button name="action_download_collector_signed_file"
                                        type="object" 
                                        class="btn-primary"
                                        title="Download Collector Signed Section 4"
                                        invisible="not collector_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    Section 4 Collector Signed
                                </button>
                                
                                <!-- Upload Collector Signed File -->
                                <field name="collector_signed_file" filename="collector_signed_filename" 
                                    string="Upload Collector Signed Sec 4"
                                    widget="binary"
                                    readonly="state != 'submitted'"
                                    placeholder="Upload Section 4 Approval Letter"
                                    help="Upload the signed Section 4 approval document from Collector"/>
                                <field name="collector_signed_filename" invisible="1"/>
                            </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 4 Notification Search View -->
    <record id="view_section4_notification_search" model="ir.ui.view">
        <field name="name">bhu.section4.notification.search</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <search string="Section 4 Notifications">
                <field name="notification_seq_number"/>
                <field name="requiring_body_id"/>
                <field name="project_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="public_hearing_datetime"/>
                <field name="public_hearing_place"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Has Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Notifications" name="my_notifications" domain="[('create_uid', '=', uid)]"/>
                <filter string="All Notifications" name="all" domain="[]"/>
            </search>
        </field>
    </record>

    <!-- Section 4 Notification Action -->
    <record id="action_section4_notification" model="ir.actions.act_window">
        <field name="name">Section 4 Notifications</field>
        <field name="res_model">bhu.section4.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section 4 Notification!
            </p>
            <p>
                Create and manage Section 4 notifications for land acquisition. You can generate PDFs and upload signed documents.
            </p>
            <p>
                Use the "Create" button to create a new notification, or use "Generate New" action from the menu to use the wizard.
            </p>
        </field>
    </record>
    
    <!-- Action to create notification via wizard -->
    <record id="action_create_section4_notification_wizard" model="ir.actions.act_window">
        <field name="name">Generate Section 4 Notification</field>
        <field name="res_model">bhu.section4.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

