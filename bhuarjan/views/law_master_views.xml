<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Law Master List View -->
    <record id="view_bhu_law_master_list" model="ir.ui.view">
        <field name="name">bhu.law.master.list</field>
        <field name="model">bhu.law.master</field>
        <field name="arch" type="xml">
            <list string="Law Master">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Law Master Form View -->
    <record id="view_bhu_law_master_form" model="ir.ui.view">
        <field name="name">bhu.law.master.form</field>
        <field name="model">bhu.law.master</field>
        <field name="arch" type="xml">
            <form string="Law Master">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter law name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <!-- Projects using this law -->
                    <group string="Projects" col="1">
                        <field name="project_ids" nolabel="1" readonly="1">
                            <list>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="department_id"/>
                                <field name="state" widget="badge"
                                       decoration-success="state == 'active'"
                                       decoration-info="state == 'draft'"
                                       decoration-warning="state == 'completed'"
                                       decoration-danger="state == 'cancelled'"/>
                            </list>
                        </field>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Law Master Search View -->
    <record id="view_bhu_law_master_search" model="ir.ui.view">
        <field name="name">bhu.law.master.search</field>
        <field name="model">bhu.law.master</field>
        <field name="arch" type="xml">
            <search string="Search Law Master">
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Law Master Action -->
    <record id="action_bhu_law_master" model="ir.actions.act_window">
        <field name="name">Law Master</field>
        <field name="res_model">bhu.law.master</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_law_master_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Law Master record!
            </p>
            <p>
                Define laws that will be associated with projects.
            </p>
        </field>
    </record>
</odoo>

