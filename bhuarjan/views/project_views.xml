<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_bhu_project_list" model="ir.ui.view">
        <field name="name">bhu.project.list</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <list>
                <field name="department_id" string="Department / विभाग"/>
                <field name="district_id" string="District / जिला"/>
                <field name="name"/>
                <field name="code" string="Project Code"/>
                <field name="sdm_ids" widget="many2many_tags" string="SDM / उप-विभागीय मजिस्ट्रेट" options="{'no_create_edit': True}"/>
                <field name="tehsildar_ids" widget="many2many_tags" string="Tehsildar / तहसीलदार" options="{'no_create_edit': True}"/>
                <field name="state" string="Status / स्थिति" widget="badge" 
                       decoration-success="state == 'active'"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'completed'"
                       decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bhu_project_form" model="ir.ui.view">
        <field name="name">bhu.project.form</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,completed,cancelled"/>
                    <button name="action_set_active" string="Set to Active" type="object" 
                            class="oe_highlight" invisible="state == 'active'"/>
                    <button name="action_set_completed" string="Set to Completed" type="object" 
                            class="oe_highlight" invisible="state == 'completed'"/>
                    <button name="action_set_cancelled" string="Set to Cancelled" type="object" 
                            invisible="state == 'cancelled'"/>
                    <button name="action_set_draft" string="Set to Draft" type="object" 
                            invisible="state == 'draft'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="department_id"/>
                            <field name="district_id"/>
                            <field name="law_master_id" options="{'no_create': False}"/>
                            <field name="project_uuid" invisible="1"/>
                            <field name="id" invisible="1"/>
                            <button name="action_regenerate_uuid" type="object" string="Regenerate UUID / UUID पुनर्जीवित करें" class="oe_link" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_sia_exempt"/>
                            <field name="is_displacement"/>
                        </group>
                    </group>
                    
                    <!-- Affected Families and Persons (shown when is_displacement is True) -->
                    <group invisible="not is_displacement">
                        <group>
                            <field name="affected_families_count" 
                                   string="Number of Families / परिवारों की संख्या"/>
                            <field name="affected_persons_count" 
                                   string="Number of Persons / प्रभावित व्यक्तियों की संख्या"/>
                        </group>
                    </group>
                    
                    <!-- Rehabilitation Allocation Fields (shown when is_displacement is True) -->
                    <group invisible="not is_displacement">
                        <group col="2">
                            <group>
                                <field name="allocated_village" 
                                       placeholder="Enter allocated village name..."/>
                                <field name="allocated_tehsil" 
                                       placeholder="Enter allocated tehsil name..."/>
                                <field name="allocated_district" 
                                       placeholder="Enter allocated district name..."/>
                            </group>
                            <group>
                                <field name="allocated_khasra_number"
                                       placeholder="Enter allocated khasra number..."/>
                                <field name="allocated_area_hectares"
                                       placeholder="0.0000"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Villages / ग्राम">
                            <field name="village_ids" nolabel="1"
                                   options="{'no_create_edit': True}"/>
                        </page>
                        <page string="SDM / उप-विभागीय मजिस्ट्रेट">
                            <field name="sdm_ids" nolabel="1"
                                   options="{'no_create_edit': True}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                </list>
                            </field>
                        </page>
                        <page string="Tehsildar / तहसीलदार">
                            <field name="tehsildar_ids" nolabel="1"
                                   options="{'no_create_edit': True}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                </list>
                            </field>
                        </page>
                        <page string="Patwaris / पटवारी">
                            <field name="patwari_ids" nolabel="1"
                                   options="{'no_create_edit': True}"
                                   context="{'default_project_id': id, 'active_model': 'bhu.project', 'active_id': id}">
                                <list>
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="mobile"/>
                                    <field name="bhuarjan_role"/>
                                    <field name="village_ids" widget="many2many_tags" string="Assigned Villages / नियुक्त ग्राम"/>
                                    <button name="action_view_surveys_in_project" 
                                            type="object"
                                            string="Surveys"
                                            icon="fa-list-alt"
                                            class="oe_stat_button"
                                            context="{'default_project_id': parent.id, 'active_id': parent.id, 'active_model': 'bhu.project', 'compute_survey_count': True}">
                                        <field name="survey_count_in_project" widget="statinfo" string="Surveys" options="{'no_open': True}"/>
                                    </button>
                                </list>
                            </field>
                        </page>
                        <page string="Project Details / परियोजना विवरण">
                            <group>
                                <group string="(1) Number of Directly Affected Families / प्रत्यक्ष रूप से प्रभावित परिवारों की संख्या">
                                    <field name="directly_affected" nolabel="1"/>
                                </group>
                                <group string="(2) Number of Indirectly Affected Families / अप्रत्यक्ष रूप से प्रभावित परिवारों की संख्या">
                                    <field name="indirectly_affected" nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(3) Estimated Number of Private Houses and Other Assets / निजी मकानों और अन्य संपत्तियों की अनुमानित संख्या">
                                    <field name="private_assets" nolabel="1"/>
                                </group>
                                <group string="(4) Estimated Number of Government Houses and Other Assets / सरकारी मकानों और अन्य संपत्तियों की अनुमानित संख्या">
                                    <field name="government_assets" nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(5) Total Cost of the Project / परियोजना की कुल लागत">
                                    <field name="total_cost" nolabel="1"/>
                                </group>
                                <group string="(6) Benefits from the Project / परियोजना से लाभ">
                                    <field name="project_benefits" widget="text" nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(7) Measures for Compensation and Likely Expenditure / मुआवजे के उपाय और संभावित व्यय">
                                    <field name="compensation_measures" widget="text" nolabel="1"/>
                                </group>
                                <group string="(8) Other Components Affected by the Project / परियोजना से प्रभावित अन्य घटक">
                                    <field name="other_components" widget="text" nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(9) Land Map Inspection / भूमि मानचित्र निरीक्षण">
                                    <field name="map_inspection_location" nolabel="1"/>
                                </group>
                                <group string="(10) Officer authorized by Section 12 / धारा 12 द्वारा प्राधिकृत अधिकारी">
                                    <field name="authorized_officer" nolabel="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(11) Rehabilitation Administrator / पुनर्वास प्रशासक">
                                    <field name="rehab_admin_name" nolabel="1"/>
                                </group>
                            </group>
                            <group string="(13) Section 5 Text / धारा 5 पाठ">
                                <field name="section5_text_type" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">bhu.project</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
