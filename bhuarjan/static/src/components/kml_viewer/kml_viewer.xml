<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="bhuarjan.KmlViewer" owl="1">
        <div class="kml-viewer" style="width: 100%; height: 100%; min-height: 500px; display: flex; flex-direction: column;">
            <div t-if="state.error" class="alert alert-danger" role="alert">
                <t t-esc="state.error"/>
            </div>
            <div t-ref="mapContainer" class="map-container" style="flex: 1; min-height: 500px; width: 100%; border: 1px solid #ddd;">
                <div t-if="state.isLoading" class="d-flex justify-content-center align-items-center h-100 text-muted">
                    <i class="fa fa-spinner fa-spin me-2"/> Loading Map...
                </div>
            </div>
        </div>
    </t>
</templates>
