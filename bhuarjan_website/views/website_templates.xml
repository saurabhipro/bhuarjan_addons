<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="homepage" name="BHUARJAN Homepage">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                
                <!-- Hero Section -->
                <section class="bhu-hero overflow-hidden">
                    <div class="container mt-5 pt-5 pb-5">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-right">
                                <h1 class="display-3 mb-4 font-outfit">Welcome to <br/><span>BHUARJAN</span></h1>
                                <p class="lead text-white-75 mb-5">
                                    BHUARJAN is a unified digital platform by the Government of India to streamline every stage of the land acquisition process from survey to compensation with real-time monitoring, transparency, and accountability.
                                </p>
                                <div class="d-flex gap-3">
                                    <a href="/web#action=bhuarjan.action_role_based_dashboard" class="btn btn-bhu-primary btn-lg px-5 py-3 shadow-lg">
                                        Get Started <i class="fa fa-chevron-right ms-2 small"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 position-relative" data-aos="fade-left">
                                <div class="position-absolute end-0 top-0 d-none d-lg-block" style="z-index: 1; transform: translate(10%, -10%);">
                                    <div class="bg-white p-3 rounded-4 shadow-lg border-start border-4 border-success" style="max-width: 350px;">
                                        <p class="mb-0 font-italic text-dark small" style="font-weight: 500;">
                                            "Empowering transparent and efficient land governance through digital innovation."
                                        </p>
                                    </div>
                                </div>
                                <div class="rounded-5 overflow-hidden shadow-2xl border border-white border-8">
                                    <img src="/bhuarjan_website/static/src/img/hero_main.png" class="img-fluid w-100" alt="Land Survey"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Feature Icons Section -->
                <section class="py-5 bg-white">
                    <div class="container py-5">
                        <div class="row g-4">
                            <div class="col-md-6 col-lg-3" data-aos="zoom-in" data-aos-delay="100">
                                <div class="bhu-card">
                                    <div class="bhu-card-icon"><i class="fa fa-map-o"></i></div>
                                    <h4 class="font-outfit fw-bold mb-3">Transparent Land Management</h4>
                                    <p class="text-muted mb-0">Real-time tracking of every acquisition project.</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3" data-aos="zoom-in" data-aos-delay="200">
                                <div class="bhu-card">
                                    <div class="bhu-card-icon"><i class="fa fa-users"></i></div>
                                    <h4 class="font-outfit fw-bold mb-3">Empowering Every Level</h4>
                                    <p class="text-muted mb-0">Paperless coordination from Patwari to Collector.</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3" data-aos="zoom-in" data-aos-delay="300">
                                <div class="bhu-card" style="background: var(--bhu-primary); color: white;">
                                    <div class="bhu-card-icon" style="background: rgba(255,255,255,0.2); color: white;"><i class="fa fa-laptop"></i></div>
                                    <h4 class="font-outfit fw-bold mb-3">Technology Meets Governance</h4>
                                    <p class="opacity-75 mb-0">GIS mapping and mobile surveys for accuracy.</p>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3" data-aos="zoom-in" data-aos-delay="400">
                                <div class="bhu-card">
                                    <div class="bhu-card-icon" style="color: var(--bhu-secondary); background: rgba(136, 176, 75, 0.1);"><i class="fa fa-check-circle-o"></i></div>
                                    <h4 class="font-outfit fw-bold mb-3">Fair &amp; Inclusive Approach</h4>
                                    <p class="text-muted mb-0">Digital records ensure transparency and trust.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Why Choose Section -->
                <section class="py-5 bhu-stats">
                    <div class="container py-5">
                        <div class="text-center mb-5">
                            <h2 class="display-4 font-outfit mb-3">Why Choose <span>BHUARJAN</span> ?</h2>
                            <p class="lead text-muted">Dive deeper into our abilities</p>
                        </div>
                        <div class="row g-5">
                            <div class="col-md-6 col-lg-3 text-center">
                                <div class="mb-4">
                                    <img src="/bhuarjan_website/static/src/img/efficiency_icon.svg" style="width: 100px; height: 100px;" class="mb-3" alt="Efficiency"/>
                                </div>
                                <h5 class="fw-bold mb-3"><i class="fa fa-cog text-secondary me-2 small"></i> Efficiency</h5>
                                <p class="text-muted small">Streamlines workflow and reduces manual effort.</p>
                            </div>
                            <div class="col-md-6 col-lg-3 text-center">
                                <div class="mb-4">
                                    <img src="/bhuarjan_website/static/src/img/transparency_icon.svg" style="width: 100px; height: 100px;" class="mb-3" alt="Transparency"/>
                                </div>
                                <h5 class="fw-bold mb-3"><i class="fa fa-lock text-warning me-2 small"></i> Transparency</h5>
                                <p class="text-muted small">Every process is traceable through digital records.</p>
                            </div>
                            <div class="col-md-6 col-lg-3 text-center">
                                <div class="mb-4">
                                    <img src="/bhuarjan_website/static/src/img/timeliness_icon.svg" style="width: 100px; height: 100px;" class="mb-3" alt="Timeliness"/>
                                </div>
                                <h5 class="fw-bold mb-3"><i class="fa fa-clock-o text-primary me-2 small"></i> Timeliness</h5>
                                <p class="text-muted small">Real-time progress visibility across stages.</p>
                            </div>
                            <div class="col-md-6 col-lg-3 text-center">
                                <div class="mb-4">
                                    <img src="/bhuarjan_website/static/src/img/collaboration_icon.svg" style="width: 100px; height: 100px;" class="mb-3" alt="Collaboration"/>
                                </div>
                                <h5 class="fw-bold mb-3"><i class="fa fa-users text-info me-2 small"></i> Collaboration</h5>
                                <p class="text-muted small">Enables seamless coordination between field and admin teams.</p>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Real Time Insights Section -->
                <section class="py-5 bg-white">
                    <div class="container py-5">
                        <div class="row align-items-center">
                            <div class="col-lg-5 mb-5 mb-lg-0">
                                <h2 class="display-5 font-outfit mb-4">Real Time Insights</h2>
                                <ul class="list-unstyled">
                                    <li class="mb-4">
                                        <h5 class="fw-bold"><i class="fa fa-check-circle text-success me-2"></i> On-Ground Collection</h5>
                                        <p class="text-muted mb-0">Patwaris and SIA teams record land details, GPS points, and documents right from the field â€” even offline.</p>
                                    </li>
                                    <li class="mb-4">
                                        <h5 class="fw-bold"><i class="fa fa-check-circle text-success me-2"></i> Central Dashboard</h5>
                                        <p class="text-muted mb-0">Collectors and officials view project progress, approvals, and compensation status in real time for faster, informed decisions.</p>
                                    </li>
                                </ul>
                                <div class="row pt-4">
                                    <div class="col-6 mb-4">
                                        <div class="p-3 bg-light rounded-3 text-center border-bottom border-3 border-primary">
                                            <h3 class="fw-bold mb-1" t-esc="stats['total_projects']"/>
                                            <p class="text-muted mb-0 small uppercase fw-bold">Total Projects</p>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-4">
                                        <div class="p-3 bg-light rounded-3 text-center border-bottom border-3 border-success">
                                            <h3 class="fw-bold mb-1" t-esc="stats['approved_surveys']"/>
                                            <p class="text-muted mb-0 small uppercase fw-bold">Surveys Approved</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="position-relative">
                                    <img src="/bhuarjan_website/static/src/img/officials_map.png" class="img-fluid rounded-5 shadow-2xl" alt="Dashboard Preview"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- How It Works Section -->
                <section class="py-5 bhu-light">
                    <div class="container py-5 text-center">
                        <h2 class="display-5 font-outfit mb-5">How It Works ?</h2>
                        <div class="row">
                            <div class="col-md-2 mb-4">
                                <div class="bhu-process-number">1</div>
                                <h6 class="fw-bold">Form 10 Entry</h6>
                                <p class="text-muted small">Patwari records land details and uploads maps &amp; photos.</p>
                            </div>
                            <div class="col-md-1 d-none d-md-flex align-items-center justify-content-center">
                                <i class="fa fa-long-arrow-right text-muted opacity-50 mb-5"></i>
                            </div>
                            <div class="col-md-2 mb-4">
                                <div class="bhu-process-number">2</div>
                                <h6 class="fw-bold">Section 4 Notification</h6>
                                <p class="text-muted small">Collector reviews entries and issues official notification.</p>
                            </div>
                            <div class="col-md-1 d-none d-md-flex align-items-center justify-content-center">
                                <i class="fa fa-long-arrow-right text-muted opacity-50 mb-5"></i>
                            </div>
                            <div class="col-md-2 mb-4">
                                <div class="bhu-process-number">3</div>
                                <h6 class="fw-bold">Public Hearing &amp; SIA Report</h6>
                                <p class="text-muted small">SIA conducts field study and submits findings online.</p>
                            </div>
                            <div class="col-md-1 d-none d-md-flex align-items-center justify-content-center">
                                <i class="fa fa-long-arrow-right text-muted opacity-50 mb-5"></i>
                            </div>
                            <div class="col-md-3 mb-4">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="bhu-process-number">4</div>
                                        <h6 class="fw-bold">Expert Review</h6>
                                        <p class="text-muted small">Committee examines reports and provides recommendations.</p>
                                    </div>
                                    <div class="col-6">
                                        <div class="bhu-process-number">5</div>
                                        <h6 class="fw-bold">Final Approval</h6>
                                        <p class="text-muted small">Collector finalizes and publishes acquisition order.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Footer CTA -->
                <section class="py-5" style="background: var(--bhu-primary); color: white;">
                    <div class="container py-5">
                        <div class="row align-items-center">
                            <div class="col-lg-7">
                                <h2 class="display-5 font-outfit mb-4">Build the Future of Digital Land Management</h2>
                                <p class="lead mb-0 opacity-75">Join us in making land acquisition faster, fairer, and more transparent.</p>
                            </div>
                            <div class="col-lg-5 text-lg-end mt-4 mt-lg-0">
                                <div class="rounded-5 overflow-hidden shadow-2xl border border-white border-4" style="max-width: 400px; display: inline-block;">
                                    <img src="/bhuarjan_website/static/src/img/rural_landscape.png" class="img-fluid" alt="Rural India"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </t>
    </template>
</odoo>
