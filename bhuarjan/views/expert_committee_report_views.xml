<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Expert Committee Member Line List View -->
    <record id="view_expert_committee_member_line_list" model="ir.ui.view">
        <field name="name">bhu.expert.committee.member.line.list</field>
        <field name="model">bhu.expert.committee.member.line</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="1" delete="1">
                <field name="sequence" widget="handle"/>
                <field name="member_type" column_invisible="1"/>
                <field name="name" string="Name / नाम"/>
                <field name="address" string="Address / पता"/>
                <field name="post" string="Post / पद"/>
            </list>
        </field>
    </record>

    <!-- Expert Committee Report List View -->
    <record id="view_expert_committee_report_list" model="ir.ui.view">
        <field name="name">bhu.expert.committee.report.list</field>
        <field name="model">bhu.expert.committee.report</field>
        <field name="arch" type="xml">
            <list string="Expert Group Reports" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="name" string="Report Name"/>
                <field name="project_id" string="Project"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'" 
                       decoration-info="state == 'submitted'" 
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="signed_date" string="Signed Date"/>
                <field name="signatory_name" string="Signatory Name"/>
            </list>
        </field>
    </record>

    <!-- Expert Committee Report Form View -->
    <record id="view_expert_committee_report_form" model="ir.ui.view">
        <field name="name">bhu.expert.committee.report.form</field>
        <field name="model">bhu.expert.committee.report</field>
        <field name="arch" type="xml">
            <form string="Expert Committee Report / विशेषज्ञ समिति रिपोर्ट" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                    <div class="row w-100">
                        <div class="col w-100">
                                <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                                                icon="fa-paper-plane"
                                                groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                                invisible="not sdm_signed_file or state != 'draft'"
                                                confirm="Are you sure want to submit this record."
                                                style="width: 100%; margin-top: 10px;"/>
                                <!-- Approve Button (Collector only) -->
                            <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                    icon="fa-check"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted' or not collector_signed_file"
                                    confirm="Are you sure want to approve this record."/>
                            
                            <!-- Send Back Button (Collector only) -->
                            <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                    icon="fa-arrow-left"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted'"
                                    confirm="Are you sure want to send back this record."/>

                            <!-- Reset to Draft button (for sent back records - allows SDM to resubmit) -->
                            <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                    icon="fa-refresh"
                                    groups="bhuarjan.group_bhuarjan_sdm"
                                    invisible="state != 'send_back'"/>
                        </div>
                        <div class="col text-right" style="text-align:right; width:100% ">
                            <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}" 
                            confirm="Are you sure want to submit this record." class="oe_right"/>
                        </div>
                    </div>
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-graduation-cap" style="margin-right: 10px;"></i>Expert Committee Report / विशेषज्ञ समिति रिपोर्ट
                        </h1>
                    </div>
                    
                    <!-- Kramank Field - Visible and Optional -->
                    <group>
                        <field name="kramank" placeholder="Enter क्रमांक (Reference Number)" 
                               readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                    </group>
                    
                    <!-- Hidden Fields (Auto-populated from context) -->
                    <group invisible="1">
                        <field name="pending_with" string="Pending With / लंबित" readonly="1"/>
                        <field name="project_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="village_ids" widget="many2many_tags" readonly="1" options="{'no_create_edit': True}"/>
                        <field name="requiring_body_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="total_area_acquired" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Team Members / टीम सदस्य">
                            <group string="(क) Non-Government Social Scientist / गैर शासकीय सामाजिक वैज्ञानिक">
                                <field name="non_govt_social_scientist_line_ids" nolabel="1" 
                                       context="{'default_member_type': 'non_govt_social_scientist'}"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit)"
                                       control="full">
                                    <list editable="bottom" create="1" delete="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="member_type" column_invisible="1"/>
                                        <field name="name" string="Name / नाम"/>
                                        <field name="address" string="Address / पता"/>
                                        <field name="post" string="Post / पद"/>
                                    </list>
                                </field>
                            </group>
                            
                            <group string="(ख) Representatives of Local Bodies / ग्राम पंचायत या नगरीय निकाय के प्रतिनिधि">
                                <field name="local_bodies_representative_line_ids" nolabel="1"
                                       context="{'default_member_type': 'local_bodies_representative'}"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit)"
                                       control="full">
                                    <list editable="bottom" create="1" delete="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="member_type" column_invisible="1"/>
                                        <field name="name" string="Name / नाम"/>
                                        <field name="address" string="Address / पता"/>
                                        <field name="post" string="Post / पद"/>
                                    </list>
                                </field>
                            </group>
                            
                            <group string="(ग) Resettlement Expert / पुनर्व्यवस्थापन संबंधी विशेषज्ञ">
                                <field name="resettlement_expert_line_ids" nolabel="1"
                                       context="{'default_member_type': 'resettlement_expert'}"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit)"
                                       control="full">
                                    <list editable="bottom" create="1" delete="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="member_type" column_invisible="1"/>
                                        <field name="name" string="Name / नाम"/>
                                        <field name="address" string="Address / पता"/>
                                        <field name="post" string="Post / पद"/>
                                    </list>
                                </field>
                            </group>
                            
                            <group string="(घ) Technical Expert / परियोजना से संबंधित विषय का तकनीकि विशेषज्ञ">
                                <field name="technical_expert_line_ids" nolabel="1"
                                       context="{'default_member_type': 'technical_expert'}"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit)"
                                       control="full">
                                    <list editable="bottom" create="1" delete="1">
                                        <field name="sequence" widget="handle"/>
                                        <field name="member_type" column_invisible="1"/>
                                        <field name="name" string="Name / नाम"/>
                                        <field name="address" string="Address / पता"/>
                                        <field name="post" string="Post / पद"/>
                                    </list>
                                </field>
                            </group>
                            <group string="Original Report / मूल रिपोर्ट">
                                <field name="report_file" filename="report_filename" readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                                <field name="report_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Expert Report / विशेषज्ञ रिपोर्ट">
                            <style>
                                @media (max-width: 768px) {
                                    .responsive-expert-group {
                                        flex-direction: column !important;
                                    }
                                    .responsive-expert-group > * {
                                        width: 100% !important;
                                        margin-bottom: 15px !important;
                                    }
                                }
                                .responsive-expert-group {
                                    display: flex;
                                    flex-wrap: wrap;
                                    gap: 50px;
                                }
                                .responsive-expert-group > * {
                                    flex: 1;
                                    min-width: 300px;
                                }
                            </style>
                            <!-- SDM Section -->
                            <group string="SDM Section / SDM अनुभाग" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <!-- Download Unsigned Expert Committee Report -->
                                <button name="action_download_unsigned_file" string="EC" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download Expert Committee Report (Unsigned)"
                                        style="margin: 5px 0;"/>
                                
                                <!-- Upload SDM Signed File -->
                                <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                       string="Upload SDM Signed EC"
                                       widget="binary"
                                       readonly="state != 'draft'"
                                       placeholder="Upload Signed Expert Committee Report"
                                       help="Upload the signed Expert Committee document from SDM"/>
                                <field name="sdm_signed_filename" invisible="1"/>
                                
                                <!-- Download SDM Signed Expert Committee Report -->
                                <button name="action_download_sdm_signed_file" type="object" 
                                        class="btn-primary"
                                        title="Download SDM Signed Expert Committee Report"
                                        invisible="not sdm_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    EC SDM Signed
                                </button>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin">
                                <!-- Download Latest PDF -->
                                <button name="action_download_latest_pdf" 
                                        string="EC" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"
                                        invisible="not sdm_signed_file and not collector_signed_file"
                                        style="margin: 5px 0;"/>
                                
                                <!-- Download SDM Signed Expert Committee Report -->
                                <button name="action_download_sdm_signed_file" 
                                        type="object" 
                                        class="btn-primary"
                                        title="Download SDM Signed Expert Committee Report"
                                        invisible="not sdm_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    EC SDM Signed
                                </button>
                                
                                <!-- Download Collector Signed Expert Committee -->
                                <button name="action_download_collector_signed_file"
                                        type="object" 
                                        class="btn-primary"
                                        title="Download Collector Signed Expert Committee"
                                        invisible="not collector_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    EC Collector Signed
                                </button>
                                
                                <!-- Upload Collector Signed File -->
                                <field name="collector_signed_file" filename="collector_signed_filename" 
                                    string="Upload Collector Signed EC"
                                    widget="binary"
                                    readonly="state != 'submitted'"
                                    placeholder="Upload Expert Committee Approval Letter"
                                    help="Upload the signed Expert Committee approval document from Collector"/>
                                <field name="collector_signed_filename" invisible="1"/>
                            </group>
                            
                            <!-- Expert Group Report Section -->
                            <group string="Expert Group Report / विशेषज्ञ समूह रिपोर्ट" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <!-- Upload Field -->
                                <field name="expert_group_report_file" filename="expert_group_report_filename" 
                                       string="Upload Expert Group Report"
                                       widget="binary"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                       placeholder="Upload Expert Group Report"/>
                                <field name="expert_group_report_filename" invisible="1"/>
                                
                                <!-- Download Button -->
                                <button name="action_download_expert_group_report" string="Expert Group Report" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download Expert Group Report"
                                        invisible="not expert_group_report_file"
                                        style="margin: 5px 0;"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Expert Committee Report Search View -->
    <record id="view_expert_committee_report_search" model="ir.ui.view">
        <field name="name">bhu.expert.committee.report.search</field>
        <field name="model">bhu.expert.committee.report</field>
        <field name="arch" type="xml">
            <search string="Expert Committee Reports">
                <field name="name"/>
                <field name="project_id"/>
                <field name="signatory_name"/>
                <filter string="Draft / प्रारूप" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted / प्रस्तुत" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved / स्वीकृत" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Sent Back / वापस भेजा गया" name="send_back" domain="[('state', '=', 'send_back')]"/>
                <filter string="Has Signed Document / हस्ताक्षरित दस्तावेज़ है" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Reports / मेरी रिपोर्ट" name="my_reports" domain="[('create_uid', '=', uid)]"/>
            </search>
        </field>
    </record>

    <!-- Expert Committee Report Action -->
    <record id="action_expert_committee_report" model="ir.actions.act_window">
        <field name="name">Expert Group Reports</field>
        <field name="res_model">bhu.expert.committee.report</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Expert Committee Report!
            </p>
            <p>
                Create and manage Expert Committee reports. You can:
            </p>
            <ul>
                <li>Upload original reports and signed documents</li>
                <li>Generate Expert Committee Orders directly from reports</li>
                <li>Track signatory information and approval status</li>
            </ul>
            <p>
                Use the "Create" button to create a new report, then upload files and generate orders as needed.
            </p>
        </field>
    </record>

</odoo>

