    <record id="menu_bhu_village" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('bhuarjan.group_bhuarjan_admin')), (4, ref('base.group_system'))]"/>
    </record>
    
    
    <!-- Survey access rule for Patwari -->
    <data noupdate="0">
        <record id="record_bhu_survey_rule" model="ir.rule">
            <field name="name">Patwari can see own survey only</field>
            <field name="model_id" ref="model_bhu_survey"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('bhuarjan.group_bhuarjan_patwari'))]"/>
        </record>
        
        
        <!-- Section 11 Notification access rights -->
        <record id="access_bhu_section11_notification_user" model="ir.model.access">
            <field name="name">bhu.section11.notification.model_access</field>
            <field name="model_id" ref="model_bhu_section11_notification"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Section 15 Objection access rights -->
        <record id="access_bhu_section15_objection_user" model="ir.model.access">
            <field name="name">bhu.section15.objection.model_access</field>
            <field name="model_id" ref="model_bhu_section15_objection"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Post-Award Payment access rights -->
        <record id="access_bhu_post_award_payment_user" model="ir.model.access">
            <field name="name">bhu.post.award.payment.model_access</field>
            <field name="model_id" ref="model_bhu_post_award_payment"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Payment Reconciliation access rights -->
        <record id="access_bhu_payment_reconciliation_user" model="ir.model.access">
            <field name="name">bhu.payment.reconciliation.model_access</field>
            <field name="model_id" ref="model_bhu_payment_reconciliation"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>