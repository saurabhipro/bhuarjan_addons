<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 4 Notification List View -->
    <record id="view_section4_notification_list" model="ir.ui.view">
        <field name="name">bhu.section4.notification.list</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <list string="Section 4 Notifications" delete="1" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="notification_seq_number" string="Notification Sequence Number"/>
                <field name="requiring_body_id" string="Requiring Body"/>
                <field name="project_id" string="Project"/>
                <field name="tehsil_id" string="Tehsil"/>
                <field name="village_id" string="Village"/>
                <field name="area_captured_from_form10" string="Area from Form 10"/>
                <field name="public_hearing_datetime" string="Public Hearing Date &amp; Time"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'" 
                       decoration-info="state == 'submitted'" 
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="signed_date" string="Signed Date"/>
            </list>
        </field>
    </record>

    <!-- Section 4 Notification Form View -->
    <record id="view_section4_notification_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.form</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <form string="Section 4 Notification" edit="not id or not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                <header>
                    <group>
                        <!-- Submit Button for SDM (in draft state) -->
                        <button name="action_submit" string="Submit to Collector" type="object" class="btn-success" 
                                icon="fa-paper-plane"
                                groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                invisible="not sdm_signed_file or state != 'draft'"
                                confirm="Are you sure want to submit this record."/>
                        
                        <!-- Action Buttons: Approve, Send Back -->
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                icon="fa-check"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted' or not collector_signed_file"/>
                        <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                icon="fa-arrow-left"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted'"/>
                        
                        <!-- Resubmit button (for sent back records) -->
                        <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                icon="fa-refresh"
                                groups="bhuarjan.group_bhuarjan_sdm"
                                invisible="state != 'send_back'"/>
                    </group>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}"/>
                </header>
                <div class="alert alert-danger" role="alert" invisible="not has_pending_surveys or not project_id or not village_id or state != 'draft'" 
                     style="margin: 10px; padding: 12px; background-color: #f8d7da; border: 1px solid #dc3545; border-radius: 4px;">
                    <strong style="color: #dc3545; font-weight: bold;">⚠ Error:</strong> <span style="color: #dc3545; font-weight: bold;">Cannot create Notification 4 for this village as it has some pending surveys that are in (Draft or Submitted stage).</span>
                </div>
                <div class="alert alert-danger" role="alert" invisible="not has_no_surveys or not project_id or not village_id or state != 'draft'" 
                     style="margin: 10px; padding: 12px; background-color: #f8d7da; border: 1px solid #dc3545; border-radius: 4px;">
                    <strong style="color: #dc3545; font-weight: bold;">⚠ Error:</strong> <span style="color: #dc3545; font-weight: bold;">No surveys in this village, so no notification can be created.</span>
                </div>
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                
                <sheet readonly="id and (has_section11 or is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit) or (has_pending_surveys and state == 'draft' and project_id and village_id) or (has_no_surveys and state == 'draft' and project_id and village_id))">
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-bell" style="margin-right: 10px;"></i>Section 4 Notification / धारा 4 अधिसूचना
                        </h1>
                    </div>
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <!-- SDM can edit in draft/send_back, Collector can edit in submitted, readonly when approved (except admin) -->
                            <field name="project_id" required="1" readonly="id and (is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="requiring_body_id" required="1" readonly="id and (is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))"/>
                            <field name="village_domain" invisible="1"/>
                            <field name="tehsil_id" readonly="1"/>
                            <field name="village_id" required="1" 
                                   domain="village_domain"
                                   options="{'no_create_edit': True,'no_create':True,'no_open':True}"
                                   readonly="id and (is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))"
                                   placeholder="Select village from project..."/>
                        </group>
                        <group>
                            <field name="area_captured_from_form10" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Section 4 Documents / धारा 4 दस्तावेज़">
                            <!-- SDM Section -->
                            <group string="SDM Section / SDM अनुभाग" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 4 Documents">
                                        <!-- Download Unsigned Section 4 -->
                                        <button name="action_download_unsigned_file" string="Download Section 4 (Unsigned)" type="object" 
                                                class="btn-success" icon="fa-file-pdf"
                                                title="Download Section 4 Notification (Unsigned)"/>
                                        
                                        <!-- Download SDM Signed Section 4 -->
                                        <button name="action_download_sdm_signed_file" string="Download SDM Signed Section 4" type="object" 
                                                class="btn-success" icon="fa-download"
                                                title="Download SDM Signed Notification"
                                                invisible="not sdm_signed_file"/>
                                    </group>
                                    <group string="Upload SDM Signed Section 4">
                                        <!-- Upload SDM Signed File (editable only in draft state) -->
                                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                               string="Upload SDM Signed Section 4"
                                               widget="binary"
                                               readonly="state != 'draft'"
                                               placeholder="Upload Signed Section 4 Notification"
                                               help="Upload the signed Section 4 document from SDM"
                                               invisible="sdm_signed_file"/>
                                        <field name="sdm_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file with delete option -->
                                        <group invisible="not sdm_signed_file or state != 'draft'">
                                            <div class="d-flex align-items-center" style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                                <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                                       widget="binary"
                                                       readonly="1"
                                                       nolabel="1"
                                                       style="flex: 1;"/>
                                                <button name="action_delete_sdm_signed_file" string="" type="object" 
                                                        class="btn btn-sm btn-danger" icon="fa-trash"
                                                        confirm="Are you sure you want to delete the current file? You can upload a new file after deletion."
                                                        title="Delete current file and upload a new one"
                                                        style="margin-left: 10px;"/>
                                            </div>
                                        </group>
                                    </group>
                                </group>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 4 Documents">
                                        <!-- Download Collector Signed Section 4 -->
                                        <button name="action_download_collector_signed_file" string="Download Collector Signed Section 4" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Collector Signed Approval"
                                                invisible="not collector_signed_file"/>
                                        
                                        <!-- Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned) -->
                                        <button name="action_download_latest_pdf" string="Download Latest PDF Report" type="object" 
                                                class="btn-info" icon="fa-file-pdf"
                                                title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"
                                                invisible="not sdm_signed_file and not collector_signed_file"/>
                                    </group>
                                    <group string="Upload Collector Signed Section 4">
                                        <!-- Upload Collector Signed File (editable only in submitted state) -->
                                        <field name="collector_signed_file" filename="collector_signed_filename" 
                                               string="Upload Collector Signed Section 4"
                                               widget="binary"
                                               readonly="state != 'submitted'"
                                               placeholder="Upload Section 4 Approval Letter"
                                               help="Upload the signed Section 4 approval document from Collector"
                                               invisible="collector_signed_file"/>
                                        <field name="collector_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file with delete option -->
                                        <group invisible="not collector_signed_file or state != 'submitted'">
                                            <div class="d-flex align-items-center" style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                                <field name="collector_signed_file" filename="collector_signed_filename" 
                                                       widget="binary"
                                                       readonly="1"
                                                       nolabel="1"
                                                       style="flex: 1;"/>
                                                <button name="action_delete_collector_signed_file" string="" type="object" 
                                                        class="btn btn-sm btn-danger" icon="fa-trash"
                                                        confirm="Are you sure you want to delete the current file? You can upload a new file after deletion."
                                                        title="Delete current file and upload a new one"
                                                        style="margin-left: 10px;"/>
                                            </div>
                                        </group>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Surveys" icon="fa-clipboard-list" invisible="not project_id or not village_id">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 15px; padding: 8px 12px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 4px;">
                                <strong>Survey Status:</strong> Total Surveys: <strong><field name="survey_count" readonly="1" nolabel="1"/></strong> | Approved: <strong><field name="approved_survey_count" readonly="1" nolabel="1"/></strong>
                                <span style="color: green; font-weight: bold; margin-left: 15px;" invisible="not all_surveys_approved">✓ All surveys are approved or locked - You can generate the notification</span>
                                <span style="color: red; font-weight: bold; margin-left: 15px;" invisible="all_surveys_approved or survey_count == 0">⚠ Some surveys are not approved yet - Please approve all surveys first</span>
                                <span style="color: orange; font-weight: bold; margin-left: 15px;" invisible="survey_count != 0">⚠ No surveys found for selected villages</span>
                            </div>
                            <field name="survey_ids" readonly="1" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="user_id" string="Surveyor"/>
                                    <field name="project_id" string="Project"/>
                                    <field name="district_name" string="District"/>
                                    <field name="village_id" string="Village"/>
                                    <field name="khasra_number" string="Khasra Number"/>
                                    <field name="total_area" string="Total Area"/>
                                    <field name="acquired_area" string="Acquired Area"/>
                                    <field name="state" widget="badge" string="Status"
                                           decoration-success="state == 'approved'" 
                                           decoration-info="state == 'submitted'" 
                                           decoration-warning="state == 'draft'"
                                           decoration-danger="state == 'rejected'"
                                           decoration-muted="state == 'locked'"/>
                                    <field name="survey_date" string="Survey Date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Public Hearing Details / सार्वजनिक सुनवाई विवरण" icon="fa-calendar-alt">
                            <!-- Public Purpose Section -->
                            <group string="Public Purpose / लोक प्रयोजन">
                                <group>
                                    <field name="project_id" string="Project Name / परियोजना का नाम" 
                                           readonly="1"
                                           options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                                </group>
                                <group>
                                    <field name="public_purpose" string="Additional Details / अतिरिक्त विवरण" 
                                           placeholder="Enter additional description of public purpose for land acquisition (optional)..." 
                                           widget="html" 
                                           readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                                </group>
                            </group>
                            <!-- Public Hearing Details Section -->
                            <group string="Public Hearing Details / सार्वजनिक सुनवाई विवरण">
                                <group col="2">
                                    <field name="public_hearing_datetime" widget="datetime" 
                                           readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                                    <field name="public_hearing_place" 
                                           readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                                </group>
                            </group>
                        </page>
                        <page string="Project Details / परियोजना विवरण" icon="fa-info-circle">
                            <!-- Section 4 Questions -->
                            <group>
                                <group string="(1) Brief Description of Public Purpose / लोक प्रयोजन का संक्षिप्त विवरण">
                                    <field name="brief_description" widget="html" nolabel="1"
                                           readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit and id) or (state in ('draft', 'send_back') and not can_sdm_edit and id)"/>
                                </group>
                                <group string="(2) Number of Directly Affected Families / प्रत्यक्ष रूप से प्रभावित परिवारों की संख्या (From Project Master)">
                                    <field name="directly_affected" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(3) Number of Indirectly Affected Families / अप्रत्यक्ष रूप से प्रभावित परिवारों की संख्या (From Project Master)">
                                    <field name="indirectly_affected" nolabel="1" readonly="1"/>
                                </group>
                                <group string="(4) Estimated Number of Private Houses and Other Assets / निजी मकानों और अन्य संपत्तियों की अनुमानित संख्या (From Project Master)">
                                    <field name="private_assets" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(5) Estimated Number of Government Houses and Other Assets / सरकारी मकानों और अन्य संपत्तियों की अनुमानित संख्या (From Project Master)">
                                    <field name="government_assets" nolabel="1" readonly="1"/>
                                </group>
                                <group string="(6) Is the Proposed Acquisition Minimal? / क्या प्रस्तावित अर्जन न्यूनतम है? (Always Yes)">
                                    <field name="minimal_acquisition" widget="radio" nolabel="1"
                                           options="{'horizontal': true}"
                                           readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(7) Have Possible Alternatives and Their Feasibility Been Considered? / क्या संभावित विकल्पों और उनकी व्यवहार्यता पर विचार किया गया है? (Always Yes)">
                                    <field name="alternatives_considered" widget="radio" nolabel="1"
                                           options="{'horizontal': true}"
                                           readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="(8) Total Cost of the Project / परियोजना की कुल लागत (From Project Master)">
                                    <field name="total_cost" nolabel="1" readonly="1"/>
                                </group>
                                <group string="(9) Benefits from the Project / परियोजना से लाभ (From Project Master)">
                                    <field name="project_benefits" widget="html" nolabel="1" readonly="1"/>
                                </group>
                            </group>
                            <group string="(10) Measures for Compensation and Likely Expenditure / मुआवजे के उपाय और संभावित व्यय (From Project Master)">
                                <field name="compensation_measures" widget="html" nolabel="1" readonly="1"/>
                            </group>
                            <group string="(11) Other Components Affected by the Project / परियोजना से प्रभावित अन्य घटक (From Project Master)">
                                <field name="other_components" widget="html" nolabel="1" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 4 Notification Search View -->
    <record id="view_section4_notification_search" model="ir.ui.view">
        <field name="name">bhu.section4.notification.search</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <search string="Section 4 Notifications">
                <field name="notification_seq_number"/>
                <field name="requiring_body_id"/>
                <field name="project_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="public_hearing_datetime"/>
                <field name="public_hearing_place"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Has Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Notifications" name="my_notifications" domain="[('create_uid', '=', uid)]"/>
                <filter string="All Notifications" name="all" domain="[]"/>
            </search>
        </field>
    </record>

    <!-- Section 4 Notification Action -->
    <record id="action_section4_notification" model="ir.actions.act_window">
        <field name="name">Section 4 Notifications</field>
        <field name="res_model">bhu.section4.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section 4 Notification!
            </p>
            <p>
                Create and manage Section 4 notifications for land acquisition. You can generate PDFs and upload signed documents.
            </p>
            <p>
                Use the "Create" button to create a new notification, or use "Generate New" action from the menu to use the wizard.
            </p>
        </field>
    </record>
    
    <!-- Action to create notification via wizard -->
    <record id="action_create_section4_notification_wizard" model="ir.actions.act_window">
        <field name="name">Generate Section 4 Notification</field>
        <field name="res_model">bhu.section4.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

