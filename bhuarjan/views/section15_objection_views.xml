<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 15 Objection List View -->
    <record id="view_section15_objection_list" model="ir.ui.view">
        <field name="name">bhu.section15.objection.list</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <list string="Objections / आपत्तियां">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="landowner_id"/>
                <field name="objection_date"/>
                <field name="status" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Form View -->
    <record id="view_section15_objection_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.form</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <form string="Objection / आपत्ति">
                <header>
                    <button name="action_resolve" string="Resolve / हल करें" type="object" class="btn-success" 
                            invisible="status == 'resolved'" icon="fa-check"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,received,under_review,resolved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="project_id" required="1"/>
                            <field name="village_id" required="1"/>
                            <field name="landowner_id" required="1"/>
                            <field name="survey_id"/>
                        </group>
                        <group>
                            <field name="objection_date" required="1"/>
                            <field name="resolved_date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="objection_details" required="1" placeholder="Enter objection details..."/>
                    </group>
                    <group>
                        <field name="resolution_details" placeholder="Enter resolution details..." 
                               invisible="status != 'under_review' and status != 'resolved'"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Section 15 Objection Search View -->
    <record id="view_section15_objection_search" model="ir.ui.view">
        <field name="name">bhu.section15.objection.search</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <search string="Search Objections">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="landowner_id"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Under Review" name="under_review" domain="[('status', '=', 'under_review')]"/>
                <filter string="Resolved" name="resolved" domain="[('status', '=', 'resolved')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update Section 15 Objection Action -->
    <record id="action_section15_objections" model="ir.actions.act_window">
        <field name="name">Section 15 Objections / धारा 15 आपत्तियां</field>
        <field name="res_model">bhu.section15.objection</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section15_objection_search"/>
    </record>
</odoo>

