<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tende_ai_job_chat_wizard_form" model="ir.ui.view">
        <field name="name">tende_ai.job.chat.wizard.form</field>
        <field name="model">tende_ai.job.chat.wizard</field>
        <field name="arch" type="xml">
            <form string="Ask AI about this Tender Job">
                <group>
                    <field name="job_id" readonly="1"/>
                    <field name="model"/>
                    <field name="post_to_chatter"/>
                </group>
                <group>
                    <field name="question" placeholder="Ask anything about this job (e.g., 'Which bidders failed eligibility and why?')"/>
                </group>
                <group>
                    <field name="answer" readonly="1" nolabel="1" placeholder="Answer will appear here..."/>
                </group>
                <footer>
                    <button string="Ask" type="object" name="action_ask" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tende_ai_job_chat_wizard" model="ir.actions.act_window">
        <field name="name">Ask AI</field>
        <field name="res_model">tende_ai.job.chat.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_job_id': active_id}</field>
    </record>
</odoo>


