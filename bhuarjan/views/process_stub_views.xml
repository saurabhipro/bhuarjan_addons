<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Stub Views for Process Wizards -->
    
    <!-- Section 4 Notification Wizard -->
    <record id="view_section4_notification_wizard_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.wizard.form</field>
        <field name="model">bhu.section4.notification.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Section 4 Notification / धारा 4 अधिसूचना जेनरेट करें">
                <sheet>
                    <group>
                        <group>
                            <field name="project_id" required="1"/>
                            <field name="village_ids" widget="many2many_tags" required="1" 
                                   options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="public_purpose" placeholder="Enter description of public purpose for land acquisition..." 
                               widget="text" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_pdf" string="Generate PDF / PDF जेनरेट करें" type="object" class="btn-primary"/>
                    <button string="Cancel / रद्द करें" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Expert Committee Report Views -->
    <record id="view_expert_committee_report_list" model="ir.ui.view">
        <field name="name">bhu.expert.committee.report.list</field>
        <field name="model">bhu.expert.committee.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <record id="view_expert_committee_report_form" model="ir.ui.view">
        <field name="name">bhu.expert.committee.report.form</field>
        <field name="model">bhu.expert.committee.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="village_id"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="report_file" filename="report_filename"/>
                        <field name="report_filename" invisible="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

