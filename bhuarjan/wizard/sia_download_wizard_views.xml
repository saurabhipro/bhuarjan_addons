<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- SIA Download Wizard Form View -->
    <record id="view_sia_download_wizard_form" model="ir.ui.view">
        <field name="name">sia.download.wizard.form</field>
        <field name="model">sia.download.wizard</field>
        <field name="arch" type="xml">
            <form string="Download SIA Proposal">
                <group>
                    <field name="sia_team_id" invisible="1"/>
                    <field name="format" widget="radio" string="Select Download Format / डाउनलोड प्रारूप चुनें"/>
                </group>
                <footer>
                    <button string="Download / डाउनलोड करें" name="action_download" type="object" class="btn-primary"/>
                    <button string="Cancel / रद्द करें" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- SIA Download Wizard Action -->
    <record id="action_sia_download_wizard" model="ir.actions.act_window">
        <field name="name">Download SIA Proposal</field>
        <field name="res_model">sia.download.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_bhu_sia_team"/>
    </record>
</odoo>
