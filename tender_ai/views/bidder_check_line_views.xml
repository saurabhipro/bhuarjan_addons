<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tende_ai_bidder_check_line_form" model="ir.ui.view">
        <field name="name">tende_ai.bidder_check_line.form</field>
        <field name="model">tende_ai.bidder_check_line</field>
        <field name="arch" type="xml">
            <form string="Criteria Result" create="0" edit="0" delete="0" class="tender_ai_form">
                <sheet>
                    <group>
                        <group>
                            <field name="job_id"/>
                            <field name="bidder_id"/>
                            <field name="criteria_id"/>
                        </group>
                        <group>
                            <field name="sl_no" string="Sl. No."/>
                            <field name="result" widget="badge"
                                   decoration-success="result == 'pass'"
                                   decoration-danger="result == 'fail'"/>
                            <field name="proof_page" invisible="result != 'fail'"/>
                        </group>
                    </group>

                    <group string="Criteria">
                        <field name="criteria" nolabel="1"/>
                        <field name="supporting_document"/>
                    </group>

                    <group string="Analysis">
                        <field name="missing_documents"/>
                        <field name="reason"/>
                        <field name="evidence"/>
                    </group>

                    <group string="Proof" invisible="result != 'fail'">
                        <group>
                            <field name="proof_attachment_id" readonly="1"/>
                            <field name="proof_url" widget="url" string="Open highlighted PDF"/>
                        </group>
                        <group>
                            <field name="proof_excerpt" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


