<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Views - Moved to project_views.xml to avoid conflicts -->

    <!-- Department Views -->
    <record id="view_bhu_department_list" model="ir.ui.view">
        <field name="name">bhu.department.list</field>
        <field name="model">bhu.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name" string="Department Name"/>
                <field name="district_id" string="District"/>
                <field name="project_ids" widget="many2many_tags" string="Projects"/>
                <field name="contact_number" string="Contact"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_bhu_department_form" model="ir.ui.view">
        <field name="name">bhu.department.form</field>
        <field name="model">bhu.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                    <field name="icon" widget="char" class="oe_avatar" placeholder="Icon Class (e.g. fa-building)"/>
                    <div class="oe_title">
                        <label for="name" string="Department Name"/>
                        <h1>
                            <field name="name" placeholder="Enter department name..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="is_district_readonly" invisible="1"/>
                            <field name="district_id" string="District"
                                   options="{'no_create':True,'no_create_edit':True,'no_open':True}"
                                   readonly="is_district_readonly"/>
                            <field name="contact_number" string="Contact Number"/>
                            <field name="email" string="Email" widget="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Projects" name="projects">
                            <field name="project_ids" widget="many2many" 
                                   options="{'no_create_edit': True}"
                                   string="Associated Projects">
                                <list string="Projects">
                                    <field name="department_id" string="Department" column_invisible="1"/>
                                    <field name="district_id" string="District"/>
                                    <field name="name" string="Project Name"/>
                                    <field name="code" string="Project Code"/>
                                    <field name="sdm_ids" widget="many2many_tags" string="SDM"/>
                                    <field name="tehsildar_ids" widget="many2many_tags" string="Tehsildar"/>
                                    <field name="state" string="Status" widget="badge" 
                                           decoration-info="state == 'draft'"
                                           decoration-success="state == 'active'"
                                           decoration-muted="state == 'completed'"
                                           decoration-danger="state == 'cancelled'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>

            </form>
        </field>
    </record>

    <record id="action_bhu_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">bhu.department</field>
        <field name="view_mode">list,form</field>

    </record>

    <!-- Village Line Views -->
    <record id="view_bhu_village_line_form" model="ir.ui.view">
        <field name="name">bhu.village.line.form</field>
        <field name="model">bhu.village.line</field>
        <field name="arch" type="xml">
            <form string="Village">
                <sheet>
                    <group>
                        <group>
                            <field name="district_id" options="{'no_create':True,'no_create_edit':True}"/>
                            <field name="village_id" options="{'no_create':True,'no_create_edit':True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bhu_village_line_list" model="ir.ui.view">
        <field name="name">bhu.village.line.list</field>
        <field name="model">bhu.village.line</field>
        <field name="arch" type="xml">
            <list string="Villages">
                <field name="village_id"/>
                <field name="district_id"/>
            </list>
        </field>
    </record>

</odoo>
