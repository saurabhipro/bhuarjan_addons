<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 21 Notification List View -->
    <record id="view_section21_notification_list" model="ir.ui.view">
        <field name="name">bhu.section21.notification.list</field>
        <field name="model">bhu.section21.notification</field>
        <field name="arch" type="xml">
            <list string="Section 21 Notifications" delete="1">
                <field name="name" string="Notification Name"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="khasra_numbers" string="Khasra Numbers"/>
                <field name="khasra_count" string="Khasra Count"/>
                <field name="notice_date" string="Notice Date"/>
                <field name="state" widget="badge" string="Status" decoration-success="state == 'signed'" decoration-info="state == 'generated'" decoration-muted="state == 'draft'"/>
                <field name="signed_date" string="Signed Date"/>
            </list>
        </field>
    </record>

    <!-- Section 21 Notification Form View -->
    <record id="view_section21_notification_form" model="ir.ui.view">
        <field name="name">bhu.section21.notification.form</field>
        <field name="model">bhu.section21.notification</field>
        <field name="arch" type="xml">
            <form string="Section 21 Notification / धारा 21 अधिसूचना">
                <header>
                    <!-- Download Signed Document Button (visible when signed) -->
                    <button name="action_download_signed_document" string="Download Notification" type="object" 
                            class="btn-secondary" icon="fa-download"
                            invisible="not signed_document_file or state != 'signed'"
                            title="Download Signed Section 21 Notification PDF"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,signed" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-bullhorn" style="margin-right: 10px;"></i>Section 21 Notification / धारा 21 अधिसूचना
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="project_id" required="1" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="village_id" required="1" 
                                   options="{'no_create_edit': True, 'no_open':True, 'no_create':True}"
                                   placeholder="Select village from project..."/>
                        </group>
                        <group>
                            <field name="district_id" readonly="1"/>
                            <field name="tehsil_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Notice Details / नोटिस विवरण">
                        <group>
                            <field name="requisitioning_body" readonly="1"/>
                            <field name="public_purpose" readonly="1"/>
                        </group>
                        <group>
                            <field name="notice_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Section 21 Documents / धारा 21 दस्तावेज़">
                            <!-- SDM Section -->
                            <group string="SDM Section / SDM अनुभाग" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 21 Documents">
                                        <!-- Download Public Section 21 -->
                                        <button name="action_generate_public_notice" type="object" 
                                                class="btn-primary" 
                                                icon="fa-download"
                                                string="Download Public Sec 21"
                                                title="Download Section 21 Public Notice Only (Always generates fresh PDF)"/>
                                        
                                        <!-- Download Personal Section 21 -->
                                        <button name="action_generate_personal_notices_only" type="object" 
                                                class="btn-primary" 
                                                icon="fa-download"
                                                string="Download Personal Sec 21"
                                                title="Download Personal Section 21 Notices: One page per khasra (Always generates fresh PDF for all khasras in village)"/>
                                        
                                        <!-- Download All Section 21 -->
                                        <button name="action_generate_section21_all" type="object" 
                                                class="btn-primary" 
                                                icon="fa-download"
                                                string="Download All Sec 21"
                                                title="Download Both Public and Personal Section 21 Notices in one PDF"/>
                                        
                                        <!-- Download SDM Signed Section 21 -->
                                        <button name="action_download_sdm_signed_file" string="Download SDM Signed Section 21" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download SDM Signed File"
                                                invisible="not sdm_signed_file"/>
                                    </group>
                                    <group string="Upload SDM Signed Section 21">
                                        <!-- Upload SDM Signed File -->
                                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                               string="Upload SDM Signed Section 21"
                                               widget="binary"
                                               readonly="state == 'signed'"
                                               placeholder="Select SDM Signed Section 21 PDF to upload"
                                               help="Upload the signed Section 21 document from SDM"
                                               invisible="sdm_signed_file"/>
                                        <field name="sdm_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file with delete option -->
                                        <group invisible="not sdm_signed_file or state == 'signed'">
                                            <div class="d-flex align-items-center" style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                                <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                                       widget="binary"
                                                       readonly="1"
                                                       nolabel="1"
                                                       style="flex: 1;"/>
                                                <button name="action_delete_sdm_signed_file" string="" type="object" 
                                                        class="btn btn-sm btn-danger" icon="fa-trash"
                                                        confirm="Are you sure you want to delete the current file? You can upload a new file after deletion."
                                                        title="Delete current file and upload a new one"
                                                        style="margin-left: 10px;"/>
                                            </div>
                                        </group>
                                        
                                        <!-- Mark as Signed Button -->
                                        <button name="action_mark_signed" string="Mark as Signed" type="object" 
                                                class="btn-success" icon="fa-check"
                                                invisible="not sdm_signed_file or state == 'signed'"
                                                title="Mark notification as signed after uploading SDM file"/>
                                    </group>
                                </group>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin">
                                <group col="2">
                                    <group string="Download Section 21 Documents">
                                        <!-- Download Collector Signed Section 21 -->
                                        <button name="action_download_collector_signed_file" string="Download Collector Signed Section 21" type="object" 
                                                class="btn-primary" icon="fa-download"
                                                title="Download Collector Signed File"
                                                invisible="not collector_signed_file"/>
                                    </group>
                                    <group string="Upload Collector Signed Section 21">
                                        <!-- Upload Collector Signed File -->
                                        <field name="collector_signed_file" filename="collector_signed_filename" 
                                               string="Upload Collector Signed Section 21"
                                               widget="binary"
                                               readonly="state != 'generated' and state != 'signed'"
                                               placeholder="Select Collector Signed Section 21 PDF to upload"
                                               help="Upload the signed Section 21 approval document from Collector"
                                               invisible="collector_signed_file"/>
                                        <field name="collector_signed_filename" invisible="1"/>
                                        
                                        <!-- Show uploaded file with delete option -->
                                        <group invisible="not collector_signed_file or (state != 'generated' and state != 'signed')">
                                            <div class="d-flex align-items-center" style="display: flex; align-items: center; gap: 10px; margin-bottom: 10px;">
                                                <field name="collector_signed_file" filename="collector_signed_filename" 
                                                       widget="binary"
                                                       readonly="1"
                                                       nolabel="1"
                                                       style="flex: 1;"/>
                                                <button name="action_delete_collector_signed_file" string="" type="object" 
                                                        class="btn btn-sm btn-danger" icon="fa-trash"
                                                        confirm="Are you sure you want to delete the current file? You can upload a new file after deletion."
                                                        title="Delete current file and upload a new one"
                                                        style="margin-left: 10px;"/>
                                            </div>
                                        </group>
                                    </group>
                                </group>
                            </group>
                        </page>
                        <page string="Surveys / सर्वे" icon="fa-clipboard-list" invisible="not project_id or not village_id">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 15px; padding: 8px 12px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 4px;">
                                <strong>Survey Status:</strong> Total Surveys: <strong><field name="survey_count" readonly="1" nolabel="1"/></strong> | Approved: <strong><field name="approved_survey_count" readonly="1" nolabel="1"/></strong>
                                <span style="color: green; font-weight: bold; margin-left: 15px;" invisible="not all_surveys_approved">✓ All surveys are approved or locked</span>
                                <span style="color: orange; font-weight: bold; margin-left: 15px;" invisible="survey_count != 0">⚠ No surveys found for selected village</span>
                            </div>
                            <field name="survey_ids" readonly="1" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="user_id" string="Surveyor"/>
                                    <field name="project_id" string="Project"/>
                                    <field name="district_name" string="District"/>
                                    <field name="village_id" string="Village"/>
                                    <field name="khasra_number" string="Khasra Number"/>
                                    <field name="total_area" string="Total Area"/>
                                    <field name="acquired_area" string="Acquired Area"/>
                                    <field name="state" widget="badge" string="Status"
                                           decoration-success="state == 'approved'" 
                                           decoration-info="state == 'submitted'" 
                                           decoration-warning="state == 'draft'"
                                           decoration-danger="state == 'rejected'"
                                           decoration-muted="state == 'locked'"/>
                                    <field name="survey_date" string="Survey Date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 21 Notification Search View -->
    <record id="view_section21_notification_search" model="ir.ui.view">
        <field name="name">bhu.section21.notification.search</field>
        <field name="model">bhu.section21.notification</field>
        <field name="arch" type="xml">
            <search string="Section 21 Notifications">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <separator/>
                <filter string="With Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Section 21 Notification Action -->
    <record id="action_section21_notification" model="ir.actions.act_window">
        <field name="name">Section 21 Notifications / धारा 21 अधिसूचना</field>
        <field name="res_model">bhu.section21.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 21 Notification
            </p>
            <p>
                Section 21 Notification is a public notice inviting claims and objections for land acquisition.
            </p>
        </field>
    </record>

</odoo>

