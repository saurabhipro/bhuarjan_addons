<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- This file is kept to clean up orphaned view records from the database -->
    <!-- All company-related functionality has been removed from bhu.district model -->
    
    <!-- Remove orphaned view records if they exist -->
    <record id="view_district_company_form" model="ir.ui.view">
        <field name="name">bhu.district.company.form</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="state_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_district_company_list" model="ir.ui.view">
        <field name="name">bhu.district.company.list</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Remove the action if it exists -->
    <record id="action_district_company" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">bhu.district</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

