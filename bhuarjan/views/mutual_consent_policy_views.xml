<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Mutual Consent Policy List View -->
    <record id="view_mutual_consent_policy_list" model="ir.ui.view">
        <field name="name">bhu.mutual.consent.policy.list</field>
        <field name="model">bhu.mutual.consent.policy</field>
        <field name="arch" type="xml">
            <list string="Mutual Consent Policy" delete="1" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="name" string="Reference"/>
                <field name="department_id" string="Department"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="district_id" string="District"/>
                <field name="agreement_date" string="Agreement Date"/>
                <field name="landowner_consent" string="Consent" widget="boolean_toggle"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'" 
                       decoration-info="state == 'submitted'" 
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Mutual Consent Policy Form View -->
    <record id="view_mutual_consent_policy_form" model="ir.ui.view">
        <field name="name">bhu.mutual.consent.policy.form</field>
        <field name="model">bhu.mutual.consent.policy</field>
        <field name="arch" type="xml">
            <form string="Mutual Consent Purchase Policy / आपसी सहमति की क्रय नीति">
                <header>
                    <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                            icon="fa-paper-plane"
                            groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                            invisible="not sdm_signed_file or state != 'draft'"
                            confirm="Are you sure want to submit this record."/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                            icon="fa-check"
                            groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'submitted' or not collector_signed_file"
                            confirm="Are you sure want to approve this record."/>
                    <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                            icon="fa-arrow-left"
                            groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'submitted'"
                            confirm="Are you sure want to send back this record."/>
                    <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                            icon="fa-refresh"
                            groups="bhuarjan.group_bhuarjan_sdm"
                            invisible="state != 'send_back'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" 
                           options="{'clickable': True}" class="oe_right"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-handshake-o" style="margin-right: 10px;"></i>Mutual Consent Purchase Policy / आपसी सहमति की क्रय नीति
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="village_domain" invisible="1"/>
                            <field name="project_domain" invisible="1"/>
                            <field name="department_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="project_id" domain="project_domain or [('id', 'in', [])]" 
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="village_id" domain="village_domain" 
                                   options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                            <field name="district_id" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group string="Agreement Details / समझौता विवरण">
                        <field name="agreement_date"/>
                        <field name="agreement_number"/>
                    </group>
                    <group string="Landowner Details / भूमिस्वामी विवरण">
                        <field name="landowner_name"/>
                        <field name="landowner_consent" widget="boolean_toggle"/>
                        <field name="consent_date" invisible="not landowner_consent"/>
                    </group>
                    <group string="Purchase Details / क्रय विवरण">
                        <field name="purchase_amount"/>
                    </group>
                    <group string="Files / फ़ाइलें">
                        <field name="agreement_file" filename="agreement_filename"/>
                        <field name="agreement_filename" invisible="1"/>
                        <field name="consent_file" filename="consent_filename"/>
                        <field name="consent_filename" invisible="1"/>
                        <field name="sdm_signed_file" filename="sdm_signed_filename"/>
                        <field name="sdm_signed_filename" invisible="1"/>
                        <field name="collector_signed_file" filename="collector_signed_filename"/>
                        <field name="collector_signed_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Enter any additional notes..."/>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Mutual Consent Policy Search View -->
    <record id="view_mutual_consent_policy_search" model="ir.ui.view">
        <field name="name">bhu.mutual.consent.policy.search</field>
        <field name="model">bhu.mutual.consent.policy</field>
        <field name="arch" type="xml">
            <search string="Mutual Consent Policy">
                <field name="name"/>
                <field name="department_id"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="district_id"/>
                <field name="landowner_name"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Sent Back" name="send_back" domain="[('state', '=', 'send_back')]"/>
                <filter string="With Consent" name="with_consent" domain="[('landowner_consent', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Mutual Consent Policy Action -->
    <record id="action_mutual_consent_policy" model="ir.actions.act_window">
        <field name="name">Mutual Consent Policy</field>
        <field name="res_model">bhu.mutual.consent.policy</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_mutual_consent_policy_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Mutual Consent Policy record!
            </p>
        </field>
    </record>
</odoo>

