<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Stub Views for Process Wizards -->
    
    <!-- Section 4 Notification Wizard -->
    <record id="view_section4_notification_wizard_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.wizard.form</field>
        <field name="model">bhu.section4.notification.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Section 4 Notification / धारा 4 अधिसूचना जेनरेट करें">
                <sheet>
                    <group>
                        <field name="project_id" required="1"/>
                        <field name="village_id" required="1" 
                               options="{'no_create_edit': True}"/>
                    </group>
                    <notebook>
                        <page string="Basic Information / मूल जानकारी">
                            <group string="Public Purpose / लोक प्रयोजन">
                                <field name="public_purpose" placeholder="Enter description of public purpose for land acquisition..." 
                                       widget="html" nolabel="1"/>
                            </group>
                            <group string="Public Hearing Details / जन सुनवाई विवरण">
                                <group col="2">
                                    <field name="public_hearing_datetime" widget="datetime"/>
                                    <field name="public_hearing_place"/>
                                </group>
                            </group>
                        </page>
                        <page string="Section 4 Questions / धारा 4 प्रश्न">
                            <group string="(एक) लोक प्रयोजन का संक्षिप्त विवरण / Brief description of public purpose">
                                <field name="q1_brief_description" widget="html" nolabel="1"/>
                            </group>
                            <field name="q2_directly_affected"/>
                            <field name="q3_indirectly_affected"/>
                            <field name="q4_private_assets"/>
                            <field name="q5_government_assets"/>
                            <field name="q6_minimal_acquisition"/>
                            <group string="(सात) क्या संभव विकल्पों और इसकी साध्यता पर विचार कर लिया गया है? / Have possible alternatives and their feasibility been considered?">
                                <field name="q7_alternatives_considered" widget="html" nolabel="1"/>
                            </group>
                            <field name="q8_total_cost"/>
                            <group string="(नौ) परियोजना से होने वाला लाभ / Benefits from the project">
                                <field name="q9_project_benefits" widget="html" nolabel="1"/>
                            </group>
                            <group string="(दस) प्रस्तावित सामाजिक समाघात की प्रतिपूर्ति के लिये उपाय तथा उस पर होने वाला संभावित व्यय / Measures for compensation and likely expenditure">
                                <field name="q10_compensation_measures" widget="html" nolabel="1"/>
                            </group>
                            <group string="(ग्यारह) परियोजना द्वारा प्रभावित होने वाले अन्य घटक / Other components affected by the project">
                                <field name="q11_other_components" widget="html" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_generate_pdf" string="Generate PDF / PDF जेनरेट करें" type="object" class="btn-primary"/>
                    <button string="Cancel / रद्द करें" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

