<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Custom Attachment List View with Preview Button -->
    <record id="view_ir_attachment_tree_section15" model="ir.ui.view">
        <field name="name">ir.attachment.list.section15</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list string="Attachments">
                <field name="name"/>
                <field name="mimetype" invisible="1"/>
                <field name="file_size"/>
                <field name="create_date"/>
                <button name="action_preview_attachment" type="object" 
                        icon="fa-eye" 
                        string="Preview" 
                        class="oe_link"
                        invisible="mimetype != 'application/pdf'"
                        title="Preview PDF"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection List View -->
    <record id="view_section15_objection_list" model="ir.ui.view">
        <field name="name">bhu.section15.objection.list</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <list string="Objections / आपत्तियां">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="landowner_id"/>
                <field name="objection_type"/>
                <field name="objection_date"/>
                <field name="status" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Form View -->
    <record id="view_section15_objection_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.form</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <form string="Objection / आपत्ति">
                <header>
                    <button name="action_resolve" string="Resolve / हल करें" type="object" class="btn-success" 
                            invisible="status == 'resolved'" icon="fa-check"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,received,under_review,resolved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="project_id" required="1"/>
                            <field name="village_id" required="1"/>
                            <field name="filtered_landowner_ids" invisible="1"/>
                            <field name="landowner_id" required="1" 
                                   domain="[('id', 'in', filtered_landowner_ids)]"/>
                            <field name="filtered_survey_ids" invisible="1"/>
                            <field name="survey_id" options="{'no_create': True, 'no_open': True}" 
                                   context="{'show_khasra': True}"
                                   domain="[('id', 'in', filtered_survey_ids)]"/>
                        </group>
                        <group>
                            <field name="objection_date" required="1"/>
                            <field name="resolved_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Survey Details / सर्वे विवरण" invisible="not survey_id">
                            <group>
                                <group string="Basic Information / मूल जानकारी">
                                    <field name="survey_khasra_number"/>
                                    <field name="survey_date"/>
                                    <field name="survey_state" widget="badge"/>
                                    <field name="survey_project_id"/>
                                    <field name="survey_village_id"/>
                                    <field name="survey_department_id"/>
                                </group>
                                <group string="Area Information / क्षेत्रफल जानकारी">
                                    <field name="survey_total_area"/>
                                    <field name="survey_acquired_area"/>
                                    <field name="survey_crop_type"/>
                                    <field name="survey_irrigation_type"/>
                                </group>
                            </group>
                            <group>
                                <group string="Tree Information / वृक्ष जानकारी">
                                    <field name="survey_tree_count"/>
                                    <field name="survey_tree_development_stage"/>
                                </group>
                                <group string="Property Information / संपत्ति जानकारी">
                                    <field name="survey_has_house"/>
                                    <field name="survey_house_type" invisible="survey_has_house != 'yes'"/>
                                    <field name="survey_house_area" invisible="survey_has_house != 'yes'"/>
                                    <field name="survey_has_well"/>
                                    <field name="survey_well_type" invisible="survey_has_well != 'yes'"/>
                                    <field name="survey_has_tubewell"/>
                                    <field name="survey_has_pond"/>
                                </group>
                            </group>
                            <group string="Landowners / भूमिस्वामी">
                                <field name="survey_landowner_ids" widget="many2many_tags" readonly="1"/>
                            </group>
                        </page>
                        <page string="Objection Details / आपत्ति विवरण">
                            <group>
                                <group>
                                    <div style="margin-bottom: 15px;">
                                        <label for="objection_type" style="font-weight: bold; margin-bottom: 8px; display: block;">
                                            <i class="fa fa-exclamation-triangle" style="color: #f39c12; margin-right: 8px;"/>
                                            Objection Type / आपत्ति प्रकार
                                        </label>
                                        <field name="objection_type" required="1"/>
                                    </div>
                                    <field name="new_area" invisible="objection_type != 'area_increase'">
                                        <label for="new_area" string=""/>
                                        <div style="margin-bottom: 5px;">
                                            <i class="fa fa-area-chart" style="color: #7c7bad; margin-right: 8px;"/>
                                            <span>Expected New Area (Hectares) / अपेक्षित नया क्षेत्रफल (हेक्टेयर)</span>
                                        </div>
                                    </field>
                                    <field name="new_rate" invisible="objection_type != 'rate_increase'">
                                        <label for="new_rate" string=""/>
                                        <div style="margin-bottom: 5px;">
                                            <i class="fa fa-rupee" style="color: #7c7bad; margin-right: 8px;"/>
                                            <span>Expected New Rate (per Hectare) / अपेक्षित नई दर (प्रति हेक्टेयर)</span>
                                        </div>
                                    </field>
                                    <field name="other_specific_details" 
                                           invisible="objection_type == 'area_increase' or objection_type == 'rate_increase'"
                                           placeholder="Enter specific details (e.g., tree count, boundary description, etc.)...">
                                        <label for="other_specific_details" string=""/>
                                        <div style="margin-bottom: 5px;">
                                            <i class="fa fa-file-text-o" style="color: #7c7bad; margin-right: 8px;"/>
                                            <span>Specific Details / विशिष्ट विवरण</span>
                                        </div>
                                    </field>
                                </group>
                            </group>
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-comment-o" style="color: #7c7bad; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Objection Details / आपत्ति विवरण</span>
                                </div>
                                <field name="objection_details" required="1" placeholder="Enter objection details..." nolabel="1"/>
                            </group>
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-file-pdf-o" style="color: #d9534f; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Objection Document / आपत्ति दस्तावेज़</span>
                                </div>
                                <field name="objection_document_filename" invisible="1"/>
                                <field name="objection_document" filename="objection_document_filename" 
                                       widget="binary" 
                                       options="{'filename': 'objection_document_filename'}"
                                       placeholder="Upload a PDF, image, or other document related to this objection..."/>
                            </group>
                        </page>
                        <page string="Resolution / समाधान">
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-check-circle" style="color: #5cb85c; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Resolution Details / समाधान विवरण</span>
                                    <span style="color: #d9534f; margin-left: 10px;">*</span>
                                </div>
                                <field name="resolution_details" placeholder="Enter resolution details..." nolabel="1" required="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Section 15 Objection Search View -->
    <record id="view_section15_objection_search" model="ir.ui.view">
        <field name="name">bhu.section15.objection.search</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <search string="Search Objections">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="landowner_id"/>
                <field name="objection_type"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Under Review" name="under_review" domain="[('status', '=', 'under_review')]"/>
                <filter string="Resolved" name="resolved" domain="[('status', '=', 'resolved')]"/>
                <filter string="Area Increase" name="area_increase" domain="[('objection_type', '=', 'area_increase')]"/>
                <filter string="Rate Increase" name="rate_increase" domain="[('objection_type', '=', 'rate_increase')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Objection Type" name="group_objection_type" context="{'group_by': 'objection_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update Section 15 Objection Action -->
    <record id="action_section15_objections" model="ir.actions.act_window">
        <field name="name">Section 15 Objections / धारा 15 आपत्तियां</field>
        <field name="res_model">bhu.section15.objection</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section15_objection_search"/>
    </record>
</odoo>

