<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tende_ai_bidder_check_tree" model="ir.ui.view">
        <field name="name">tende_ai.bidder_check.tree</field>
        <field name="model">tende_ai.bidder_check</field>
        <field name="arch" type="xml">
            <list string="Eligibility Checks" create="0" delete="0">
                <field name="job_id"/>
                <field name="bidder_id"/>
                <field name="overall_result" widget="badge"
                       decoration-success="overall_result == 'pass'"
                       decoration-danger="overall_result == 'fail'"/>
                <field name="passed_criteria"/>
                <field name="failed_criteria"/>
                <field name="unknown_criteria"/>
                <field name="duration_seconds" string="Time (sec)"/>
                <field name="processed_on"/>
                <field name="error_message"/>
            </list>
        </field>
    </record>

    <record id="view_tende_ai_bidder_check_form" model="ir.ui.view">
        <field name="name">tende_ai.bidder_check.form</field>
        <field name="model">tende_ai.bidder_check</field>
        <field name="arch" type="xml">
            <form string="Eligibility Check" create="0" edit="0" delete="0" class="tender_ai_form">
                <header>
                    <button name="action_export_issues_excel" type="object" string="Export Issues (Excel)"
                            class="btn-secondary" icon="fa-file-excel-o"/>
                    <button name="action_add_client_query" type="object" string="Add Client Query"
                            class="btn-secondary" icon="fa-plus"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="job_id"/>
                            <field name="bidder_id"/>
                            <field name="overall_result" widget="badge"/>
                        </group>
                        <group>
                            <field name="processed_on"/>
                            <field name="duration_seconds"/>
                            <field name="error_message"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Client Queries" icon="fa-comments">
                            <field name="client_query_ids" nolabel="1">
                                <list create="0" delete="0" default_order="asked_on desc">
                                    <field name="asked_on" string="Date"/>
                                    <field name="asked_by" string="By"/>
                                    <field name="query" string="Client Query"/>
                                    <field name="state" widget="badge"/>
                                    <field name="internal_note" string="Note/Response"/>
                                </list>
                            </field>
                            <div class="text-muted" style="margin-top: 6px;">
                                Use the <b>Add Client Query</b> button above to add a new entry.
                            </div>
                        </page>
                        <page string="Criteria Results" icon="fa-list">
                            <field name="line_ids" nolabel="1" readonly="1">
                                <list create="0" delete="0" default_order="sl_no" class="tender_ai_criteria_results"
                                      decoration-danger="result == 'fail'">
                                    <field name="sl_no" string="Sl."/>
                                    <field name="result" widget="badge"
                                           decoration-success="result == 'pass'"
                                           decoration-danger="result == 'fail'"/>
                                    <field name="criteria"/>
                                    <field name="supporting_document"/>
                                    <field name="missing_documents"/>
                                    <field name="reason"/>
                                    <field name="evidence"/>
                                    <field name="proof_url" widget="url" string="Proof Link"/>
                                    <field name="proof_page" string="Page" optional="show"/>
                                    <field name="proof_excerpt" string="Proof Excerpt" optional="show"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tende_ai_bidder_check" model="ir.actions.act_window">
        <field name="name">Eligibility Checks</field>
        <field name="res_model">tende_ai.bidder_check</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>


