<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stage 9 Section 23 List View -->
    <record id="view_bhu_stage9_section23_list" model="ir.ui.view">
        <field name="name">bhu.stage9.section23.list</field>
        <field name="model">bhu.stage9.section23</field>
        <field name="arch" type="xml">
            <list string="Stage 9: Section 23 Award Order" decoration-info="state=='draft'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="order_date"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="order_number"/>
                <field name="payment_status"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Stage 9 Section 23 Form View -->
    <record id="view_bhu_stage9_section23_form" model="ir.ui.view">
        <field name="name">bhu.stage9.section23.form</field>
        <field name="model">bhu.stage9.section23</field>
        <field name="arch" type="xml">
            <form string="Stage 9: Section 23 Award Order">
                <header>
                    <button name="action_confirm" string="Start Process" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible="state not in ['draft', 'in_progress']"/>
                    <button name="action_reset" string="Reset" type="object" class="btn-warning" invisible="state not in ['completed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="order_date"/>
                            <field name="public_purpose"/>
                        </group>
                        <group string="Location Information">
                            <field name="district_id"/>
                            <field name="tehsil_id"/>
                            <field name="village_id"/>
                            <field name="total_area"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Order Details">
                            <field name="order_number"/>
                            <field name="order_type"/>
                        </group>
                        <group string="Award Details">
                            <field name="award_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Affected Landowners">
                            <field name="landowner_ids" widget="many2many_tags"/>
                            <field name="total_affected_families"/>
                        </group>
                        <group string="Payment Details">
                            <field name="payment_status"/>
                            <field name="payment_date"/>
                            <field name="payment_reference"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Related Records">
                            <field name="survey_ids" widget="many2many_tags"/>
                            <field name="stage8_ids" widget="many2many_tags"/>
                            <field name="stage9_section21_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Company Information">
                            <field name="company_id"/>
                            <field name="company_name"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Signature Details">
                            <field name="signature_place"/>
                            <field name="signature_date"/>
                            <field name="signed_by"/>
                            <field name="designation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage 9 Section 23 Search View -->
    <record id="view_bhu_stage9_section23_search" model="ir.ui.view">
        <field name="name">bhu.stage9.section23.search</field>
        <field name="model">bhu.stage9.section23</field>
        <field name="arch" type="xml">
            <search string="Search Stage 9 Section 23">
                <field name="name"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="order_date"/>
                <field name="order_number"/>
                <field name="payment_status"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="This Year" name="this_year" domain="[('order_date', '>=', datetime.datetime.now().strftime('%Y-01-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stage 9 Section 23 Action -->
    <record id="action_bhu_stage9_section23" model="ir.actions.act_window">
        <field name="name">Stage 9: Section 23 Award Order</field>
        <field name="res_model">bhu.stage9.section23</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_stage9_section23_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Stage 9 Section 23 record!
            </p>
            <p>
                This stage involves the final award order as per Section 23 of the RFCTLARR Act, 2013.
            </p>
        </field>
    </record>
</odoo>
