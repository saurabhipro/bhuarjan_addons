<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tende_ai_client_query_tree" model="ir.ui.view">
        <field name="name">tende_ai.client_query.tree</field>
        <field name="model">tende_ai.client_query</field>
        <field name="arch" type="xml">
            <list string="Client Queries">
                <field name="asked_on"/>
                <field name="asked_by"/>
                <field name="job_id"/>
                <field name="bidder_id"/>
                <field name="state" widget="badge"/>
                <field name="query"/>
            </list>
        </field>
    </record>

    <record id="view_tende_ai_client_query_form" model="ir.ui.view">
        <field name="name">tende_ai.client_query.form</field>
        <field name="model">tende_ai.client_query</field>
        <field name="arch" type="xml">
            <form string="Client Query">
                <sheet>
                    <group>
                        <group>
                            <field name="asked_on"/>
                            <field name="asked_by"/>
                            <field name="state" widget="badge"/>
                        </group>
                        <group>
                            <field name="job_id" readonly="1"/>
                            <field name="bidder_id" readonly="1"/>
                            <field name="check_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Client Query">
                        <field name="query" placeholder="Enter client question..." nolabel="1"/>
                    </group>
                    <group string="Internal Note / Response">
                        <field name="internal_note" placeholder="Optional internal response..." nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>


