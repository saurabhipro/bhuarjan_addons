<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stage 5 Collector Approval List View -->
    <record id="view_bhu_stage5_collector_approval_list" model="ir.ui.view">
        <field name="name">bhu.stage5.collector.approval.list</field>
        <field name="model">bhu.stage5.collector.approval</field>
        <field name="arch" type="xml">
            <list string="Stage 5: Collector Approval" decoration-info="state=='draft'" decoration-warning="state=='submitted,under_review'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="application_date"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="collector_name"/>
                <field name="application_type"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Stage 5 Collector Approval Form View -->
    <record id="view_bhu_stage5_collector_approval_form" model="ir.ui.view">
        <field name="name">bhu.stage5.collector.approval.form</field>
        <field name="model">bhu.stage5.collector.approval</field>
        <field name="arch" type="xml">
            <form string="Stage 5: Collector Approval (Section 8)">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_review" string="Start Review" type="object" class="btn-warning" invisible="state != 'submitted'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success" invisible="state != 'under_review'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" invisible="state != 'under_review'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible="state not in ['draft', 'submitted', 'under_review']"/>
                    <button name="action_reset" string="Reset" type="object" class="btn-warning" invisible="state not in ['approved', 'rejected', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,under_review,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="application_date"/>
                            <field name="approval_purpose"/>
                        </group>
                        <group string="Location Information">
                            <field name="district_id"/>
                            <field name="tehsil_id"/>
                            <field name="village_id"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Collector Details">
                            <field name="collector_name"/>
                            <field name="collector_designation"/>
                            <field name="collector_office"/>
                        </group>
                        <group string="Application Details">
                            <field name="application_type"/>
                            <field name="application_summary"/>
                            <field name="supporting_evidence"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Review Process">
                            <field name="review_committee_formed"/>
                            <field name="review_committee_date"/>
                            <field name="review_committee_members"/>
                        </group>
                        <group string="Assessment Details">
                            <field name="land_requirement"/>
                            <field name="affected_families"/>
                            <field name="estimated_compensation"/>
                            <field name="rehabilitation_package"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Legal Compliance">
                            <field name="legal_compliance"/>
                            <field name="compliance_details"/>
                            <field name="legal_opinion"/>
                        </group>
                        <group string="Approval Process">
                            <field name="approval_authority"/>
                            <field name="approval_level"/>
                            <field name="approval_conditions"/>
                            <field name="approval_validity"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Documents">
                            <field name="application_documents" filename="application_documents_filename"/>
                            <field name="approval_documents" filename="approval_documents_filename"/>
                        </group>
                        <group string="Company Information">
                            <field name="company_id"/>
                            <field name="company_name"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Related Records">
                            <field name="stage4_ids" widget="many2many_tags"/>
                            <field name="stage3_ids" widget="many2many_tags"/>
                            <field name="survey_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Approval Details">
                            <field name="approval_date"/>
                            <field name="approval_number"/>
                            <field name="approved_by"/>
                            <field name="approval_remarks"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Signature Details">
                            <field name="signature_place"/>
                            <field name="signature_date"/>
                            <field name="signed_by"/>
                            <field name="designation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage 5 Collector Approval Search View -->
    <record id="view_bhu_stage5_collector_approval_search" model="ir.ui.view">
        <field name="name">bhu.stage5.collector.approval.search</field>
        <field name="model">bhu.stage5.collector.approval</field>
        <field name="arch" type="xml">
            <search string="Search Stage 5 Collector Approval">
                <field name="name"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="collector_name"/>
                <field name="application_type"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="This Year" name="this_year" domain="[('application_date', '>=', datetime.datetime.now().strftime('%Y-01-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Application Type" name="group_application_type" context="{'group_by': 'application_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stage 5 Collector Approval Action -->
    <record id="action_bhu_stage5_collector_approval" model="ir.actions.act_window">
        <field name="name">Stage 5: Collector Approval (Section 8)</field>
        <field name="res_model">bhu.stage5.collector.approval</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_stage5_collector_approval_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Stage 5 Collector Approval record!
            </p>
            <p>
                This stage involves collector approval and final authorization as per Section 8 of the RFCTLARR Act, 2013.
            </p>
        </field>
    </record>
</odoo>
