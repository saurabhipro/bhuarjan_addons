<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Draft Award Report Action -->
    <record id="action_report_draft_award" model="ir.actions.report">
        <field name="name">Draft Award / अवार्ड आदेश</field>
        <field name="model">bhu.draft.award</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bhuarjan.draft_award_report</field>
        <field name="report_file">bhuarjan.draft_award_report</field>
        <field name="paperformat_id" ref="bhuarjan.bhuarjan_form10_paper_format"/>
        <field name="print_report_name">'Draft_Award_' + ((object and object.name) or (docs and docs[0] and docs[0].name) or 'All')</field>
    </record>

    <!-- Custom Layout header for Draft Award -->
    <template id="draft_award_report_custom_layout">
        <div class="header-section" style="margin-bottom: 12px;">
            <style>
                .header-info-table { 
                    width: 100%; 
                    border-collapse: collapse; 
                    font-size: 14px; 
                    border: 2px solid #000; 
                    margin-bottom: 0; 
                }
                .header-info-table td { 
                    border: 1px solid #000; 
                    padding: 6px; 
                    vertical-align: middle;
                }
                .report-content-table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 15px;
                    font-size: 14px;
                }
                .report-content-table th, .report-content-table td {
                    border: 1px solid #000;
                    padding: 8px;
                    text-align: left;
                }
                .report-content-table th {
                    background-color: #f2f2f2;
                    font-weight: bold;
                }
                .report-paragraph {
                    margin-bottom: 10px;
                    line-height: 1.6;
                    text-align: justify;
                }
                .report-paragraph strong {
                    font-weight: bold;
                }
            </style>
            <h2 style="text-align: center; margin: 0 0 12px 0; font-size: 28px; font-weight: bold; text-decoration: underline;">
                <strong>प्रारूप अवार्ड</strong>
            </h2>
            <h2 style="text-align: center; margin: 0 0 12px 0; font-size: 18px; font-weight: bold; text-decoration: underline;">
                <strong>कार्यालय कलेक्टर, जिला <span t-esc="award.district_id.name if award and award.district_id else '........................'"/> (छ.ग.)</strong>
            </h2>
            <h2 style="text-align: center; margin: 0 0 12px 0; font-size: 18px; font-weight: bold; text-decoration: underline;">
                <strong>अधिसूचना</strong>
            </h2>

            <table class="header-info-table">
                <tr>
                    <td rowspan="3" style="width: 10%; padding: 0; text-align: center; vertical-align: middle;">
                        <!-- Logo - Left Header Box -->
                        <img src="/bhuarjan/static/description/logo.png" 
                             alt="Logo" 
                             style="width: 100%; height: auto; max-width: 100%; display: block; margin: 0; padding: 2px;"/>
                    </td>
                    <td style="width: 40%; font-size: 14px;">
                        <strong>परियोजना का नाम :</strong>
                        <span t-if="award and award.project_id" t-esc="award.project_id.name"/>
                        <span t-if="not award or not award.project_id">........................</span>
                    </td>
                    <td style="width: 40%; font-size: 14px;">
                        <strong>अवार्ड संख्या :</strong>
                        <span t-if="award and award.award_number" t-esc="award.award_number"/>
                        <span t-if="not award or not award.award_number">........................</span>
                    </td>
                    <td rowspan="3" style="width: 10%; padding: 0; text-align: center; vertical-align: middle;">
                        <!-- QR Code - Right Header Box -->
                        <t t-if="award">
                            <t t-set="qr_code_img" t-value="award.get_qr_code_data()"/>
                            <t t-set="qr_download_url" t-value="'https://bhuarjan.com/bhuarjan/draftaward/' + str(award.award_uuid or '') + '/download'"/>
                            <t t-if="qr_code_img">
                                <a t-att-href="qr_download_url" style="display: block; width: 100%; margin: 0; padding: 0; text-decoration: none;">
                                    <img t-att-src="'data:image/png;base64,' + qr_code_img" 
                                         alt="QR Code - Click to download PDF" 
                                         style="width: 100%; max-width: 100%; height: auto; aspect-ratio: 1; border: none; display: block; margin: 0; padding: 0;"/>
                                </a>
                            </t>
                            <t t-if="not qr_code_img">
                                <a t-att-href="qr_download_url" style="display: block; width: 100%; margin: 0; padding: 0; text-decoration: none;">
                                    <div style="width: 100%; padding-top: 100%; position: relative; border: none; background: white; margin: 0;">
                                        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                                            <div style="text-align: center; font-size: 7px;">
                                                <div style="font-weight: bold;">QR Code</div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </t>
                        </t>
                        <t t-if="not award">
                            <div style="width: 100%; padding-top: 100%; position: relative; border: none; background: white; margin: 0;">
                                <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                                    <div style="text-align: center; font-size: 7px;">
                                        <div style="font-weight: bold;">QR Code</div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </td>
                </tr>
                <tr>
                    <td style="width: 40%; font-size: 14px;">
                        <strong>ग्राम का नाम :</strong>
                        <span t-if="award and award.village_id" t-esc="award.village_id.name"/>
                        <span t-if="not award or not award.village_id">........................</span>
                    </td>
                    <td style="width: 40%; font-size: 14px;">
                        <strong>अवार्ड दिनांक :</strong>
                        <span t-if="award and award.award_date" t-esc="award.award_date.strftime('%d/%m/%Y')"/>
                        <span t-if="not award or not award.award_date">........................</span>
                    </td>
                </tr>
                <tr>
                    <td style="width: 40%; font-size: 14px;">
                        <strong>तहसील का नाम :</strong>
                        <span t-if="award and award.tehsil_id" t-esc="award.tehsil_id.name"/>
                        <span t-if="not award or not award.tehsil_id">........................</span>
                        <t t-if="award and award.district_id"> जिला-<t t-esc="award.district_id.name"/> (छ.ग.)</t>
                    </td>
                    <td style="width: 40%; font-size: 14px;">
                        <!-- Empty cell -->
                    </td>
                </tr>
            </table>
        </div>
    </template>

    <!-- Draft Award Report Template -->
    <template id="draft_award_report">
        <t t-call="web.html_container">
            <meta charset="utf-8"/>
            <t t-set="award" t-value="object or (docs and docs[0]) or None"/>
            <t t-call="bhuarjan.draft_award_report_custom_layout"/>

            <div class="page" style="font-family: 'Arial', sans-serif; font-size: 14px; color: #333; padding: 15px;">
                <div class="oe_structure"/>

                <!-- Case Number and Location -->
                <p class="report-paragraph" style="text-align: center; font-weight: bold; margin-bottom: 15px;">
                    <strong>भू.अर्जन प्र. क्र. <span t-if="award and award.case_number" t-esc="award.case_number"/><span t-if="not award or not award.case_number">........................</span></strong>
                </p>
                <p class="report-paragraph" style="text-align: center; margin-bottom: 15px;">
                    <strong>ग्राम - <span t-if="award and award.village_id" t-esc="award.village_id.name"/><span t-if="not award or not award.village_id">........................</span>, 
                    प.ह.नं.<span t-if="award and award.patwari_halka_number" t-esc="award.patwari_halka_number"/><span t-if="not award or not award.patwari_halka_number">....</span>, 
                    तहसील-<span t-if="award and award.tehsil_id" t-esc="award.tehsil_id.name"/><span t-if="not award or not award.tehsil_id">........................</span> व 
                    जिला-<span t-if="award and award.district_id" t-esc="award.district_id.name"/><span t-if="not award or not award.district_id">........................</span> (छ.ग.)</strong>
                </p>

                <!-- Parties Section -->
                <div style="margin-bottom: 20px;">
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 15px;">
                        <tr>
                            <td style="width: 50%; vertical-align: top; padding-right: 20px;">
                                <p class="report-paragraph" style="margin-bottom: 5px;">
                                    <strong>आवेदक :</strong>
                                </p>
                                <p class="report-paragraph" style="margin-left: 20px;">
                                    <span t-if="award and award.applicant_name" t-esc="award.applicant_name"/>
                                    <span t-if="not award or not award.applicant_name">कार्यपालन अभियंता, केलो परियोजना सर्वेक्षण संभाग, जिला- रायगढ़ (छ.ग.)</span>
                                </p>
                            </td>
                            <td style="width: 50%; vertical-align: top; padding-left: 20px;">
                                <p class="report-paragraph" style="margin-bottom: 5px;">
                                    <strong>विरुद्ध / अनावेदक :</strong>
                                </p>
                                <div style="margin-left: 20px;">
                                    <t t-if="award and award.respondent_ids and len(award.respondent_ids) > 0">
                                        <t t-set="counter" t-value="0"/>
                                        <t t-foreach="award.respondent_ids" t-as="respondent">
                                            <t t-set="counter" t-value="counter + 1"/>
                                            <p class="report-paragraph" style="margin-bottom: 5px;">
                                                <t t-esc="counter"/>. 
                                                <span t-esc="respondent.name or ''"/>
                                                <t t-if="respondent.father_name"> व. <span t-esc="respondent.father_name"/></t>
                                                <span> सा. दे. भूमिस्वामी</span>
                                            </p>
                                        </t>
                                    </t>
                                    <t t-if="not award or not award.respondent_ids or len(award.respondent_ids) == 0">
                                        <p class="report-paragraph">........................</p>
                                    </t>
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- Award Order Title -->
                <h2 style="text-align: center; margin: 20px 0; font-size: 22px; font-weight: bold; text-decoration: underline;">
                    <strong>अवार्ड आदेश</strong>
                </h2>
                <p style="text-align: center; margin-bottom: 20px;">
                    <strong>(दिनांक <span t-if="award and award.award_date" t-esc="award.award_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.award_date">........................</span>)</strong>
                </p>

                <!-- Paragraphs -->
                <div style="margin-bottom: 20px;">
                    <p class="report-paragraph">
                        <span t-if="award and award.applicant_name" t-esc="award.applicant_name"/><span t-if="not award or not award.applicant_name">कार्यपालन अभियंता केलो परियोजना सर्वेक्षण संभाग रायगढ़</span> 
                        दिनांक <span t-if="award and award.section11_report_id and award.section11_report_id.publication_date" t-esc="award.section11_report_id.publication_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.section11_report_id or not award.section11_report_id.publication_date">10/11/2022</span> 
                        के पत्रांक के अनुसार <span t-if="award and award.project_id" t-esc="award.project_id.name"/><span t-if="not award or not award.project_id">केलो परियोजना</span> 
                        के लिए <span t-if="award and award.village_id" t-esc="award.village_id.name"/><span t-if="not award or not award.village_id">ग्राम</span> 
                        में निजी भूमि अर्जन हेतु प्रस्ताव प्रस्तुत किया गया है। प्रस्तावानुसार 
                        <span t-if="award and award.total_khasra_count" t-esc="award.total_khasra_count"/><span t-if="not award or not award.total_khasra_count">06</span> 
                        खसरा नं. <span t-if="award and award.total_land_area" t-esc="'{:.3f}'.format(award.total_land_area)"/><span t-if="not award or not award.total_land_area">0.252</span> 
                        है. क्षेत्र का अर्जन प्रस्तावित है। प्रस्ताव प्रस्तुत किया गया है तथा 
                        <span t-if="award and award.is_displacement_involved == False">किसी भी व्यक्ति का विस्थापन निहित नहीं है।</span>
                        <span t-if="award and award.is_displacement_involved == True">विस्थापन शामिल है।</span>
                        छ.ग. शासन राजस्व एवं आपदा प्रबंधन विभाग मंत्रालय रायपुर दिनांक 12/03/2015 के परिपत्रानुसार 
                        भूमि अर्जन, पुनर्वासन एवं पुनर्व्यवस्थापन में उचित प्रतिकर एवं पारदर्शिता का अधिकार अधिनियम 2013 
                        की धारा 2 एवं 3 के तहत कार्यवाही आवश्यक नहीं है।
                    </p>

                    <p class="report-paragraph">
                        <strong>3.</strong> उपरोक्त प्रस्तावानुसार अधिनियम 2013 की धारा 11 उपधारा (1) के तहत अधिसूचना का प्रकाशन निम्नानुसार किया गया है :-
                    </p>
                    <p class="report-paragraph" style="margin-left: 20px;">
                        (1) छत्तीसगढ़ राजपत्र में दिनांक 
                        <span t-if="award and award.section11_gazette_date" t-esc="award.section11_gazette_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.section11_gazette_date">31/03/2023</span>, 
                        <span t-if="award and award.section11_gazette_part" t-esc="award.section11_gazette_part"/><span t-if="not award or not award.section11_gazette_part">भाग-1</span>, 
                        पृ.क्र. <span t-if="award and award.section11_gazette_page" t-esc="award.section11_gazette_page"/><span t-if="not award or not award.section11_gazette_page">488</span> में।
                    </p>
                    <p class="report-paragraph" style="margin-left: 20px;">
                        (2) दैनिक स्थानीय समाचार पत्रों में :-
                    </p>
                    <p class="report-paragraph" style="margin-left: 40px;">
                        (i) <span t-if="award and award.section11_newspaper_1_name" t-esc="award.section11_newspaper_1_name"/><span t-if="not award or not award.section11_newspaper_1_name">नवभारत</span>- 
                        दिनांक- <span t-if="award and award.section11_newspaper_1_date" t-esc="award.section11_newspaper_1_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.section11_newspaper_1_date">18/03/2023</span>
                    </p>
                    <p class="report-paragraph" style="margin-left: 40px;">
                        (ii) <span t-if="award and award.section11_newspaper_2_name" t-esc="award.section11_newspaper_2_name"/><span t-if="not award or not award.section11_newspaper_2_name">कांतिकारी संकेत</span>- 
                        दिनांक- <span t-if="award and award.section11_newspaper_2_date" t-esc="award.section11_newspaper_2_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.section11_newspaper_2_date">18/03/2023</span>
                    </p>
                    <p class="report-paragraph" style="margin-left: 20px;">
                        (3) ग्राम <span t-if="award and award.village_id" t-esc="award.village_id.name"/><span t-if="not award or not award.village_id">........................</span> 
                        में मुनादी दिनांक <span t-if="award and award.section11_munadi_date" t-esc="award.section11_munadi_date.strftime('%d/%m/%Y')"/><span t-if="not award or not award.section11_munadi_date">22/03/2023</span> में।
                    </p>

                    <p class="report-paragraph">
                        <strong>4.</strong> उपरोक्त धारा 11 (1) की अधिसूचना के प्रकाशन उपरान्त किसी भी रुचि रखने वाले पक्ष से कोई आपत्ति/दावा प्राप्त नहीं हुआ है, 
                        अतः अधिनियम 2013 की धारा 15 (2) के तहत सुनवाई की आवश्यकता नहीं है।
                    </p>

                    <p class="report-paragraph">
                        <strong>5.</strong> अधिनियम 2013 की धारा 19 उपधारा 7 के अनुसार उपयुक्त सरकार को धारा 11 की अधिसूचना के प्रकाशन की तारीख से 12 माह की अवधि के भीतर 
                        अवार्ड पारित करना होगा, अन्यथा अर्जन प्रक्रिया समाप्त हो जाएगी। सरकार को इस अवधि को 12 माह तक बढ़ाने की शक्ति है।
                    </p>
                </div>

                <!-- Land Details Table -->
                <div style="margin-bottom: 20px;">
                    <p class="report-paragraph" style="font-weight: bold; margin-bottom: 10px;">
                        अर्जित की रही निजी भूमि कुल ख.नं. <span t-if="award and award.total_khasra_count" t-esc="award.total_khasra_count"/><span t-if="not award or not award.total_khasra_count">06</span> 
                        कुल रकबा <span t-if="award and award.total_land_area" t-esc="'{:.3f}'.format(award.total_land_area)"/><span t-if="not award or not award.total_land_area">0.252</span> 
                        हैं. विस्तृत विवरण इस प्रकार है।
                    </p>
                    <table class="report-content-table">
                        <thead>
                            <tr>
                                <th style="width: 50%;">ख.न. / Khasra Number</th>
                                <th style="width: 50%;">रकबा है. / Area (Hectares)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="award and award.land_parcel_ids and len(award.land_parcel_ids) > 0">
                                <t t-foreach="award.land_parcel_ids" t-as="parcel">
                                    <tr>
                                        <td><span t-esc="parcel.khasra_number or ''"/></td>
                                        <td><span t-esc="'{:.3f}'.format(parcel.area_hectares) if parcel.area_hectares else '0.000'"/></td>
                                    </tr>
                                </t>
                                <tr style="font-weight: bold;">
                                    <td>योग कुल ख.नं. <span t-esc="award.total_khasra_count or 0"/></td>
                                    <td>कुल रकबा <span t-esc="'{:.3f}'.format(award.total_land_area) if award.total_land_area else '0.000'"/> है.</td>
                                </tr>
                            </t>
                            <t t-if="not award or not award.land_parcel_ids or len(award.land_parcel_ids) == 0">
                                <tr>
                                    <td colspan="2" style="text-align: center;">No land parcels available</td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- Detailed Compensation Table -->
                <div style="margin-bottom: 20px;">
                    <p class="report-paragraph" style="font-weight: bold; margin-bottom: 10px; text-align: center;">
                        <strong>भाग-1 (क) भूमि का मुआवजा पत्रक</strong>
                    </p>
                    <p class="report-paragraph" style="margin-bottom: 10px;">
                        <strong>ग्राम- <span t-if="award and award.village_id" t-esc="award.village_id.name"/><span t-if="not award or not award.village_id">........................</span> 
                        भू अ. प्र. क्र. <span t-if="award and award.case_number" t-esc="award.case_number"/><span t-if="not award or not award.case_number">........................</span></strong>
                    </p>
                    <t t-if="award and award.compensation_line_ids and len(award.compensation_line_ids) > 0">
                        <table class="report-content-table" style="font-size: 9px; width: 100%; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color: #e0e0e0;">
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 2%;">क्र.</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 12%;">भूमिस्वामी का नाम, पिता/पति का नाम, जाति</th>
                                    <th colspan="3" style="border: 1px solid #000; padding: 4px; text-align: center; width: 10%;">कुल धारित भूमि</th>
                                    <th colspan="3" style="border: 1px solid #000; padding: 4px; text-align: center; width: 10%;">अर्जित भूमि का विवरण</th>
                                    <th colspan="3" style="border: 1px solid #000; padding: 4px; text-align: center; width: 8%;">अर्जित भूमि का प्रकार</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 5%;">गाईड लाइन दर</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 4%;">मूल्य</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 5%;">बाजार मूल्य x (कारक-2)</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 5%;">100% सोलेशियम</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 5%;">ब्याज</th>
                                    <th rowspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 5%;">कुल निर्धारित</th>
                                    <th colspan="2" style="border: 1px solid #000; padding: 4px; text-align: center; width: 8%;">पुनर्वास नीति</th>
