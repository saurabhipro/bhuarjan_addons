<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_bhu_district_list" model="ir.ui.view">
        <field name="name">bhu.district.list</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bhu_district_form" model="ir.ui.view">
        <field name="name">bhu.district.form</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    </group>
                </sheet>
                 <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_district" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">bhu.district</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
