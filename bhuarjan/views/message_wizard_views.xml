<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bhu_survey_message_wizard" model="ir.ui.view">
        <field name="name">bhu.survey.message.wizard.form</field>
        <field name="model">bhu.survey.message.wizard</field>
        <field name="arch" type="xml">
            <form string="Information">
                <group>
                    <field name="message" nolabel="1" readonly="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bhu_survey_message_wizard" model="ir.actions.act_window">
        <field name="name">Message</field>
        <field name="res_model">bhu.survey.message.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


