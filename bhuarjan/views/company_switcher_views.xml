<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- District Company Form View -->
    <record id="view_district_company_form" model="ir.ui.view">
        <field name="name">bhu.district.company.form</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <form string="District with Company">
                <header>
                    <button name="action_create_company" string="Create Company" type="object" class="btn-primary" icon="fa-building"/>
                    <button name="action_fix_company_access" string="Fix Company Access" type="object" class="btn-info" icon="fa-wrench"/>
                    <field name="is_company_created" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="District Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="name"/>
                            <field name="code"/>
                            <field name="state_id"/>
                            <field name="district_type"/>
                        </group>
                        <group string="Company Information">
                            <field name="company_id"/>
                            <field name="company_name"/>
                            <field name="is_company_created"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Geographic Information">
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="area_sq_km"/>
                            <field name="population"/>
                        </group>
                        <group string="Administrative Information">
                            <field name="collector_name"/>
                            <field name="collector_contact"/>
                            <field name="headquarters"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Status">
                            <field name="is_tribal_district"/>
                            <field name="is_forest_district"/>
                            <field name="is_naxal_affected"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- District Company List View -->
    <record id="view_district_company_list" model="ir.ui.view">
        <field name="name">bhu.district.company.list</field>
        <field name="model">bhu.district</field>
        <field name="arch" type="xml">
            <list string="Districts">
                <field name="name"/>
                <field name="company_id"/>
                <field name="state_id"/>
                <field name="district_type"/>
                <field name="headquarters"/>
                <field name="collector_name"/>
                <field name="population"/>
            </list>
        </field>
    </record>

    <!-- District Company Action (1:1) -->
    <record id="action_district_company" model="ir.actions.act_window">
        <field name="name">Districts</field>
        <field name="res_model">bhu.district</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_district_company_list"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new district
            </p>
            <p>
                Districts are automatically filtered by the current company.
                Each district has its own company for complete data isolation.
            </p>
        </field>
    </record>
    

</odoo>