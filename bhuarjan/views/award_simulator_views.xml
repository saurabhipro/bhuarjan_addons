<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ═══════════════════════════════════════════════════════════════════
             Award Simulator Wizard Form View
        ═══════════════════════════════════════════════════════════════════ -->
        <!-- ═══════════════════════════════════════════════════════════════════
             Award Simulator – Tree Line list view
        ═══════════════════════════════════════════════════════════════════ -->
        <record id="view_bhu_award_simulator_list" model="ir.ui.view">
            <field name="name">bhu.award.simulator.list</field>
            <field name="model">bhu.award.simulator</field>
            <field name="arch" type="xml">
                <list string="Simulation History">
                    <field name="village_id"/>
                    <field name="user_id"/>
                    <field name="create_date"/>
                    <field name="grand_total" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                </list>
            </field>
        </record>

        <!-- ═══════════════════════════════════════════════════════════════════
             Award Simulator Wizard Form View
        ═══════════════════════════════════════════════════════════════════ -->
        <record id="view_bhu_award_simulator_form" model="ir.ui.view">
            <field name="name">bhu.award.simulator.form</field>
            <field name="model">bhu.award.simulator</field>
            <field name="arch" type="xml">
                <form string="Award Simulator / अवार्ड सिमुलेटर">
                    <header>
                        <button string="Recalculate / पुनः गणना करें"
                                name="action_calculate"
                                type="object"
                                class="btn-primary"/>
                    </header>
                    <sheet>

                        <!-- Header -->
                        <div class="oe_title">
                            <h1>
                                <span class="text-primary">Award Simulator</span>
                                <small class="text-muted ms-2" style="font-size:0.6em;">अवार्ड सिमुलेटर</small>
                            </h1>
                        </div>

                        <!-- Survey Type -->
                        <group string="Survey Type / सर्वे प्रकार" col="2">
                            <field name="survey_type" widget="radio" options="{'horizontal': true}"/>
                        </group>

                        <!-- Land Section -->
                        <group string="Land Section / भूमि अनुभाग">
                            <group>
                                <field name="village_id" options="{'no_create': true, 'no_open': true}"/>
                                <field name="district_id" options="{'no_create': true, 'no_open': true}"/>
                                <field name="distance_from_road"/>
                                <field name="road_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="base_rate" readonly="village_id != False"/>
                            </group>
                            <group>
                                <field name="is_diverted"/>
                                <field name="irrigation_type" widget="radio" options="{'horizontal': true}"/>
                                <field name="acquired_area"/>
                            </group>
                        </group>

                        <!-- Dates Section -->
                        <group string="Interest &amp; Timeline / ब्याज एवं समयरेखा">
                            <group>
                                <field name="section4_date"/>
                                <field name="award_date"/>
                            </group>
                            <group>
                                <field name="interest_rate_percent"/>
                            </group>
                        </group>

                        <!-- Land Calculation Summary -->
                        <group string="Land Award Calculation / भूमि अवार्ड गणना"
                               invisible="acquired_area == 0">
                            <group>
                                <field name="effective_land_rate" readonly="1"/>
                                <field name="land_award_amount" readonly="1"/>
                                <field name="solatium_amount" readonly="1"/>
                            </group>
                            <group>
                                <field name="interest_days" readonly="1" invisible="interest_days == 0"/>
                                <field name="interest_amount" readonly="1" invisible="interest_amount == 0"/>
                                <field name="land_total" readonly="1" class="fw-bold"/>
                            </group>
                        </group>

                        <!-- Trees and Structures tabs -->
                        <notebook>
                            <page string="Trees / वृक्ष">
                                <field name="tree_line_ids" nolabel="1">
                                    <list editable="bottom" decoration-warning="condition == 'unsound'">
                                        <field name="tree_master_id" options="{'no_create': true}"/>
                                        <field name="tree_type" optional="show"/>
                                        <field name="development_stage"/>
                                        <field name="girth_cm"/>
                                        <field name="condition"/>
                                        <field name="quantity"/>
                                        <field name="unit_rate" readonly="1"/>
                                        <field name="line_total" readonly="1" sum="Tree Total"/>
                                    </list>
                                </field>
                                <group>
                                    <field name="tree_total" readonly="1" string="Tree Total (Rs.)"/>
                                </group>
                            </page>

                            <page string="Structures / संरचनाएं">
                                <field name="structure_line_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="structure_type"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="area_sqft"/>
                                        <field name="unit_rate"/>
                                        <field name="line_total" readonly="1" sum="Structure Total"/>
                                    </list>
                                </field>
                                <group>
                                    <field name="structure_total" readonly="1" string="Structure Total (Rs.)"/>
                                </group>
                            </page>

                            <page string="Reference Rates / संदर्भ दरें" groups="base.group_system">
                                <group string="Village Land Rates / ग्राम भूमि दरें">
                                    <field name="reference_land_rate_ids" nolabel="1" readonly="1">
                                        <list>
                                            <field name="village_id"/>
                                            <field name="main_road_rate_hectare"/>
                                            <field name="other_road_rate_hectare"/>
                                            <field name="state" widget="badge" decoration-success="state == 'active'"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Selected Tree Rates / चयनित वृक्ष दरें">
                                    <field name="reference_tree_rate_ids" nolabel="1" readonly="1">
                                        <list>
                                            <field name="tree_master_id"/>
                                            <field name="development_stage"/>
                                            <field name="girth_range_min" string="Min Girth"/>
                                            <field name="girth_range_max" string="Max Girth"/>
                                            <field name="rate"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook>

                        <!-- Grand Total -->
                        <group string="Grand Total / कुल अवार्ड">
                            <group>
                                <field name="land_total" readonly="1" string="Land Total (Rs.)"/>
                                <field name="tree_total" readonly="1" string="Tree Total (Rs.)"/>
                                <field name="structure_total" readonly="1" string="Structure Total (Rs.)"/>
                                <field name="user_id" readonly="1" groups="base.group_no_one"/>
                            </group>
                            <group>
                                <field name="grand_total" readonly="1" string="Grand Total Award (Rs.)" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action to open the simulator -->
        <record id="action_bhu_award_simulator" model="ir.actions.act_window">
            <field name="name">Award Simulator / अवार्ड सिमुलेटर</field>
            <field name="res_model">bhu.award.simulator</field>
            <field name="view_mode">list,form</field>
            <field name="target">current</field>
            <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <!-- Menu item – under Master Data, admin only -->
        <menuitem
            id="menu_bhu_award_simulator"
            name="Award Simulator / अवार्ड सिमुलेटर"
            action="action_bhu_award_simulator"
            parent="menu_bhu_master"
            sequence="99"
            groups="base.group_system"/>

    </data>
</odoo>
