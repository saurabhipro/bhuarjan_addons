<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_bhu_project_list" model="ir.ui.view">
        <field name="name">bhu.project.list</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="budget"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bhu_project_form" model="ir.ui.view">
        <field name="name">bhu.project.form</field>
        <field name="model">bhu.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="alert alert-info" role="alert" 
                         style="margin: 10px; padding: 12px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 4px;">
                        <strong>ℹ Information:</strong> Only villages mapped to this project will appear in the dropdown below. To add villages to this project, select them from the list.
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_uuid" readonly="1" placeholder="UUID will be generated automatically"/>
                            <button name="action_regenerate_uuid" type="object" string="Regenerate UUID / UUID पुनर्जीवित करें" class="oe_link"/>
                            <field name="village_ids" widget="many2many" 
                                   options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="budget"/>
                        </group>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>

            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">bhu.project</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
