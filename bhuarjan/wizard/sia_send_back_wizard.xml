<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sia_send_back_wizard_form" model="ir.ui.view">
        <field name="name">sia.send.back.wizard.form</field>
        <field name="model">sia.send.back.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Back SIA Team / SIA टीम वापस भेजें">
                <sheet>
                    <group>
                        <field name="sia_team_id" invisible="1"/>
                        <field name="reason" placeholder="Enter the reason for sending back the SIA proposal..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_back" string="Send Back" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sia_send_back_wizard" model="ir.actions.act_window">
        <field name="name">Send Back SIA Team</field>
        <field name="res_model">sia.send.back.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

