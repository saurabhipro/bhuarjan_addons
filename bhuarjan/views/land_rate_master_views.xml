<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Land Type List View -->
    <record id="view_bhu_land_type_list" model="ir.ui.view">
        <field name="name">bhu.land.type.list</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <list string="Land Types" decoration-muted="not active">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Land Type Form View -->
    <record id="view_bhu_land_type_form" model="ir.ui.view">
        <field name="name">bhu.land.type.form</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <form string="Land Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter land type name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="ðŸ·ï¸ Basic Information" class="oe_group_col_2">
                            <field name="code"/>
                            <field name="active"/>
                        </group>
                        <group string="ðŸ“ Description" class="oe_group_col_2">
                            <field name="description" widget="text" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Land Type Search View -->
    <record id="view_bhu_land_type_search" model="ir.ui.view">
        <field name="name">bhu.land.type.search</field>
        <field name="model">bhu.land.type</field>
        <field name="arch" type="xml">
            <search string="Search Land Types">
                <field name="name"/>
                <field name="code"/>
                <field name="description"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Land Type Action -->
    <record id="action_bhu_land_type" model="ir.actions.act_window">
        <field name="name">Land Types</field>
        <field name="res_model">bhu.land.type</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_land_type_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Land Type!
            </p>
            <p>
                Define different types of land for rate calculation purposes.
            </p>
        </field>
    </record>

    <!-- Land Rate Master List View -->
    <record id="view_bhu_land_rate_master_list" model="ir.ui.view">
        <field name="name">bhu.land.rate.master.list</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <list string="Land Rate Master" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='inactive'">
                <field name="name"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="main_road_rate"/>
                <field name="other_road_rate"/>
                <field name="effective_from"/>
                <field name="effective_to"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Land Rate Master Form View -->
    <record id="view_bhu_land_rate_master_form" model="ir.ui.view">
        <field name="name">bhu.land.rate.master.form</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <form string="Land Rate Master - Land Valuation Rates">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_deactivate" string="Deactivate" type="object" class="btn-secondary" invisible="state != 'active'"/>
                    <button name="action_reset" string="Reset to Draft" type="object" class="btn-warning" invisible="state != 'inactive'"/>
                    <button name="action_view_permutations" string="View All Rate Permutations / à¤¸à¤­à¥€ à¤¦à¤° à¤•à¥à¤°à¤®à¤šà¤¯ à¤¦à¥‡à¤–à¥‡à¤‚" type="object" class="btn-info" icon="fa-table"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_activate" invisible="state != 'draft'">
                            <field name="state" widget="statinfo" string="Status"/>
                        </button>
                    </div>
                    
                    <div class="oe_clear"/>
                    
                    <group>
                        <group string="ðŸ“ Location Information" class="oe_group_col_2">
                            <field name="district_id" widget="many2one_tags"/>
                            <field name="tehsil_id" widget="many2one_tags"/>
                            <field name="village_id" widget="many2one_tags"/>
                        </group>
                        <group string="ðŸ“… Effective Dates" class="oe_group_col_2">
                            <field name="effective_from" widget="date" options="{'date_format': 'dd/mm/yyyy'}"/>
                            <field name="effective_to" widget="date" options="{'date_format': 'dd/mm/yyyy'}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="ðŸ’° Rate Information (One Entry Per Village)" colspan="2">
                            <div style="background-color: #e7f3ff; padding: 10px; margin-bottom: 10px; border-left: 4px solid #2196F3;">
                                <p style="margin: 0; font-size: 12px; color: #1976D2;">
                                    <strong>Note:</strong> Enter base rates for this village. System will automatically calculate:<br/>
                                    â€¢ <strong>Irrigated:</strong> Base Rate + 20%<br/>
                                    â€¢ <strong>Non-Irrigated:</strong> Base Rate - 20%<br/>
                                    â€¢ <strong>Diverted:</strong> Base Rate - 20% (additional adjustment)
                                </p>
                            </div>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Square Meter Rates (à¤µà¤°à¥à¤— à¤®à¥€à¤Ÿà¤° à¤¦à¤°)" class="oe_group_col_2">
                            <field name="main_road_rate_sqm" widget="monetary" string="Rate on Main Road (Sq. Meter)"/>
                            <field name="other_road_rate_sqm" widget="monetary" string="Rate Within Main Road Range (Sq. Meter)"/>
                        </group>
                        <group string="Hectare Rates (à¤¹à¥‡à¤•à¥à¤Ÿà¥‡à¤¯à¤° à¤¦à¤°)" class="oe_group_col_2">
                            <field name="main_road_rate_hectare" widget="monetary" string="Rate on Main Road (Hectare)"/>
                            <field name="other_road_rate_hectare" widget="monetary" string="Rate Within Main Road Range (Hectare)"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group invisible="1">
                        <field name="company_id"/>
                        <field name="company_name"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Land Rate Master Search View -->
    <record id="view_bhu_land_rate_master_search" model="ir.ui.view">
        <field name="name">bhu.land.rate.master.search</field>
        <field name="model">bhu.rate.master</field>
        <field name="arch" type="xml">
            <search string="Search Land Rate Master">
                <field name="name"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="main_road_rate"/>
                <field name="other_road_rate"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Inactive" name="inactive" domain="[('state', '=', 'inactive')]"/>
                <filter string="Current Rates" name="current" domain="[('effective_from', '&lt;=', context_today()), '|', ('effective_to', '=', False), ('effective_to', '&gt;=', context_today())]"/>
                <filter string="This Month" name="this_month" domain="[('effective_from', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Land Rate Master Action -->
    <record id="action_bhu_land_rate_master" model="ir.actions.act_window">
        <field name="name">Land Rate Master</field>
        <field name="res_model">bhu.rate.master</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_land_rate_master_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Land Rate Master record!
            </p>
            <p>
                Set base rates for villages. System automatically calculates all permutations:<br/>
                â€¢ Main Road (Within Main Road Range) and Other Road (Beyond Main Road Range)<br/>
                â€¢ Irrigated (+20%) and Non-Irrigated (base rate)<br/>
                â€¢ Diverted (-20%) adjustment
            </p>
        </field>
    </record>

    <!-- Land Rate Master Permutation Line List View -->
    <record id="view_land_rate_master_permutation_line_list" model="ir.ui.view">
        <field name="name">bhu.land.rate.master.permutation.line.list</field>
        <field name="model">bhu.rate.master.permutation.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="road_proximity"/>
                <field name="irrigation_status"/>
                <field name="is_diverted"/>
                <field name="calculated_rate" widget="monetary"/>
            </list>
        </field>
    </record>

    <!-- Land Rate Master Permutation Wizard Form View -->
    <record id="view_land_rate_master_permutation_wizard_form" model="ir.ui.view">
        <field name="name">bhu.land.rate.master.permutation.wizard.form</field>
        <field name="model">bhu.rate.master.permutation.wizard</field>
        <field name="arch" type="xml">
            <form string="Rate Permutations / à¤¦à¤° à¤•à¥à¤°à¤®à¤šà¤¯">
                <sheet>
                    <group>
                        <field name="rate_master_id" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="All Rate Permutations / à¤¸à¤­à¥€ à¤¦à¤° à¤•à¥à¤°à¤®à¤šà¤¯">
                            <field name="permutation_line_ids" nolabel="1" readonly="1" options="{'no_create': True, 'no_delete': True, 'no_edit': True}"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

