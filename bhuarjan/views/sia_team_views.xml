<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- SIA Team List View -->
    <record id="view_sia_team_list" model="ir.ui.view">
        <field name="name">bhu.sia.team.list</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <list string="SIA Teams / SIA टीमें" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="requiring_body_id"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'approved'"
                       decoration-info="state == 'submitted'"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
            </list>
        </field>
    </record>

    <!-- SIA Team Form View -->
    <record id="view_sia_team_form" model="ir.ui.view">
        <field name="name">bhu.sia.team.form</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <form string="SIA Team / SIA टीम" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                <header>
                    <!-- File Upload Section for SDM (editable only in draft state) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin,base.group_system" 
                           invisible="state != 'draft'">
                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               placeholder="Upload Signed SIA Proposal"/>
                        <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                                icon="fa-paper-plane"
                                invisible="not sdm_signed_file"
                                confirm="Are you sure want to submit this record."
                                />
                    </group>
                    
                    <!-- SDM Signed File Display (readonly, visible in all states after draft when file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not sdm_signed_file or state == 'draft'">
                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               readonly="1"
                               string="SDM Signed Proposal (Uploaded)"/>
                        <button name="action_download_sdm_signed_file" string="Download SDM Signed Proposal" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download SDM Signed Proposal"/>
                    </group>
                    
                    <!-- File Upload Section for Collector (editable only in submitted state) -->
                    <group groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system" 
                           invisible="state != 'submitted'">                        
                        <field name="collector_signed_file" filename="collector_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               placeholder="Upload SIA Approval Letter"/>
                    </group>
                    
                    <!-- Collector Signed File Display (readonly, visible in all states after submitted when file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not collector_signed_file or state == 'draft'">
                        <field name="collector_signed_file" filename="collector_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               readonly="1"
                               string="Collector Signed Approval (Uploaded)"/>
                        <button name="action_download_collector_signed_file" string="Download Collector Signed Approval" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download Collector Signed Approval"/>
                    </group>
                    
                    <!-- Download Latest PDF Report Button (always visible when any file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not sdm_signed_file and not collector_signed_file">
                        <button name="action_download_latest_pdf" string="Download Latest PDF Report" type="object" 
                                class="btn-primary" icon="fa-file-pdf"
                                title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"/>
                    </group>
                    
                    <!-- Download Unsigned PDF Button (visible in draft state) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                           invisible="state != 'draft'">
                        <button name="action_download_sia_file" string="Download SIA Proposal (Unsigned)" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download SIA Proposal (Unsigned)"/>
                    </group>
                    
                    <!-- Action Buttons Row: Approve, Send Back, Create Section 4 -->
                    <group>
                        <!-- Approve Button (Collector only) -->
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                icon="fa-check"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted' or not collector_signed_file"
                                confirm="Are you sure want to approve this record."/>
                        
                        <!-- Send Back Button (Collector only) -->
                        <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                icon="fa-arrow-left"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted'"
                                confirm="Are you sure want to submit this record."/>
                        
                        <!-- Create Section 4 Notification (SDM only) -->
                        <button name="action_create_section4_notification" string="Create Section 4 Notification" 
                                type="object" class="btn-primary" icon="fa-file-text"
                                groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'approved'"
                                help="Create Section 4 Notifications for all villages in this SIA Team"
                                confirm="Are you sure want to Create Section 4 Notification ."/>
                    </group>
                    
                    <!-- Reset to Draft button (for sent back records - allows SDM to resubmit) -->
                    <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                            icon="fa-refresh"
                            groups="bhuarjan.group_bhuarjan_sdm"
                            invisible="state != 'send_back'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}"
                    confirm="Are you sure want to submit this record."/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-users" style="margin-right: 10px;"></i>SIA Team / SIA टीम
                        </h1>
                    </div>
                    <field name="is_sdm" invisible="1"/>
                    <field name="is_collector" invisible="1"/>
                    <field name="can_sdm_edit" invisible="1"/>
                    <field name="can_collector_edit" invisible="1"/>
                    
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="state == 'approved'"/>
                    </group>
                    <group col="2">
                        <group>
                            <!-- SDM can edit in draft/send_back, Collector can edit in submitted, readonly when approved -->
                            <field name="project_id" required="1" readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            <field name="requiring_body_id" required="1" readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)" options="{'no_open': True}"/>
                            <field name="village_ids" widget="many2many_tags" readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   placeholder="Affected villages (auto-populated from project)..."
                                   options="{'no_create_edit': True}"
                                   context="{'default_project_id': project_id}" force_save="1"/>
                            <field name="tehsil_ids" widget="many2many_tags" readonly="1"
                                   placeholder="Tehsils (from selected villages)..."
                                   options="{'no_create_edit': True}" force_save="1"/>
                        </group>
                        <group>
                            <field name="total_area_acquired" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Team Members / टीम सदस्य">
                            <group col="2">
                                <group string="(क) Non-Government Social Scientist / गैर शासकीय सामाजिक वैज्ञानिक">
                                    <field name="non_govt_social_scientist_ids" widget="many2many_tags" nolabel="1"
                                           readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                           placeholder="Select non-government social scientist..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(ख) Representatives of Local Bodies / स्थानीय निकायों के प्रतिनिधि">
                                    <field name="local_bodies_representative_ids" widget="many2many_tags" nolabel="1"
                                           readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                           placeholder="Select representatives of local bodies..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(ग) Resettlement Expert / पुनर्व्यवस्थापन विशेषज्ञ">
                                    <field name="resettlement_expert_ids" widget="many2many_tags" nolabel="1"
                                           readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                           placeholder="Select resettlement expert..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                                <group string="(घ) Technical Expert / परियोजना से संबंधित विषय का तकनीकि विशेषज्ञ">
                                    <field name="technical_expert_ids" widget="many2many_tags" nolabel="1"
                                           readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                           placeholder="Select technical expert..."
                                           options="{'no_quick_create': True}"/>
                                </group>
                            </group>
                            <group string="(ड.) Tehsildar (Convener) / प्रभावित क्षेत्र का तहसीलदार">
                                <field name="tehsildar_domain" invisible="1"/>
                                
                                <field name="tehsildar_id" nolabel="1"
                                       readonly="state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                       placeholder="Select Tehsildar (Convener)..."
                                       options="{'no_quick_create': True, 'no_create':True, 'no_edit':True}" domain="tehsildar_domain"/>
                            </group>
                        </page>
                    </notebook>
                        <group>
                            <div style="text-align:right; padding:2rem;">
                                <!-- Submit button - only visible to SDM and Admin -->
                                <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                                    icon="fa-paper-plane"
                                    groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                    invisible="not sdm_signed_file or state != 'draft'"
                                    confirm="Are you sure want to submit this record."
                                    />

                                <!-- Save As Draft button - only visible to SDM and Admin when in draft/send_back state -->
                                <button name="action_bottom_save" type="object" class="btn btn-primary" 
                                        groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                        invisible="state not in ('draft', 'send_back')">Save As Draft</button>
                            </div>
                        </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- SIA Team Search View -->
    <record id="view_sia_team_search" model="ir.ui.view">
        <field name="name">bhu.sia.team.search</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <search string="Search SIA Teams">
                <field name="name"/>
                <field name="project_id"/>
                <field name="team_member_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update SIA Team Action -->
    <record id="action_create_sia_team" model="ir.actions.act_window">
        <field name="name">Create SIA Team / SIA टीम बनाएं</field>
        <field name="res_model">bhu.sia.team</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sia_team_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SIA Team!
            </p>
            <p>
                Create SIA (Social Impact Assessment) teams by adding multiple users under selected projects.
            </p>
        </field>
    </record>
</odoo>

