<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 4 Notification List View -->
    <record id="view_section4_notification_list" model="ir.ui.view">
        <field name="name">bhu.section4.notification.list</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <list string="Section 4 Notifications / धारा 4 अधिसूचनाएं" delete="1">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_ids" widget="many2many_tags"/>
                <field name="public_hearing_date"/>
                <field name="state" widget="badge" decoration-success="state == 'signed'" decoration-info="state == 'generated'" decoration-muted="state == 'draft'"/>
                <field name="has_signed_document" widget="boolean_toggle"/>
                <field name="signed_date"/>
            </list>
        </field>
    </record>

    <!-- Section 4 Notification Form View -->
    <record id="view_section4_notification_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.form</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <form string="Section 4 Notification / धारा 4 अधिसूचना">
                <header>
                    <button name="action_generate_pdf" string="Generate PDF / PDF जेनरेट करें" type="object" class="btn-primary" icon="fa-file-pdf"
                            invisible="state == 'signed'"/>
                    <button name="action_mark_signed" string="Mark as Signed / हस्ताक्षरित के रूप में चिह्नित करें" type="object" class="btn-success" 
                            invisible="state == 'signed' or not has_signed_document"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,signed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id" required="1"/>
                            <field name="village_ids" widget="many2many_tags" required="1" 
                                   options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Basic Information / मूल जानकारी">
                            <group string="Public Purpose / लोक प्रयोजन">
                                <field name="public_purpose" placeholder="Enter description of public purpose for land acquisition..." 
                                       widget="html" nolabel="1"/>
                            </group>
                            <group string="Public Hearing Details / जन सुनवाई विवरण">
                                <group col="3">
                                    <field name="public_hearing_date"/>
                                    <field name="public_hearing_time"/>
                                    <field name="public_hearing_place"/>
                                </group>
                            </group>
                        </page>
                        <page string="Section 4 Questions / धारा 4 प्रश्न">
                            <group string="(एक) लोक प्रयोजन का संक्षिप्त विवरण / Brief description of public purpose">
                                <field name="q1_brief_description" widget="html" nolabel="1"/>
                            </group>
                            <field name="q2_directly_affected"/>
                            <field name="q3_indirectly_affected"/>
                            <field name="q4_private_assets"/>
                            <field name="q5_government_assets"/>
                            <field name="q6_minimal_acquisition"/>
                            <group string="(सात) क्या संभव विकल्पों और इसकी साध्यता पर विचार कर लिया गया है? / Have possible alternatives and their feasibility been considered?">
                                <field name="q7_alternatives_considered" widget="html" nolabel="1"/>
                            </group>
                            <field name="q8_total_cost"/>
                            <group string="(नौ) परियोजना से होने वाला लाभ / Benefits from the project">
                                <field name="q9_project_benefits" widget="html" nolabel="1"/>
                            </group>
                            <group string="(दस) प्रस्तावित सामाजिक समाघात की प्रतिपूर्ति के लिये उपाय तथा उस पर होने वाला संभावित व्यय / Measures for compensation and likely expenditure">
                                <field name="q10_compensation_measures" widget="html" nolabel="1"/>
                            </group>
                            <group string="(ग्यारह) परियोजना द्वारा प्रभावित होने वाले अन्य घटक / Other components affected by the project">
                                <field name="q11_other_components" widget="html" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Signed Document / हस्ताक्षरित दस्तावेज़">
                            <group string="Signed Notification / हस्ताक्षरित अधिसूचना">
                                <field name="has_signed_document" readonly="1"/>
                                <field name="signed_document_file" filename="signed_document_filename"/>
                                <field name="signed_document_filename" invisible="1"/>
                                <field name="signed_date"/>
                            </group>
                            <group string="Collector Signature / कलेक्टर हस्ताक्षर">
                                <field name="collector_signature" filename="collector_signature_filename"/>
                                <field name="collector_signature_filename" invisible="1"/>
                                <field name="collector_name"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Section 4 Notification Search View -->
    <record id="view_section4_notification_search" model="ir.ui.view">
        <field name="name">bhu.section4.notification.search</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <search string="Section 4 Notifications">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_ids"/>
                <field name="public_hearing_date"/>
                <field name="public_hearing_place"/>
                <filter string="Draft / प्रारूप" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated / जेनरेट किया गया" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed / हस्ताक्षरित" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Has Signed Document / हस्ताक्षरित दस्तावेज़ है" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Notifications / मेरी अधिसूचनाएं" name="my_notifications" domain="[('create_uid', '=', uid)]"/>
                <filter string="All Notifications / सभी अधिसूचनाएं" name="all" domain="[]"/>
            </search>
        </field>
    </record>

    <!-- Section 4 Notification Action -->
    <record id="action_section4_notification" model="ir.actions.act_window">
        <field name="name">Section 4 Notifications / धारा 4 अधिसूचनाएं</field>
        <field name="res_model">bhu.section4.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section 4 Notification!
            </p>
            <p>
                Create and manage Section 4 notifications for land acquisition. You can generate PDFs and upload signed documents.
            </p>
            <p>
                Use the "Create" button to create a new notification, or use "Generate New" action from the menu to use the wizard.
            </p>
        </field>
    </record>
    
    <!-- Action to create notification via wizard -->
    <record id="action_create_section4_notification_wizard" model="ir.actions.act_window">
        <field name="name">Generate Section 4 Notification / धारा 4 अधिसूचना जेनरेट करें</field>
        <field name="res_model">bhu.section4.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

