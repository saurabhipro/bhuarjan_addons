<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Stage 3 Jansunwai List View -->
    <record id="view_bhu_stage3_jansunwai_list" model="ir.ui.view">
        <field name="name">bhu.stage3.jansunwai.list</field>
        <field name="model">bhu.stage3.jansunwai</field>
        <field name="arch" type="xml">
            <list string="Stage 3: Jansunwai &amp; SIA" decoration-info="state=='draft'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="notification_date"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="jansunwai_date"/>
                <field name="jansunwai_location"/>
                <field name="sia_conducted"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Stage 3 Jansunwai Form View -->
    <record id="view_bhu_stage3_jansunwai_form" model="ir.ui.view">
        <field name="name">bhu.stage3.jansunwai.form</field>
        <field name="model">bhu.stage3.jansunwai</field>
        <field name="arch" type="xml">
            <form string="Stage 3: Section 4(1) Jansunwai &amp; Social Impact Assessment">
                <header>
                    <button name="action_confirm" string="Start Process" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" invisible="state not in ['draft', 'in_progress']"/>
                    <button name="action_reset" string="Reset" type="object" class="btn-warning" invisible="state not in ['completed', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="notification_date"/>
                            <field name="public_purpose"/>
                        </group>
                        <group string="Location Information">
                            <field name="district_id"/>
                            <field name="tehsil_id"/>
                            <field name="village_id"/>
                            <field name="total_area"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Jansunwai Details">
                            <field name="jansunwai_date"/>
                            <field name="jansunwai_time"/>
                            <field name="jansunwai_location"/>
                            <field name="jansunwai_purpose"/>
                        </group>
                        <group string="Social Impact Assessment">
                            <field name="sia_conducted"/>
                            <field name="sia_date"/>
                            <field name="sia_agency"/>
                            <field name="sia_report" filename="sia_report_filename"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Affected Population">
                            <field name="total_affected_families"/>
                            <field name="total_affected_individuals"/>
                            <field name="scheduled_caste_families"/>
                            <field name="scheduled_tribe_families"/>
                            <field name="other_backward_class_families"/>
                        </group>
                        <group string="Land Details">
                            <field name="total_land_area"/>
                            <field name="agricultural_land"/>
                            <field name="non_agricultural_land"/>
                            <field name="forest_land"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Compensation Details">
                            <field name="estimated_compensation"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Company Information">
                            <field name="company_id"/>
                            <field name="company_name"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Related Records">
                            <field name="survey_ids" widget="many2many_tags"/>
                            <field name="notification4_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Signature Details">
                            <field name="signature_place"/>
                            <field name="signature_date"/>
                            <field name="signed_by"/>
                            <field name="designation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Stage 3 Jansunwai Search View -->
    <record id="view_bhu_stage3_jansunwai_search" model="ir.ui.view">
        <field name="name">bhu.stage3.jansunwai.search</field>
        <field name="model">bhu.stage3.jansunwai</field>
        <field name="arch" type="xml">
            <search string="Search Stage 3 Jansunwai">
                <field name="name"/>
                <field name="district_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="jansunwai_date"/>
                <field name="sia_conducted"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="This Year" name="this_year" domain="[('notification_date', '>=', datetime.datetime.now().strftime('%Y-01-01'))]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                    <filter string="Tehsil" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stage 3 Jansunwai Action -->
    <record id="action_bhu_stage3_jansunwai" model="ir.actions.act_window">
        <field name="name">Stage 3: Section 4(1) Jansunwai &amp; Social Impact Assessment</field>
        <field name="res_model">bhu.stage3.jansunwai</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_stage3_jansunwai_search"/>
        <field name="context">{'search_default_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Stage 3 Jansunwai record!
            </p>
            <p>
                This stage involves conducting public hearings (Jansunwai) and social impact assessments
                as per Section 4(1) of the RFCTLARR Act, 2013.
            </p>
        </field>
    </record>
</odoo>
