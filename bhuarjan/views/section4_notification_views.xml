<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 4 Notification List View -->
    <record id="view_section4_notification_list" model="ir.ui.view">
        <field name="name">bhu.section4.notification.list</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <list string="Section 4 Notifications" delete="1">
                <field name="notification_seq_number" string="Notification Sequence Number"/>
                <field name="requiring_body_id"/>
                <field name="project_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="area_captured_from_form10" string="Area from Form 10"/>
                <field name="public_hearing_date"/>
                <field name="state" widget="badge" decoration-success="state in ('signed', 'notification_11')" decoration-info="state == 'generated'" decoration-muted="state == 'draft'"/>
                <field name="has_signed_document" widget="boolean_toggle"/>
                <field name="signed_date"/>
            </list>
        </field>
    </record>

    <!-- Section 4 Notification Form View -->
    <record id="view_section4_notification_form" model="ir.ui.view">
        <field name="name">bhu.section4.notification.form</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <form string="Section 4 Notification">
                <header>
                    <button name="action_generate_pdf" string="Generate Notification 4" type="object" class="btn-primary" icon="fa-file-pdf"
                            invisible="state != 'draft' or (state == 'draft' and not all_surveys_approved)"/>
                    <button name="action_download_pdf" string="Download Notification 4" type="object" class="btn-primary" icon="fa-download"
                            invisible="state not in ('generated', 'signed', 'notification_11')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,signed,notification_11"/>
                </header>
                <div class="alert alert-info" role="alert" invisible="state != 'draft' or not project_id or not village_id" 
                     style="margin: 10px; padding: 12px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 4px;">
                    <strong>ℹ Information:</strong> You are about to generate Notification 4 for <strong><field name="project_id" readonly="1" nolabel="1" invisible="not project_id"/></strong> project and <strong><field name="village_id" readonly="1" nolabel="1" invisible="not village_id"/></strong> village. This notification will be generated for approved surveys only.
                </div>
                <div class="alert alert-warning" role="alert" invisible="all_surveys_approved or survey_count == 0 or state != 'draft'" 
                     style="margin: 10px; padding: 10px; background-color: #fff3cd; border: 1px solid #ffc107; border-radius: 4px;">
                    <strong>⚠ Warning:</strong> Cannot generate Section 4 Notification. Some surveys are not approved yet. 
                    Please approve all surveys for the selected villages before generating the notification.
                </div>
                <sheet readonly="has_section11 or state in ('signed', 'notification_11')">
                    <group>
                        <group>
                            <field name="project_id" required="1" readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document" 
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="requiring_body_id" required="1" 
                                   readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                            <field name="tehsil_id" readonly="1"/>
                            <field name="village_id" required="1" 
                                   options="{'no_create_edit': True}"
                                   readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                        </group>
                        <group>
                            <field name="area_captured_from_form10" readonly="1"/>
                            <field name="total_area" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Surveys" icon="fa-clipboard-list" invisible="not project_id or not village_id">
                            <div class="alert alert-info" role="alert" style="margin-bottom: 15px; padding: 8px 12px; background-color: #d1ecf1; border: 1px solid #bee5eb; border-radius: 4px;">
                                <strong>Survey Status:</strong> Total Surveys: <strong><field name="survey_count" readonly="1" nolabel="1"/></strong> | Approved: <strong><field name="approved_survey_count" readonly="1" nolabel="1"/></strong>
                                <span style="color: green; font-weight: bold; margin-left: 15px;" invisible="not all_surveys_approved">✓ All surveys are approved or locked - You can generate the notification</span>
                                <span style="color: red; font-weight: bold; margin-left: 15px;" invisible="all_surveys_approved or survey_count == 0">⚠ Some surveys are not approved yet - Please approve all surveys first</span>
                                <span style="color: orange; font-weight: bold; margin-left: 15px;" invisible="survey_count != 0">⚠ No surveys found for selected villages</span>
                            </div>
                            <field name="survey_ids" readonly="1" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="user_id" string="Surveyor"/>
                                    <field name="project_id" string="Project"/>
                                    <field name="district_name" string="District"/>
                                    <field name="village_id" string="Village"/>
                                    <field name="khasra_number" string="Khasra Number"/>
                                    <field name="total_area" string="Total Area"/>
                                    <field name="acquired_area" string="Acquired Area"/>
                                    <field name="state" widget="badge" string="Status"
                                           decoration-success="state == 'approved'" 
                                           decoration-info="state == 'submitted'" 
                                           decoration-warning="state == 'draft'"
                                           decoration-danger="state == 'rejected'"
                                           decoration-muted="state == 'locked'"/>
                                    <field name="survey_date" string="Survey Date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Basic Information" icon="fa-info-circle">
                            <group string="Public Purpose">
                                <field name="public_purpose" placeholder="Enter description of public purpose for land acquisition..." 
                                       widget="html" nolabel="1"
                                       readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                            </group>
                            <group string="Public Hearing Details">
                                <field name="public_hearing_date" readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                <field name="public_hearing_time" readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                <field name="public_hearing_place" readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                            </group>
                        </page>
                        <page string="Section 4 Questions" icon="fa-question-circle">
                            <group>
                                <group string="(1) Brief Description of Public Purpose / लोक प्रयोजन का संक्षिप्त विवरण">
                                    <field name="q1_brief_description" widget="html" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                                <group string="(2) Number of Directly Affected Families / प्रत्यक्ष रूप से प्रभावित परिवारों की संख्या">
                                    <field name="q2_directly_affected" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                            </group>
                            <group>
                                <group string="(3) Number of Indirectly Affected Families / अप्रत्यक्ष रूप से प्रभावित परिवारों की संख्या">
                                    <field name="q3_indirectly_affected" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                                <group string="(4) Estimated Number of Private Houses and Other Assets / निजी मकानों और अन्य संपत्तियों की अनुमानित संख्या">
                                    <field name="q4_private_assets" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                            </group>
                            <group>
                                <group string="(5) Estimated Number of Government Houses and Other Assets / सरकारी मकानों और अन्य संपत्तियों की अनुमानित संख्या">
                                    <field name="q5_government_assets" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                                <group string="(6) Is the Proposed Acquisition Minimal? / क्या प्रस्तावित अर्जन न्यूनतम है?">
                                    <field name="q6_minimal_acquisition" widget="radio" nolabel="1"
                                           options="{'horizontal': true}"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                            </group>
                            <group>
                                <group string="(7) Have Possible Alternatives and Their Feasibility Been Considered? / क्या संभावित विकल्पों और उनकी व्यवहार्यता पर विचार किया गया है?">
                                    <field name="q7_alternatives_considered" widget="radio" nolabel="1"
                                           options="{'horizontal': true}"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                            </group>
                            <group>
                                <group string="(8) Total Cost of the Project / परियोजना की कुल लागत">
                                    <field name="q8_total_cost" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                                <group string="(9) Benefits from the Project / परियोजना से लाभ">
                                    <field name="q9_project_benefits" widget="html" nolabel="1"
                                           readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                                </group>
                            </group>
                            <group string="(10) Measures for Compensation and Likely Expenditure / मुआवजे के उपाय और संभावित व्यय">
                                <field name="q10_compensation_measures" widget="html" nolabel="1"
                                       readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                            </group>
                            <group string="(11) Other Components Affected by the Project / परियोजना से प्रभावित अन्य घटक">
                                <field name="q11_other_components" widget="html" nolabel="1"
                                       readonly="state in ('generated', 'signed', 'notification_11') or has_signed_document"/>
                            </group>
                        </page>
                        <page string="Signed Document" icon="fa-file-signature">
                            <group string="Signed Notification">
                                <field name="signed_document_file" filename="signed_document_filename"
                                      readonly="state in ('signed', 'notification_11')"/>
                                <field name="signed_document_filename" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Section 4 Notification Search View -->
    <record id="view_section4_notification_search" model="ir.ui.view">
        <field name="name">bhu.section4.notification.search</field>
        <field name="model">bhu.section4.notification</field>
        <field name="arch" type="xml">
            <search string="Section 4 Notifications">
                <field name="notification_seq_number"/>
                <field name="requiring_body_id"/>
                <field name="project_id"/>
                <field name="tehsil_id"/>
                <field name="village_id"/>
                <field name="public_hearing_date"/>
                <field name="public_hearing_place"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Signed" name="signed" domain="[('state', '=', 'signed')]"/>
                <filter string="Has Signed Document" name="has_signed" domain="[('has_signed_document', '=', True)]"/>
                <separator/>
                <filter string="My Notifications" name="my_notifications" domain="[('create_uid', '=', uid)]"/>
                <filter string="All Notifications" name="all" domain="[]"/>
            </search>
        </field>
    </record>

    <!-- Section 4 Notification Action -->
    <record id="action_section4_notification" model="ir.actions.act_window">
        <field name="name">Section 4 Notifications</field>
        <field name="res_model">bhu.section4.notification</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Section 4 Notification!
            </p>
            <p>
                Create and manage Section 4 notifications for land acquisition. You can generate PDFs and upload signed documents.
            </p>
            <p>
                Use the "Create" button to create a new notification, or use "Generate New" action from the menu to use the wizard.
            </p>
        </field>
    </record>
    
    <!-- Action to create notification via wizard -->
    <record id="action_create_section4_notification_wizard" model="ir.actions.act_window">
        <field name="name">Generate Section 4 Notification</field>
        <field name="res_model">bhu.section4.notification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>

