<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Custom Attachment List View with Preview Button -->
    <record id="view_ir_attachment_tree_section15" model="ir.ui.view">
        <field name="name">ir.attachment.list.section15</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list string="Attachments">
                <field name="name"/>
                <field name="mimetype" invisible="1"/>
                <field name="file_size"/>
                <field name="create_date"/>
                <button name="action_preview_attachment" type="object" 
                        icon="fa-eye" 
                        string="Preview" 
                        class="oe_link"
                        invisible="mimetype != 'application/pdf'"
                        title="Preview PDF"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection List View -->
    <record id="view_section15_objection_list" model="ir.ui.view">
        <field name="name">bhu.section15.objection.list</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <list string="Section 15 Objections">
                <field name="name" string="Objection Name"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="survey_id" string="Survey (Khasra)"/>
                <field name="objection_type" string="Objection Type"/>
                <field name="objection_date" string="Objection Date"/>
                <field name="age_days" string="Age (Days)"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="state" widget="badge" string="Status"
                       decoration-danger="state == 'send_back'"
                       decoration-warning="state == 'draft'"
                       decoration-info="state == 'submitted'"
                       decoration-success="state == 'approved'"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Form View -->
    <record id="view_section15_objection_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.form</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <form string="Objection / आपत्ति" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                <header>
                    <!-- File Upload Section for SDM (editable only in draft state) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin" 
                           invisible="state != 'draft'">
                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               placeholder="Upload Signed Objection Response"/>
                        <button name="action_submit" string="Submit to Collector" type="object" class="btn-primary" 
                                icon="fa-paper-plane"
                                invisible="not sdm_signed_file"/>
                    </group>
                    
                    <!-- SDM Signed File Display (readonly, visible in all states after draft when file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not sdm_signed_file or state == 'draft'">
                        <field name="sdm_signed_file" filename="sdm_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               readonly="1"
                               string="SDM Signed Response (Uploaded)"/>
                        <button name="action_download_sdm_signed_file" string="Download SDM Signed Response" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download SDM Signed Response"/>
                    </group>
                    
                    <!-- File Upload Section for Collector (editable only in submitted state) -->
                    <group groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin" 
                           invisible="state != 'submitted'">                        
                        <field name="collector_signed_file" filename="collector_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               placeholder="Upload Objection Approval Letter"/>
                    </group>
                    
                    <!-- Collector Signed File Display (readonly, visible in all states after submitted when file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not collector_signed_file or state == 'draft'">
                        <field name="collector_signed_file" filename="collector_signed_filename" 
                               nolabel="1"
                               widget="binary"
                               readonly="1"
                               string="Collector Signed Approval (Uploaded)"/>
                        <button name="action_download_collector_signed_file" string="Download Collector Signed Approval" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download Collector Signed Approval"/>
                    </group>
                    
                    <!-- Download Latest PDF Report Button (always visible when any file exists) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not sdm_signed_file and not collector_signed_file">
                        <button name="action_download_latest_pdf" string="Download Latest PDF Report" type="object" 
                                class="btn-primary" icon="fa-file-pdf"
                                title="Download Latest PDF (Collector's if available, otherwise SDM's, otherwise unsigned)"/>
                    </group>
                    
                    <!-- Download Resolution Report Button -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="not resolution_details or state == 'draft'">
                        <button name="%(action_report_section15_objection_resolution)d" string="Download Resolution Report" type="action" 
                                class="btn-primary" icon="fa-file-pdf"
                                title="Download Objection Resolution Report"/>
                    </group>
                    
                    <!-- Download Unsigned PDF Button (visible in draft state) -->
                    <group groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                           invisible="state != 'draft'">
                        <button name="action_download_unsigned_file" string="Download PDF (Unsigned)" type="object" 
                                class="btn-secondary" icon="fa-download"
                                title="Download Objection Document (Unsigned)"/>
                    </group>
                    
                    <!-- Action Buttons Row: Approve, Send Back, Resolve -->
                    <group>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                icon="fa-check"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted' or not collector_signed_file"/>
                        <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                icon="fa-arrow-left"
                                groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                invisible="state != 'submitted'"/>
                        <button name="action_resolve" string="Resolve / हल करें" type="object" class="btn-success" 
                                invisible="state == 'approved'" icon="fa-check"/>
                    </group>
                    
                     <!-- Resubmit button (for sent back records) -->
                     <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                             icon="fa-refresh"
                             groups="bhuarjan.group_bhuarjan_sdm"
                             invisible="state != 'send_back'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-exclamation-triangle" style="margin-right: 10px;"></i>Section 15 Objection / धारा 15 आपत्ति
                        </h1>
                    </div>
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="name" readonly="1" invisible="1"/>
                            <field name="project_id" required="1"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            <field name="village_id" required="1" domain="village_domain" options="{'no_create': True, 'no_open': True}"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            <field name="available_survey_ids" invisible="1"/>
                            <field name="survey_id" string="Survey (Khasra) / सर्वे (खसरा)" required="1"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                   domain="[('id', 'in', available_survey_ids)]"
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'show_khasra': True}"/>
                        </group>
                        <group>
                            <field name="objection_date" required="1"
                                   readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            <field name="resolved_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Objection &amp; Resolution / आपत्ति और समाधान">
                            <group>
                                <group>
                                    <div style="margin-bottom: 15px;">
                                        <label for="objection_type" style="font-weight: bold; margin-bottom: 8px; display: block;">
                                            <i class="fa fa-exclamation-triangle" style="color: #f39c12; margin-right: 8px;"/>
                                            Objection Type / आपत्ति प्रकार
                                        </label>
                                        <field name="objection_type" required="1"
                                               readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                                    </div>
                                </group>
                            </group>
                            
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-comment-o" style="color: #7c7bad; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Objection Details / आपत्ति विवरण</span>
                                </div>
                                <field name="objection_details" required="1" placeholder="Enter objection details..." nolabel="1"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            </group>
                            
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-check-circle" style="color: #5cb85c; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Resolution Details / समाधान विवरण</span>
                                    <span style="color: #d9534f; margin-left: 10px;">*</span>
                                </div>
                                <field name="resolution_details" placeholder="Enter resolution details..." nolabel="1" required="1"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                            </group>
                            
                            <group string="Landowners / भूमिस्वामी" invisible="not survey_id or objection_type != 'remove_landowners'">
                                <div style="margin-bottom: 10px; padding: 10px; background-color: #f8f9fa; border-left: 4px solid #5cb85c;">
                                    <i class="fa fa-info-circle" style="color: #5cb85c; margin-right: 8px;"/>
                                    <span style="font-weight: bold;">Note: You can remove landowners but cannot add new ones. At least one landowner must remain.</span>
                                    <br/>
                                    <span style="font-size: 12px; color: #666;">नोट: आप भूमिस्वामी हटा सकते हैं लेकिन नए नहीं जोड़ सकते। कम से कम एक भूमिस्वामी रहना चाहिए।</span>
                                </div>
                                <group>
                                    <group>
                                        <field name="original_landowner_ids" string="Original Landowners / मूल भूमिस्वामी" 
                                               widget="many2many_tags" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="resolution_landowner_ids" string="Landowners After Resolution / समाधान के बाद भूमिस्वामी"
                                               readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                               widget="many2many_tags"
                                               domain="[('id', 'in', original_landowner_ids)]"/>
                                    </group>
                                </group>
                            </group>
                            
                            <group string="Khasra Area Changes / खसरा क्षेत्रफल परिवर्तन" invisible="not survey_id or objection_type != 'area_decrease'">
                                <div style="margin-bottom: 10px; padding: 10px; background-color: #f8f9fa; border-left: 4px solid #5cb85c;">
                                    <i class="fa fa-info-circle" style="color: #5cb85c; margin-right: 8px;"/>
                                    <span style="font-weight: bold;">Note: You can decrease acquired area but cannot increase it.</span>
                                    <br/>
                                    <span style="font-size: 12px; color: #666;">नोट: आप अर्जन क्षेत्रफल कम कर सकते हैं लेकिन बढ़ा नहीं सकते।</span>
                                </div>
                                <field name="resolution_khasra_ids" 
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"
                                       nolabel="1"
                                       context="{'default_objection_id': id, 'default_survey_id': survey_id}">
                                    <list string="Khasra Resolution" editable="bottom">
                                        <field name="survey_id" readonly="1" options="{'no_create': True, 'no_open': True}" required="1"/>
                                        <field name="khasra_number" readonly="1"/>
                                        <field name="original_acquired_area" readonly="1"/>
                                        <field name="resolved_acquired_area"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                        <page string="Documents / दस्तावेज़">
                            <group>
                                <div style="margin-bottom: 10px;">
                                    <i class="fa fa-file-pdf-o" style="color: #d9534f; margin-right: 8px; font-size: 16px;"/>
                                    <span style="font-weight: bold; font-size: 14px;">Objection Document / आपत्ति दस्तावेज़</span>
                                </div>
                                <field name="objection_document_filename" invisible="1"/>
                                <field name="objection_document" filename="objection_document_filename"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)" 
                                       widget="binary" 
                                       options="{'filename': 'objection_document_filename'}"
                                       placeholder="Upload a PDF, image, or other document related to this objection..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 15 Objection Search View -->
    <record id="view_section15_objection_search" model="ir.ui.view">
        <field name="name">bhu.section15.objection.search</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <search string="Search Objections">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="survey_id"/>
                <field name="objection_type"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Sent Back" name="send_back" domain="[('state', '=', 'send_back')]"/>
                <filter string="Area Decrease" name="area_decrease" domain="[('objection_type', '=', 'area_decrease')]"/>
                <filter string="Remove Landowners" name="remove_landowners" domain="[('objection_type', '=', 'remove_landowners')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Objection Type" name="group_objection_type" context="{'group_by': 'objection_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update Section 15 Objection Action -->
    <record id="action_section15_objections" model="ir.actions.act_window">
        <field name="name">Section 15 Objections</field>
        <field name="res_model">bhu.section15.objection</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section15_objection_search"/>
    </record>
</odoo>

