<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="view_bhu_village_list" model="ir.ui.view">
        <field name="name">bhu.village.list</field>
        <field name="model">bhu.village</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="district_id"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_bhu_village_form" model="ir.ui.view">
        <field name="name">bhu.village.form</field>
        <field name="model">bhu.village</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="district_id" options="{'no_create': True, 'no_open': True, 'no_edit': True}"/>
                        <field name="state_id" options="{'no_create': True, 'no_open': True, 'no_create_edit': True}" readonly="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bhu_village" model="ir.actions.act_window">
        <field name="name">Villages</field>
        <field name="res_model">bhu.village</field>
        <field name="view_mode">list,form</field>
    </record>    
</odoo>
