<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--    Demo Dashboard Theme    -->
        <record id="demo_function_1" model="kpi.functions">
            <field name="name">get_job_positions_by_recruiter</field>
        </record>

        <record id="demo_function_2" model="kpi.functions">
            <field name="name">get_active_job_positions</field>
        </record>

        <record id="demo_function_3" model="kpi.functions">
            <field name="name">get_applications_per_job</field>
        </record>

        <record id="demo_function_4" model="kpi.functions">
            <field name="name">get_applicant_per_stage</field>
        </record>

        <record id="demo_function_5" model="kpi.functions">
            <field name="name">get_average_number_of_days_from_posting_to_acceptance</field>
        </record>

        <record id="demo_function_6" model="kpi.functions">
            <field name="name">get_average_number_of_days_taken__to_screen</field>
        </record>

        <record id="demo_function_7" model="kpi.functions">
            <field name="name">get_interview_velocity</field>
        </record>

        <!-- dashboard kpi's -->
         
        <record id="dashbord_kpi_workload" model="dashboard.kpi">
            <field name="name">Recruiter Workload</field>
            <field name="description">No. of Job positions assigned to recruiter and no. of applications handled in a time period</field>
            <field name="measureable_function_id" ref="demo_function_1"/>
        </record>

        <record id="dashbord_kpi_open_position" model="dashboard.kpi">
            <field name="name">Open Job Positions</field>
            <field name="description">Jobs actively being recruited for</field>
            <field name="measureable_function_id" ref="demo_function_2"/>
        </record>

        <record id="dashbord_kpi_applicant_received" model="dashboard.kpi">
            <field name="name">Application Received</field>
            <field name="description">Total number of applications per job or period</field>
            <field name="measureable_function_id" ref="demo_function_3"/>
        </record>

        <record id="dashbord_kpi_candidate_pipeline" model="dashboard.kpi">
            <field name="name">Candidates in Pipeline</field>
            <field name="description">Number of candidates at each stage (applied, screened, interviewed, offered, etc.)</field>
            <field name="measureable_function_id" ref="demo_function_4"/>
        </record>

        <record id="dashbord_kpi_time_to_hire" model="dashboard.kpi">
            <field name="name">Time to Hire</field>
            <field name="description">Average number of days from job posting to offer acceptance</field>
            <field name="measureable_function_id" ref="demo_function_5"/>
        </record>

        <record id="dashbord_kpi_processing_time" model="dashboard.kpi">
            <field name="name">Application Processing Time</field>
            <field name="description">Average number of days from job posting to offer acceptance</field>
            <field name="measureable_function_id" ref="demo_function_6"/>
        </record>

        <record id="dashbord_kpi_interview_velocity" model="dashboard.kpi">
            <field name="name">Interview Velocity</field>
            <field name="description">no. of interviews scheduled/time duration e.g 5 interviews scheduled in 2 weeks so interview velocity = 5/2=2.5 interviews per week</field>
            <field name="measureable_function_id" ref="demo_function_7"/>
        </record>
    </data>
</odoo>