<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree Master List View -->
    <record id="view_bhu_tree_master_list" model="ir.ui.view">
        <field name="name">bhu.tree.master.list</field>
        <field name="model">bhu.tree.master</field>
        <field name="arch" type="xml">
            <list string="Tree Master">
                <field name="name"/>
                <field name="tree_type"/>
                <field name="rate" string="Rate (Fruit-bearing)"/>
            </list>
        </field>
    </record>

    <!-- Tree Master Form View -->
    <record id="view_bhu_tree_master_form" model="ir.ui.view">
        <field name="name">bhu.tree.master.form</field>
        <field name="model">bhu.tree.master</field>
        <field name="arch" type="xml">
            <form string="Tree Master">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter tree name (e.g., Mango, Neem)"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Basic Information / मूल जानकारी">
                            <field name="tree_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Fruit-bearing Rate / फलदार दर" invisible="tree_type != 'fruit_bearing'">
                            <group>
                                <field name="rate"/>
                            </group>
                        </page>
                        <page string="Non-fruit-bearing Rates / गैर-फलदार दरें" invisible="tree_type != 'non_fruit_bearing'">
                            <group>
                                <field name="tree_rate_ids" nolabel="1" context="{'default_tree_master_id': id}">
                                    <list string="Girth-based Rates" editable="bottom">
                                        <field name="girth_range_min"/>
                                        <field name="girth_range_max"/>
                                        <field name="development_stage"/>
                                        <field name="rate" widget="monetary"/>
                                        <field name="active"/>
                                    </list>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Tree Master Search View -->
    <record id="view_bhu_tree_master_search" model="ir.ui.view">
        <field name="name">bhu.tree.master.search</field>
        <field name="model">bhu.tree.master</field>
        <field name="arch" type="xml">
            <search string="Search Tree Master">
                <field name="name"/>
                <field name="tree_type"/>
                <filter string="Fruit-bearing" name="fruit_bearing" domain="[('tree_type', '=', 'fruit_bearing')]"/>
                <filter string="Non-fruit-bearing" name="non_fruit_bearing" domain="[('tree_type', '=', 'non_fruit_bearing')]"/>
            </search>
        </field>
    </record>

    <!-- Tree Master Action -->
    <record id="action_bhu_tree_master" model="ir.actions.act_window">
        <field name="name">Tree Master</field>
        <field name="res_model">bhu.tree.master</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_bhu_tree_master_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Tree Master record!
            </p>
            <p>
                Define tree species with their compensation rates for survey purposes.
            </p>
        </field>
    </record>
</odoo>

