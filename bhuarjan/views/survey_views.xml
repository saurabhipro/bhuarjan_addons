                    <filter string="Tehsil / ‡§§‡§π‡§∏‡•Ä‡§≤" name="group_tehsil" context="{'group_by': 'tehsil_id'}"/>
                    <filter string="Khasra Number / ‡§ñ‡§∏‡§∞‡§æ ‡§®‡§Ç‡§¨‡§∞" name="group_khasra" context="{'group_by': 'khasra_number'}"/>
