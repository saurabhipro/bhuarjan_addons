<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 8 List View -->
    <record id="view_section8_list" model="ir.ui.view">
        <field name="name">bhu.section8.list</field>
        <field name="model">bhu.section8</field>
        <field name="arch" type="xml">
            <list string="Section 8">
                <field name="name" string="Reference"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="state" widget="badge" string="Status"
                       decoration-danger="state == 'rejected'"
                       decoration-warning="state == 'draft'"
                       decoration-success="state == 'approved'"/>
                <field name="approval_date" string="Approval Date"/>
                <field name="rejection_date" string="Rejection Date"/>
            </list>
        </field>
    </record>

    <!-- Section 8 Form View -->
    <record id="view_section8_form" model="ir.ui.view">
        <field name="name">bhu.section8.form</field>
        <field name="model">bhu.section8</field>
        <field name="arch" type="xml">
            <form string="Section 8 / धारा 8">
                <header>
                    <button name="action_approve" string="Approve / अनुमोदित करें" type="object" 
                            class="btn-primary" icon="fa-check"
                            invisible="state == 'approved'"/>
                    <button name="action_reject" string="Reject / अस्वीकृत करें" type="object" 
                            class="btn-secondary" icon="fa-times"
                            invisible="state == 'rejected'"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="village_id" domain="village_domain" options="{'no_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Enter any additional notes..."/>
                    </group>
                    <group string="Rejection Details" invisible="state != 'rejected'">
                        <field name="rejection_reason" required="state == 'rejected'"/>
                        <field name="rejection_date" readonly="1"/>
                    </group>
                    <group string="Approval Details" invisible="state != 'approved'">
                        <field name="approval_date" readonly="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Section 8 Search View -->
    <record id="view_section8_search" model="ir.ui.view">
        <field name="name">bhu.section8.search</field>
        <field name="model">bhu.section8</field>
        <field name="arch" type="xml">
            <search string="Section 8">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
            </search>
        </field>
    </record>

    <!-- Section 8 Action -->
    <record id="action_section8" model="ir.actions.act_window">
        <field name="name">Section 8</field>
        <field name="res_model">bhu.section8</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="view_section8_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 8
            </p>
        </field>
    </record>
</odoo>