<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- list View -->
    <record id="bhu_sub_division_view_list" model="ir.ui.view">
        <field name="name">bhu.sub.division.view.list</field>
        <field name="model">bhu.sub.division</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="district_id"/>
                <field name="state_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="bhu_sub_division_view_form" model="ir.ui.view">
        <field name="name">bhu.sub.division.view.form</field>
        <field name="model">bhu.sub.division</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="state_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                        <field name="district_id" options="{'no_create':True,'no_create_edit':True,'no_open':True}" domain="[('state_id', '=', state_id)]"/>
                        <field name="name"/>
                    </group>
                </sheet>
                 <chatter/>
            </form>
        </field>
    </record>

    

    <!-- Action -->
    <record id="action_bhu_sub_division" model="ir.actions.act_window">
        <field name="name">Sub Divisions</field>
        <field name="res_model">bhu.sub.division</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
