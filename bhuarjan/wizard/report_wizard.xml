<odoo>
    <!-- Wizard Form -->
    <record id="view_report_wizard_form" model="ir.ui.view">
        <field name="name">report.wizard.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                <group>
                    <field name="form_10" invisible="1"/>
                    <field name="allowed_village_ids" invisible="1"/>
                    <field name="export_type" string="Export Type" widget="radio" options="{'horizontal': true}"/>
                    <field name="project_id" string="Project / परियोजना" options="{'no_open': True}"/>
                    <field name="allowed_village_ids" invisible="1"/>
                    <field name="village_id" string="Village / ग्राम" 
                           domain="[('id', 'in', allowed_village_ids)]"
                           options="{'no_open': True, 'no_create_edit': True}"/>
                </group>
                <footer>
                    <button name="action_print_report"
                            string="Download"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_cancel"
                            string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
            <record id="action_report_wizard" model="ir.actions.act_window">
        <field name="name">Report Wizard</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
                <field name="target">new</field>
                <field name="context">{}</field>
    </record>


</odoo>
