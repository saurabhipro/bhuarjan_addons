<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- App Version List View -->
        <record id="view_app_version_tree" model="ir.ui.view">
            <field name="name">bhu.app.version.tree</field>
            <field name="model">bhu.app.version</field>
            <field name="arch" type="xml">
                <list string="App Versions" decoration-info="is_latest" decoration-success="is_active" decoration-muted="not is_active">
                    <field name="name"/>
                    <field name="version_code"/>
                    <field name="is_active"/>
                    <field name="is_latest"/>
                    <field name="force_update"/>
                    <field name="activated_date"/>
                    <field name="deactivated_date"/>
                </list>
            </field>
        </record>

        <!-- App Version Form View -->
        <record id="view_app_version_form" model="ir.ui.view">
            <field name="name">bhu.app.version.form</field>
            <field name="model">bhu.app.version</field>
            <field name="arch" type="xml">
                <form string="App Version">
                    <header>
                        <button name="action_activate" string="Activate" type="object" 
                                class="oe_highlight" invisible="is_active == True"/>
                        <button name="action_deactivate" string="Deactivate" type="object" 
                                invisible="is_active == False"/>
                        <button name="action_set_as_latest" string="Set as Latest" type="object" 
                                class="btn-primary" invisible="is_latest == True"/>
                        <field name="is_active" widget="boolean_toggle" readonly="1"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="e.g., 1.0.0"/>
                                <field name="version_code"/>
                                <field name="is_latest" widget="boolean_toggle"/>
                                <field name="force_update" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="is_active" widget="boolean_toggle" readonly="1"/>
                                <field name="activated_date" readonly="1"/>
                                <field name="deactivated_date" readonly="1"/>
                                <field name="active_user_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Enter release notes or description..."/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- App Version Search View -->
        <record id="view_app_version_search" model="ir.ui.view">
            <field name="name">bhu.app.version.search</field>
            <field name="model">bhu.app.version</field>
            <field name="arch" type="xml">
                <search string="App Versions">
                    <field name="name"/>
                    <field name="version_code"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Latest" name="latest" domain="[('is_latest', '=', True)]"/>
                    <filter string="Force Update" name="force_update" domain="[('force_update', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_status" context="{'group_by': 'is_active'}"/>
                        <filter string="Latest" name="group_by_latest" context="{'group_by': 'is_latest'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- App Version Kanban View -->
        <record id="view_app_version_kanban" model="ir.ui.view">
            <field name="name">bhu.app.version.kanban</field>
            <field name="model">bhu.app.version</field>
            <field name="arch" type="xml">
                <kanban default_group_by="is_active" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="version_code"/>
                    <field name="is_active"/>
                    <field name="is_latest"/>
                    <field name="force_update"/>
                    <field name="activated_date"/>
                    <field name="deactivated_date"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <strong><field name="name"/></strong>
                                        <span class="badge badge-pill" t-attf-class="badge-#{record.is_active.raw_value ? 'success' : 'secondary'}">
                                            <t t-if="record.is_active.raw_value">Active</t>
                                            <t t-if="not record.is_active.raw_value">Inactive</t>
                                        </span>
                                        <span class="badge badge-info" t-if="record.is_latest.raw_value">Latest</span>
                                        <span class="badge badge-warning" t-if="record.force_update.raw_value">Force Update</span>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div>Version Code: <field name="version_code"/></div>
                                    <div t-if="record.activated_date.raw_value">
                                        Activated: <field name="activated_date"/>
                                    </div>
                                    <div t-if="record.deactivated_date.raw_value">
                                        Deactivated: <field name="deactivated_date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- App Version Action -->
        <record id="action_app_version" model="ir.actions.act_window">
            <field name="name">App Versions</field>
            <field name="res_model">bhu.app.version</field>
            <field name="view_mode">list,form,kanban</field>
            <field name="search_view_id" ref="view_app_version_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first app version!
                </p>
                <p>
                    Manage app versions to control which versions of your mobile app can be used.
                    When you create a new version and mark it as latest, older versions will be automatically disabled.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_app_version"
                  name="App Versions"
                  parent="menu_bhu_master"
                  action="action_app_version"
                  sequence="100"
                  groups="bhuarjan.group_bhuarjan_admin,base.group_system"/>
    </data>
</odoo>

