<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Custom Attachment List View with Preview Button -->
    <record id="view_ir_attachment_tree_section15" model="ir.ui.view">
        <field name="name">ir.attachment.list.section15</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list string="Attachments">
                <field name="name"/>
                <field name="mimetype" invisible="1"/>
                <field name="file_size"/>
                <field name="create_date"/>
                <button name="action_preview_attachment" type="object" 
                        icon="fa-eye" 
                        string="Preview" 
                        class="oe_link"
                        invisible="mimetype != 'application/pdf'"
                        title="Preview PDF"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection List View -->
    <record id="view_section15_objection_list" model="ir.ui.view">
        <field name="name">bhu.section15.objection.list</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <list string="Section 15 Objections">
                <field name="name" string="Objection Name"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="survey_id" string="Survey (Khasra)"/>
                <field name="objection_date" string="Objection Date"/>
                <field name="age_days" string="Age (Days)"/>
                <field name="pending_with" string="Pending With" invisible="state == 'approved'"/>
                <field name="state" widget="badge" string="Status"
                       decoration-warning="state == 'draft'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'rejected'"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Form View -->
    <record id="view_section15_objection_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.form</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <form string="Objection / आपत्ति" edit="not (state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit))">
                <field name="is_sdm" invisible="1"/>
                <field name="is_collector" invisible="1"/>
                <field name="is_admin" invisible="1"/>
                <field name="is_approved_readonly" invisible="1"/>
                <field name="can_sdm_edit" invisible="1"/>
                <field name="can_collector_edit" invisible="1"/>
                <header>
                    <!-- Action Buttons Row: Approve, Reject -->
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                            icon="fa-check"
                            groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'draft'"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" 
                            icon="fa-times"
                            groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-exclamation-triangle" style="margin-right: 10px;"></i>Section 15 Objection / धारा 15 आपत्ति
                        </h1>
                    </div>
                    <group>
                        <field name="pending_with" string="Pending With / लंबित" readonly="1" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="name" readonly="1" invisible="1"/>
                            <field name="project_id" required="1" invisible="1"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"/>
                            <field name="village_id" required="1" domain="village_domain" options="{'no_create': True, 'no_open': True}" invisible="1"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"/>
                            <field name="available_survey_ids" invisible="1"/>
                            <field name="survey_id" string="Survey (Khasra) / सर्वे (खसरा)" required="1"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"
                                   domain="[('id', 'in', available_survey_ids)]"
                                   options="{'no_create': True, 'no_open': True}"
                                   context="{'show_khasra': True}"
                                   placeholder="Select a khasra number from this village..."/>
                        </group>
                        <group>
                            <field name="objection_date" required="1"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"/>
                        </group>
                    </group>
                    
                    <!-- Inline Survey Edit Section -->
                    <div invisible="not survey_id">
                        <separator string="Edit Survey Details / सर्वे विवरण संपादित करें"/>
                        
                        <div class="alert alert-warning" role="alert" style="margin-bottom: 15px;">
                            <i class="fa fa-exclamation-triangle" style="margin-right: 8px;"/>
                            <strong>Note:</strong> Changing landowners or area will create an objection automatically.
                            <br/>
                            <span style="font-size: 12px; margin-top: 4px; display: inline-block;">नोट: भूमिस्वामी या क्षेत्रफल बदलने से स्वचालित रूप से आपत्ति बन जाएगी।</span>
                        </div>
                        
                        <style>
                            /* Both table headers - Brown with White Text */
                            .o_field_widget[name="resolution_landowner_ids"] .o_list_view thead th,
                            .o_field_widget[name="resolution_khasra_ids"] .o_list_view thead th,
                            .o_field_widget[name="resolution_survey_detail_ids"] .o_list_view thead th {
                                background: linear-gradient(to bottom, #8B4513, #A0522D) !important;
                                color: white !important;
                                font-weight: bold !important;
                                border: 1px solid #7a3d0f !important;
                            }
                            /* Ensure text in headers is white */
                            .o_field_widget[name="resolution_landowner_ids"] .o_list_view thead th *,
                            .o_field_widget[name="resolution_khasra_ids"] .o_list_view thead th *,
                            .o_field_widget[name="resolution_survey_detail_ids"] .o_list_view thead th * {
                                color: white !important;
                            }
                            
                            .o_field_widget[name="resolution_landowner_ids"] .o_list_view tbody tr:hover,
                            .o_field_widget[name="resolution_khasra_ids"] .o_list_view tbody tr:hover,
                            .o_field_widget[name="resolution_survey_detail_ids"] .o_list_view tbody tr:hover {
                                background-color: #f5e0d5 !important;
                            }
                        </style>
                        
                        <group string="भूमिस्वामी विवरण">
                            <field name="resolution_landowner_ids"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"
                                   widget="many2many"
                                   mode="tree,form"
                                   nolabel="1"
                                   options="{'create_text': 'Add Landowner', 'no_quick_create': False}"
                                   context="{'default_village_id': village_id.id if village_id else False, 'form_view_ref': 'bhuarjan.view_landowner_form', 'list_view_ref': 'bhuarjan.view_section15_landowner_tree', 'show_khasra': True}"/>
                        </group>
                        
                        <group string="Khasra Area / खसरा क्षेत्रफल">
                            <field name="resolution_khasra_ids" 
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"
                                   nolabel="1"
                                   options="{'no_create': True}"
                                   context="{'default_objection_id': id, 'default_survey_id': survey_id.id if survey_id else False, 'list_view_ref': 'bhuarjan.view_section15_objection_khasra_tree', 'show_khasra': True}"/>
                        </group>

                        <group string="Other Survey Details / अन्य सर्वे विवरण">
                            <field name="resolution_survey_detail_ids"
                                   readonly="state in ('approved', 'rejected') or (state == 'draft' and not can_sdm_edit)"
                                   nolabel="1"
                                   options="{'no_create': True}"
                                   context="{'default_objection_id': id, 'default_survey_id': survey_id.id if survey_id else False, 'list_view_ref': 'bhuarjan.view_section15_objection_survey_detail_tree', 'form_view_ref': 'bhuarjan.view_section15_objection_survey_detail_form'}"/>
                        </group>
                    </div>
                    
                    <!-- Download Section 15 PDF Button -->
                    <group string="Download Section 15 Documents" 
                           groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                           invisible="state == 'draft'"
                           style="margin-top: 20px;">
                        <button name="%(action_report_section15_objection_resolution)d" string="Download Section 15 PDF" type="action" 
                                class="btn-primary" icon="fa-file-pdf"
                                title="Download Section 15 Objection Resolution Report"
                                style="background-color: #8B4513; border-color: #8B4513; color: white; font-weight: bold; padding: 12px 24px; font-size: 16px; width: 100%;"/>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- Section 15 Objection Search View -->
    <record id="view_section15_objection_search" model="ir.ui.view">
        <field name="name">bhu.section15.objection.search</field>
        <field name="model">bhu.section15.objection</field>
        <field name="arch" type="xml">
            <search string="Search Objections">
                <field name="name"/>
                <field name="project_id"/>
                <field name="village_id"/>
                <field name="survey_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Sent Back" name="send_back" domain="[('state', '=', 'send_back')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Village" name="group_village" context="{'group_by': 'village_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Section 15 Objection Khasra List View -->
    <record id="view_section15_objection_khasra_tree" model="ir.ui.view">
        <field name="name">bhu.section15.objection.khasra.list</field>
        <field name="model">bhu.section15.objection.khasra</field>
        <field name="arch" type="xml">
            <list string="Khasra Area Details" decoration-info="resolved_acquired_area &lt; original_acquired_area" editable="bottom" create="0">
                <field name="objection_id" column_invisible="1"/>
                <field name="survey_id" readonly="1" options="{'no_create': True, 'no_open': True}" required="1" context="{'show_khasra': True}" string="Survey"/>
                <field name="khasra_number" readonly="1" string="Khasra"/>
                <field name="original_acquired_area" readonly="1" widget="float" string="Original Area"/>
                <field name="resolved_acquired_area" widget="float" string="New Area"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Landowner List View (English Headers, No Aadhar/PAN) -->
    <record id="view_section15_landowner_tree" model="ir.ui.view">
        <field name="name">bhu.section15.landowner.list</field>
        <field name="model">bhu.landowner</field>
        <field name="arch" type="xml">
            <list string="Landowners">
                <field name="name" string="Full Name"/>
                <field name="company_id" string="Company"/>
                <field name="father_name" string="Father's Name"/>
                <field name="village_id" string="Village"/>
                <field name="tehsil_id" string="Tehsil"/>
                <field name="district_id" string="District"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Khasra Form View -->
    <record id="view_section15_objection_khasra_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.khasra.form</field>
        <field name="model">bhu.section15.objection.khasra</field>
        <field name="arch" type="xml">
            <form string="Khasra Resolution Changes / खसरा समाधान परिवर्तन">
                <sheet>
                    <group>
                        <field name="objection_id" invisible="1"/>
                        <field name="survey_id" readonly="1" options="{'no_create': True, 'no_open': True}" required="1"/>
                        <field name="khasra_number" readonly="1"/>
                        <field name="original_acquired_area" readonly="1" widget="float"/>
                        <field name="resolved_acquired_area" widget="float"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Section 15 Objection Survey Detail Tree View -->
    <record id="view_section15_objection_survey_detail_tree" model="ir.ui.view">
        <field name="name">bhu.section15.objection.survey_detail.list</field>
        <field name="model">bhu.section15.objection.survey_detail</field>
        <field name="arch" type="xml">
            <list string="Other Survey Details" create="0">
                <field name="has_well" string="Well?"/>
                <field name="well_type" string="Well Type"/>
                <field name="well_count" string="Well Count"/>
                <field name="has_tubewell" string="Tubewell?"/>
                <field name="tubewell_count" string="Tubewell Count"/>
                <field name="has_house" string="House?"/>
                <field name="house_type" string="House Type"/>
                <field name="house_area" string="House Area"/>
                <field name="has_shed" string="Shed?"/>
                <field name="shed_area" string="Shed Area"/>
                <field name="has_pond" string="Pond?"/>
            </list>
        </field>
    </record>

    <!-- Section 15 Objection Survey Detail Form View -->
    <record id="view_section15_objection_survey_detail_form" model="ir.ui.view">
        <field name="name">bhu.section15.objection.survey_detail.form</field>
        <field name="model">bhu.section15.objection.survey_detail</field>
        <field name="arch" type="xml">
            <form string="Other Survey Details / अन्य सर्वे विवरण">
                <sheet>
                    <field name="objection_id" invisible="1"/>
                    <field name="survey_id" invisible="1"/>
                    <group>
                        <group string="Well Details / कुआं विवरण">
                            <field name="has_well" widget="radio" options="{'horizontal': true}"/>
                            <field name="well_type" invisible="has_well != 'yes'"/>
                            <field name="well_count" invisible="has_well != 'yes'"/>
                        </group>
                        <group string="Tubewell Details / ट्यूबवेल विवरण">
                            <field name="has_tubewell" widget="radio" options="{'horizontal': true}"/>
                            <field name="tubewell_count" invisible="has_tubewell != 'yes'"/>
                        </group>
                    </group>
                    <group>
                        <group string="House Details / घर विवरण">
                            <field name="has_house" widget="radio" options="{'horizontal': true}"/>
                            <field name="house_type" invisible="has_house != 'yes'"/>
                            <field name="house_area" invisible="has_house != 'yes'"/>
                        </group>
                        <group string="Shed &amp; Pond / शेड और तालाब">
                            <field name="has_shed" widget="radio" options="{'horizontal': true}"/>
                            <field name="shed_area" invisible="has_shed != 'yes'"/>
                            <field name="has_pond" widget="radio" options="{'horizontal': true}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Update Section 15 Objection Action -->
    <record id="action_section15_objections" model="ir.actions.act_window">
        <field name="name">Section 15 Objections</field>
        <field name="res_model">bhu.section15.objection</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section15_objection_search"/>
    </record>
</odoo>
