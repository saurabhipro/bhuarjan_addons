<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tende_ai_work_experience_list" model="ir.ui.view">
        <field name="name">tende_ai.work_experience.list</field>
        <field name="model">tende_ai.work_experience</field>
        <field name="arch" type="xml">
            <list string="Work Experience" default_order="date_of_start desc">
                <field name="bidder_id" invisible="1"/>
                <field name="vendor_company_name" string="Vendor"/>
                <field name="name_of_work" string="Project Name"/>
                <field name="employer" string="Employer"/>
                <field name="location" string="Location"/>
                <field name="contract_amount_inr" string="Amount"/>
                <field name="date_of_start" string="Start"/>
                <field name="date_of_completion" string="End"/>
                <field name="completion_certificate" string="Certificate"/>
                <field name="attachment" string="Link"/>
            </list>
        </field>
    </record>

    <record id="action_tende_ai_work_experience" model="ir.actions.act_window">
        <field name="name">Work Experience</field>
        <field name="res_model">tende_ai.work_experience</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_tende_ai_work_experience_list"/>
    </record>
</odoo>

