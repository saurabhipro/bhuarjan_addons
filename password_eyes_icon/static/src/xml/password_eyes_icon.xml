<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="password_eyes_icon.PasswordEyesIcon" owl="1">
        <div class="o_field_password_eyes_icon d-flex align-items-center position-relative w-100">
            <input
                t-ref="passwordInput"
                t-att-type="inputType"
                class="o_input"
                t-att-id="props.id"
                t-att-value="state.localValue"
                t-att-readonly="props.readonly ? 'readonly' : None"
                t-att-placeholder="props.placeholder"
                t-on-change="onChange"
            />
            <span
                t-if="!props.readonly"
                t-att-class="'position-absolute end-0 me-2 fa ' + eyeIconClass"
                t-on-click.prevent.stop="togglePasswordVisibility"
                style="cursor: pointer;"
                title="Toggle visibility"
            />
        </div>
    </t>

    <t t-name="password_eyes_icon.PasswordEyesIconField" owl="1">
        <PasswordEyesIcon t-props="passwordIconProps"/>
    </t>

</templates> 