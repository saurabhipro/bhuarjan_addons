<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- SIA Team Member Line List View -->
    <record id="view_sia_team_member_line_list" model="ir.ui.view">
        <field name="name">bhu.sia.team.member.line.list</field>
        <field name="model">bhu.sia.team.member.line</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="member_type" column_invisible="1"/>
                <field name="name" string="Name / नाम" required="1" 
                       placeholder="Enter member name / सदस्य का नाम दर्ज करें"/>
                <field name="address" string="Address / पता" 
                       placeholder="Enter address / पता दर्ज करें"/>
                <field name="post" string="Post / पद" 
                       placeholder="Enter designation / पद दर्ज करें"/>
            </list>
        </field>
    </record>

    <!-- SIA Team List View -->
    <record id="view_sia_team_list" model="ir.ui.view">
        <field name="name">bhu.sia.team.list</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <list string="SIA Team" create="not groups='bhuarjan.group_bhuarjan_collector'">
                <field name="name" string="Team Name"/>
                <field name="project_id" string="Project"/>
                <field name="requiring_body_id" string="Requiring Body"/>
                <field name="state" widget="badge" string="Status"
                       decoration-success="state == 'approved'"
                       decoration-info="state == 'submitted'"
                       decoration-warning="state == 'draft'"
                       decoration-danger="state == 'send_back'"/>
            </list>
        </field>
    </record>

    <!-- SIA Team Form View -->
    <record id="view_sia_team_form" model="ir.ui.view">
        <field name="name">bhu.sia.team.form</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <form string="SIA Team / SIA टीम" edit="not (state == 'approved' or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit))">
                    <div class="row w-100">
                        <div class="col w-100">
                                <!-- Approve Button (Collector only) -->
                            <button name="action_approve" string="Approve" type="object" class="btn-primary" 
                                    icon="fa-check"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted' or not collector_signed_file"
                                    confirm="Are you sure want to approve this record."/>
                            
                            <!-- Send Back Button (Collector only) -->
                            <button name="action_send_back" string="Send Back" type="object" class="btn-secondary" 
                                    icon="fa-arrow-left"
                                    groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'submitted'"
                                    confirm="Are you sure want to submit this record."/>
                            
                            <!-- Create Section 4 Notification (SDM only) - Hidden for SIA exempt projects -->
                            <button name="action_create_section4_notification" string="Create Section 4 Notification" 
                                    type="object" class="btn-primary" icon="fa-file-text"
                                    groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin"
                                    invisible="state != 'approved' or is_sia_exempt == 'yes'"
                                    help="Create Section 4 Notifications for all villages in this SIA Team"
                                    confirm="Are you sure want to Create Section 4 Notification ."/>
                        

                            <!-- Reset to Draft button (for sent back records - allows SDM to resubmit) -->
                            <button name="action_draft" string="Resubmit" type="object" class="btn-primary" 
                                    icon="fa-refresh"
                                    groups="bhuarjan.group_bhuarjan_sdm"
                                    invisible="state != 'send_back'"/>
                        </div>
                        <div class="col text-right" style="text-align:right; width:100% ">
                            <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,send_back" options="{'clickable': True}" 
                            confirm="Are you sure want to submit this record." class="oe_right"/>
                        </div>
                    </div>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-users" style="margin-right: 10px;"></i>SIA Team / SIA टीम
                        </h1>
                    </div>
                    <field name="is_sdm" invisible="1"/>
                    <field name="is_collector" invisible="1"/>
                    <field name="is_admin" invisible="1"/>
                    <field name="is_approved_readonly" invisible="1"/>
                    <field name="can_sdm_edit" invisible="1"/>
                    <field name="can_collector_edit" invisible="1"/>
                    
                    <!-- Kramank Field - Visible and Optional -->
                    <group>
                        <field name="kramank" placeholder="Enter क्रमांक (Reference Number)" 
                               readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit)"/>
                    </group>
                    
                    <!-- Hidden Fields (Auto-populated from context) -->
                    <group invisible="1">
                        <field name="pending_with" string="Pending With / लंबित" readonly="1"/>
                        <field name="project_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="village_ids" widget="many2many_tags" readonly="1"
                               placeholder="Affected villages (auto-populated from project)..."
                               options="{'no_create_edit': True}"
                               context="{'default_project_id': project_id}" force_save="1"/>
                        <field name="is_sia_exempt" readonly="1"
                               string="कि क्या इस परियोजना को सामाजिक समाघत अध्ययन से छूट प्राप्त है ?"/>
                        <field name="requiring_body_id" required="1" readonly="1" options="{'no_open': True}"/>
                        <field name="tehsil_ids" widget="many2many_tags" readonly="1"
                               placeholder="Tehsils (from selected villages)..."
                               options="{'no_create_edit': True}" force_save="1"/>
                        <field name="total_area_acquired" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Team Members / टीम सदस्य">
                            <style>
                                .o_field_one2many .o_list_table {
                                    border: 2px dashed #8B4513 !important;
                                    border-radius: 5px;
                                    background-color: #f9f9f9;
                                }
                                .o_field_one2many .o_list_table thead {
                                    background-color: #8B4513 !important;
                                    color: white !important;
                                }
                                .o_field_one2many .o_field_x2many_list_row_add a {
                                    color: #8B4513 !important;
                                    font-weight: bold;
                                }
                            </style>
                            
                            <!-- (क) Non-Government Social Scientist -->
                            <group string="(क) NON-GOVERNMENT SOCIAL SCIENTIST / गैर शासकीय सामाजिक वैज्ञानिक">
                                <div class="alert alert-info" role="alert" style="margin: 5px 0; padding: 8px;">
                                    <i class="fa fa-info-circle"/> Click "Add a line" below to add team members
                                </div>
                                <field name="non_govt_social_scientist_line_ids" nolabel="1"
                                       readonly="state == 'approved' or is_sia_exempt == 'yes'"
                                       context="{'default_member_type': 'non_govt_social_scientist'}"
                                       placeholder="Click 'Add a line' to add Non-Government Social Scientists"/>
                            </group>
                            
                            <!-- (ख) Representatives of Local Bodies -->
                            <group string="(ख) REPRESENTATIVES OF LOCAL BODIES / स्थानीय निकायों के प्रतिनिधि">
                                <div class="alert alert-info" role="alert" style="margin: 5px 0; padding: 8px;">
                                    <i class="fa fa-info-circle"/> Click "Add a line" below to add team members
                                </div>
                                <field name="local_bodies_representative_line_ids" nolabel="1"
                                       readonly="state == 'approved' or is_sia_exempt == 'yes'"
                                       context="{'default_member_type': 'local_bodies_representative'}"
                                       placeholder="Click 'Add a line' to add Representatives of Local Bodies"/>
                            </group>
                            
                            <!-- (ग) Resettlement Expert -->
                            <group string="(ग) RESETTLEMENT EXPERT / पुनर्व्यवस्थापन विशेषज्ञ">
                                <div class="alert alert-info" role="alert" style="margin: 5px 0; padding: 8px;">
                                    <i class="fa fa-info-circle"/> Click "Add a line" below to add team members
                                </div>
                                <field name="resettlement_expert_line_ids" nolabel="1"
                                       readonly="state == 'approved' or is_sia_exempt == 'yes'"
                                       context="{'default_member_type': 'resettlement_expert'}"
                                       placeholder="Click 'Add a line' to add Resettlement Experts"/>
                            </group>
                            
                            <!-- (घ) Technical Expert -->
                            <group string="(घ) TECHNICAL EXPERT / परियोजना से संबंधित विषय का तकनीकि विशेषज्ञ">
                                <div class="alert alert-info" role="alert" style="margin: 5px 0; padding: 8px;">
                                    <i class="fa fa-info-circle"/> Click "Add a line" below to add team members
                                </div>
                                <field name="technical_expert_line_ids" nolabel="1"
                                       readonly="state == 'approved' or is_sia_exempt == 'yes'"
                                       context="{'default_member_type': 'technical_expert'}"
                                       placeholder="Click 'Add a line' to add Technical Experts"/>
                            </group>
                            
                            <group string="(ड.) Tehsildar (Convener) / प्रभावित क्षेत्र का तहसीलदार">
                                <field name="tehsildar_domain" invisible="1"/>
                                <field name="tehsildar_id" nolabel="1"
                                       readonly="is_approved_readonly or (state == 'submitted' and not can_collector_edit) or (state in ('draft', 'send_back') and not can_sdm_edit) or is_sia_exempt == 'yes'"
                                       placeholder="Select Tehsildar (Convener)..."
                                       options="{'no_quick_create': True, 'no_create':True, 'no_edit':True}" domain="tehsildar_domain"/>
                            </group>
                        </page>
                        <page string="SIA Report / SIA रिपोर्ट">
                            <style>
                                @media (max-width: 768px) {
                                    .responsive-sia-group {
                                        flex-direction: column !important;
                                    }
                                    .responsive-sia-group > * {
                                        width: 100% !important;
                                        margin-bottom: 15px !important;
                                    }
                                }
                                .responsive-sia-group {
                                    display: flex;
                                    flex-wrap: wrap;
                                    gap: 50px;
                                }
                                .responsive-sia-group > * {
                                    flex: 1;
                                    min-width: 300px;
                                }
                            </style>
                            <!-- SDM Section - Clean Layout -->
                            <group string="SIA Documents / SIA दस्तावेज़" groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_admin" invisible="is_sia_exempt == 'yes'">
                                <!-- Download SIA Proposal Button -->
                                <button name="action_download_proposal_report" string="SIA Proposal" type="object" 
                                        class="btn-primary" icon="fa-download"
                                        title="Download SIA Proposal (Collector's Order Template)"
                                        style="margin: 5px 0;"/>
                                
                                <!-- Upload SDM Signed SIA -->
                                <field name="sdm_signed_file" filename="sdm_signed_filename" 
                                       string="Upload SDM Signed SIA"
                                       widget="binary"
                                       readonly="state != 'draft'"
                                       placeholder="Upload Signed SIA Proposal"
                                       help="Upload the signed SIA document from SDM"/>
                                <field name="sdm_signed_filename" invisible="1"/>
                                
                                <!-- Download SDM Signed SIA Button (appears after upload) -->
                                <button name="action_download_sdm_signed_file" type="object" 
                                        class="btn-primary"
                                        title="Download SDM Signed Proposal"
                                        invisible="not sdm_signed_file"
                                        style="margin: 5px 0;">
                                    <i class="fa fa-download" style="margin-right: 5px;"/>
                                    <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                    SIA SDM Signed
                                </button>
                                
                                <!-- Submit to Collector Button (appears after SDM Signed is uploaded) -->
                                <button name="action_submit" string="Submit to Collector" 
                                        type="object" 
                                        class="btn-primary" 
                                        icon="fa-paper-plane"
                                        confirm="Are you sure you want to submit this to Collector?"
                                        invisible="not sdm_signed_file or state != 'draft'"
                                        style="margin: 5px 0;"/>
                            </group>
                            
                            <!-- Collector Section -->
                            <group string="Collector Section / कलेक्टर अनुभाग" groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin" style="margin-top: 40px;">
                                 <group string="Download SIA Documents"></group>
                                 <group string="Upload Collector Signed SIA"></group>
                            </group>


                            <div class="responsive-sia-group row"  groups="bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin" >
                                <div class="col" string="Download SIA Documents">
                                    <div class="row" style="padding: 10px 0;">
                                        <div class="col" style="padding: 0 10px;">
                                            <!-- Download SIA Order (SDM's Proposal) -->
                                            <button name="action_download_sia_order" 
                                                    string="SIA Order" type="object" 
                                                    class="btn-primary" icon="fa-download"
                                                    title="Download SIA Order (SDM's Proposal)"
                                                    invisible="is_sia_exempt == 'yes'"
                                                    style="width: 100%; margin-bottom: 10px;"/>
                                        </div>
                                        <div class="col" style="padding: 0 10px;">
                                            <!-- Download SDM Signed SIA -->
                                            <button name="action_download_sdm_signed_file" 
                                                    type="object" 
                                                    class="btn-primary"
                                                    title="Download SDM Signed Proposal"
                                                    invisible="not sdm_signed_file"
                                                    style="width: 100%;">
                                                <i class="fa fa-download" style="margin-right: 5px;"/>
                                                <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                                SIA SDM Signed
                                            </button>
                                        </div>
                                        <div class="col" style="padding: 0 10px;">
                                            <!-- Download Collector Signed SIA -->
                                            <button name="action_download_collector_signed_file"
                                                    type="object" 
                                                    class="btn-primary"
                                                    title="Download Collector Signed SIA"
                                                    invisible="not collector_signed_file"
                                                    style="width: 100%;">
                                                <i class="fa fa-download" style="margin-right: 5px;"/>
                                                <i class="fa fa-check-circle" style="margin-right: 5px;"/>
                                                SIA Collector Signed
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col" string="">
                                    <div class="row">
                                        <div class="col-6">
                                            <!-- Upload Collector Signed File (editable only in submitted state) -->
                                            <field name="collector_signed_file" filename="collector_signed_filename" 
                                                string="Upload Collector Signed SIA"
                                                widget="binary"
                                                readonly="state != 'submitted'"
                                                placeholder="Upload SIA Approval Letter"
                                                help="Upload the signed SIA approval document from Collector"/>
                                        </div>
                                        <div class="col-6">
                                            <field name="collector_signed_filename" invisible="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin,base.group_system"/>
            </form>
        </field>
    </record>

    <!-- SIA Team Search View -->
    <record id="view_sia_team_search" model="ir.ui.view">
        <field name="name">bhu.sia.team.search</field>
        <field name="model">bhu.sia.team</field>
        <field name="arch" type="xml">
            <search string="Search SIA Teams">
                <field name="name"/>
                <field name="project_id"/>
                <field name="team_member_ids"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Update SIA Team Action -->
    <record id="action_create_sia_team" model="ir.actions.act_window">
        <field name="name">SIA Team</field>
        <field name="res_model">bhu.sia.team</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_sia_team_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SIA Team!
            </p>
            <p>
                Create SIA (Social Impact Assessment) teams by adding multiple users under selected projects.
            </p>
        </field>
    </record>
</odoo>

