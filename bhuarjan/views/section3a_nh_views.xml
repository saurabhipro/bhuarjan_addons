<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Section 3A (NH) List View -->
    <record id="view_section3a_nh_list" model="ir.ui.view">
        <field name="name">bhu.section3a.nh.list</field>
        <field name="model">bhu.section3a.nh</field>
        <field name="arch" type="xml">
            <list string="Section 3A (NH)" delete="1">
                <field name="name" string="Reference"/>
                <field name="department_id" string="Department"/>
                <field name="project_id" string="Project"/>
                <field name="village_id" string="Village"/>
                <field name="create_date" string="Created On"/>
            </list>
        </field>
    </record>

    <!-- Section 3A (NH) Form View -->
    <record id="view_section3a_nh_form" model="ir.ui.view">
        <field name="name">bhu.section3a.nh.form</field>
        <field name="model">bhu.section3a.nh</field>
        <field name="arch" type="xml">
            <form string="Section 3A (NH) / धारा 3ए (राष्ट्रीय राजमार्ग)" 
                  edit="not groups='bhuarjan.group_bhuarjan_collector'">
                <sheet>
                    <div class="oe_title" style="margin-bottom: 10px; padding-bottom: 8px;">
                        <h1 style="font-size: 28px; font-weight: 700; color: #8B4513; margin: 0;">
                            <i class="fa fa-file-text-o" style="margin-right: 10px;"></i>Section 3A (NH) / धारा 3ए (राष्ट्रीय राजमार्ग)
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="village_domain" invisible="1"/>
                            <field name="project_domain" invisible="1"/>
                            <div class="mt-2 mb-3 p-2 rounded w-100" style="background-color: #e9ecef; border-left: 4px solid #8B4513; color: #495057; clear: both;">
                                 <i class="fa fa-info-circle me-1"></i>
                                 Creating Section 3A (NH) for Department <strong><field name="department_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong>, 
                                 Project <strong><field name="project_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong> and 
                                 Village <strong><field name="village_id" readonly="1" options="{'no_open': True}" class="d-inline"/></strong>
                            </div>
                            <group invisible="1">
                                <field name="department_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                                <field name="project_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                                <field name="village_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                            </group>
                        </group>
                    </group>
                    <group string="Files / फ़ाइलें">
                        <field name="sdm_signed_file" filename="sdm_signed_filename"/>
                        <field name="sdm_signed_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="notes" placeholder="Enter any additional notes..."/>
                    </group>
                </sheet>
                <chatter groups="bhuarjan.group_bhuarjan_ri,bhuarjan.group_bhuarjan_nayab_tahsildar,bhuarjan.group_bhuarjan_tahsildar,bhuarjan.group_bhuarjan_sdm,bhuarjan.group_bhuarjan_additional_collector,bhuarjan.group_bhuarjan_collector,bhuarjan.group_bhuarjan_admin"/>
            </form>
        </field>
    </record>

    <!-- Section 3A (NH) Search View -->
    <record id="view_section3a_nh_search" model="ir.ui.view">
        <field name="name">bhu.section3a.nh.search</field>
        <field name="model">bhu.section3a.nh</field>
        <field name="arch" type="xml">
            <search string="Section 3A (NH)">
                <field name="name"/>
                <field name="department_id"/>
                <field name="project_id"/>
                <field name="village_id"/>
            </search>
        </field>
    </record>

    <!-- Section 3A (NH) Action -->
    <record id="action_section3a_nh" model="ir.actions.act_window">
        <field name="name">Section 3A (NH)</field>
        <field name="res_model">bhu.section3a.nh</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_section3a_nh_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Section 3A (NH) record!
            </p>
        </field>
    </record>
</odoo>
